<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="pdp_modifier_purchase_report.report_purchaseorder_per_supplier_document">
        <t t-set="no" t-value="1"/>
        <div class="page">
            <div class="oe_structure" />
            <div class="row">
                   <div class="col-xs-4">
                       <strong>Printed : </strong><span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d-%b-%Y %H:%M')"/>
                   </div>
                   <div class="col-xs-8">
                       <h4>
                           <strong>PURCHASE ORDER PER SUPPLIER</strong>
                       </h4>
                   </div>
                   <div class="col-xs-4">
                       <strong>Page : </strong><span t-esc="no"/>
                   </div>
                   <div class="col-xs-7">
                       <strong>Period : </strong> <span t-field="doc.from_date"  t-field-options='{"format": "d MMMM y 00:00"}'/> upto <span t-field="doc.to_date"  t-field-options='{"format": "d MMMM y 23:59"}'/>
                   </div>
            </div>
            <table class="table table-condensed">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>POD No</th>
                        <th>Item Code</th>
                        <th>Item Name</th>
                        <th>Cur</th>
                        <th>Qty</th>
                        <th>Price</th>
                        <th>Disc</th>
                        <th>Tax</th>
                        <th>Total</th>
                   </tr>
                </thead>
                <tbody>
                    <t t-set="final_discount" t-value="0" />
                    <t t-set="final_tax" t-value="0" />
                    <t t-set="final_net_total" t-value="0" />
                    <t t-set="currency" t-value="0" />
                    <t t-foreach="doc.get_order_per_customer()" t-as="record" style="page-break-inside: avoid;">
	                    <t t-set="discount" t-value="0" />
	                    <t t-set="tax" t-value="0" />
	                    <t t-set="net_total" t-value="0" />
                        <tr>
	                        <td colspan="10" style="color: blue;"><b><h4><span t-esc="record"/></h4></b></td>
	                    </tr>
	                    <t t-foreach="record_value" t-as="line">
	                    <t t-set="currency" t-value="line['company_id'].currency_id.symbol" />
	                    <tr>
                            <td><span t-esc="line['date_order']" /></td>
                            <td><span t-esc="line['po_name']" /></td>
                            <td><span t-esc="line['default_code']" /></td>
                            <td><span t-esc="line['product_name']" /></td>
                            <td><span t-esc="line['currency']" /></td>
                            <td><span t-esc="line['qty']" /></td>
                            <td><!--span t-esc="currency"/--> <span t-esc="'{0:,.2f}'.format(line['price_unit'])" /></td>
                            <td><span t-esc="'{0:,.2f}'.format(line['discount'])" /></td>
                            <td><span t-esc="'{0:,.2f}'.format(line['tax'])" /></td>
                            <td><span t-esc="'{0:,.2f}'.format(line['total'])" /></td>
                        </tr>
	                    <t t-set="discount" t-value="discount + line['discount']" />
	                    <t t-set="tax" t-value="tax + line['tax']" />
	                    <t t-set="net_total" t-value="net_total + line['total']" />
                        </t>
                        <tr>
                            <td colspan="7"><strong>Sub Total</strong></td>
                            <td><strong><!--span t-esc="currency"/--> <span t-esc="'{0:,.2f}'.format(discount)" /></strong></td>
                            <td><strong><span t-esc="'{0:,.2f}'.format(tax)" /></strong></td>
                            <td><strong><span t-esc="'{0:,.2f}'.format(net_total)" /></strong></td>
                        </tr>
                        <t t-set="final_discount" t-value="final_discount + discount" />
                        <t t-set="final_tax" t-value="final_tax + tax" />
                        <t t-set="final_net_total" t-value="final_net_total + net_total" />
                    </t>
                    <tr>
                        <td colspan="7"><strong>Grand Total</strong></td>
                        <td><strong><!--span t-esc="currency"/--> <span t-esc="'{0:,.2f}'.format(final_discount)"></span></strong></td>
                        <td><strong><span t-esc="'{0:,.2f}'.format(final_tax)"></span></strong></td>
                        <td><strong><span t-esc="'{0:,.2f}'.format(final_net_total)"></span></strong></td>
                    </tr>
                </tbody>
            </table>
        </div>
        <t t-set="no" t-value="no+1"/>
    </template>

    <template id="pdp_modifier_purchase_report.report_purchaseorder_per_supplier">
         <t t-foreach="docs" t-as="doc">
             <t t-call="pdp_modifier_purchase_report.report_purchaseorder_per_supplier_document" />
         </t>
    </template>

</odoo>
