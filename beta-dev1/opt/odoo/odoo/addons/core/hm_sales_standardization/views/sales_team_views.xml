    <record id="sales_team_form_view_in_crm" model="ir.ui.view">
      <field name="name">crm.team.form.inherit</field>
      <field name="model">crm.team</field>
      <field name="inherit_id" ref="sales_team.crm_team_view_form"/>
      <field name="arch" type="xml">
          <xpath expr="//form/sheet/notebook" position="inside">
            <page name="sales_target" string="Sales Target">
               <group>
                    <field name="year"/>
                </group>
                <field name="sales_target_line_ids" options="{'not_delete': True}">
                </field>
            </page>
          </xpath>
          <xpath expr="//page[@name='more_info']" position="inside">
            <group>
                <field name="sales_targets" options="{'not_delete': True}"></field>
            </group>
          </xpath>
      </field>
    </record>

