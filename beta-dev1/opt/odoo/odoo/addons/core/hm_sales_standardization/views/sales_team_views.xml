  <data>
        <record id="sales_target_form_view" model="ir.ui.view">
          <field name="name">sales.target.form</field>
          <field name="model">sales.target</field>
          <field name="arch" type="xml">
              <form>
                  <label for="year"/>
                  <field name="year" readonly="1"/>
                  <group>
                    <group string="Sales Target">
                        <field name="t_january" widget="monetary" />
                        <field name="t_february" widget="monetary" />
                        <field name="t_march" widget="monetary"/>
                        <field name="t_april" widget="monetary"/>
                        <field name="t_may" widget="monetary"/>
                        <field name="t_june" widget="monetary"/>
                        <field name="t_july" widget="monetary"/>
                        <field name="t_august" widget="monetary"/>
                        <field name="t_september" widget="monetary"/>
                        <field name="t_october" widget="monetary"/>
                        <field name="t_november" widget="monetary"/>
                        <field name="t_december" widget="monetary"/>
                    </group>
                    <group string="Actual Sales Figure">
                        <field name="january" widget="monetary" readonly="1"/>
                        <field name="february" widget="monetary" readonly="1"/>
                        <field name="march" widget="monetary" readonly="1"/>
                        <field name="april" widget="monetary" readonly="1"/>
                        <field name="may" widget="monetary" readonly="1"/>
                        <field name="june" widget="monetary" readonly="1"/>
                        <field name="july" widget="monetary" readonly="1"/>
                        <field name="august" widget="monetary" readonly="1"/>
                        <field name="september" widget="monetary" readonly="1"/>
                        <field name="october" widget="monetary" readonly="1"/>
                        <field name="november" widget="monetary" readonly="1"/>
                        <field name="december" widget="monetary" readonly="1"/>
                    </group>
                  </group>
            </form>
          </field>
      </record>
