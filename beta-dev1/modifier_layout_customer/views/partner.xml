<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="view_partner_form_modifier_field_inherit" model="ir.ui.view">
            <field name="name">view.partner.form.modifier.field.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <!--<field name="parent_id" position="after">-->
                <!--<field name="pelanggan" class="modifiercustomer pelanggan_newline" placeholder="Kode Pelanggan"/>-->
                <!--</field>-->

                <field name="phone" widget="phone" position="replace">
                    <field name="phone" string="Telepon 1" placeholder="TELEPON 1"/>
                </field>

                <!--<field name="phone" position="after">
                    <field name="phone2" string="Telepon 2" placeholder="TELEPON 2"/>
                </field>-->

                <field name="parent_id" position="attributes">
                    <attribute name="class">modifiercustomer</attribute>
                </field>

                <xpath expr="//form/sheet/notebook/page[@name='sales_purchases']/group[1]/group[@name='sale']" position="before">
                    <group colspan="12">
                        <field name="vendor_localization" widget="radio" options="{'horizontal': true}" string="Type"/>
                    </group>
                </xpath>


                <xpath expr="//field[@name='child_ids']" position="attributes">
                    <attribute name="context">
                        {'default_parent_id': active_id, 'default_street': street, 'default_street2': street2,
                        'default_city_id': city_id, 'default_state_id': state_id, 'default_zip': zip,
                        'default_country_id': country_id, 'default_supplier': supplier, 'default_customer': customer,
                        'default_vendor_localization' : vendor_localization, 'default_lang': lang,
                        'default_blok2':blok2, 'default_nomor2':nomor2,
                        'default_rt2':rt2,'default_rw2':rw2,'default_kecamatan_id2' : kecamatan_id2,
                        'default_kelurahan_id2' : kelurahan_id2, 'default_name': '-', 'default_email': '-',
                        'default_phone': '-', 'default_phone2': '-', 'default_mobile': '-', 'default_comment': '-', }
                    </attribute>
                </xpath>

                <!-- For vendor address view in child ids -->
                <xpath expr="//notebook/page/field/form/sheet/group/group/div/div[@name='div_address']" position="replace">
                    <field name="vendor_localization" invisible="1"/>
                    <field name="parent_id" invisible="1"/>
                    <div class="o_address_format" name="div_address" attrs="{'invisible':[('vendor_localization','=','foreign')]}">

                        <field name="street" style="text-transform: uppercase;" placeholder="ALAMAT..." class="text_value_color o_address_street"/>
                        <field name="street2" placeholder="STREET 2..." class="text_value_color o_address_street" invisible="1"/>

                        <div>
                            <table width="100%">
                                <tr width="100%" class="text_value_color">
                                    <td style="border:none; width:7%">
                                        <h4 style="font-size: 13px;">Blok</h4>
                                    </td>
                                    <td style="border:none;width:3%">:</td>
                                    <td style="border:none; padding-top:5px; width:40%">
                                        <span>
                                            <field name="blok2" style="text-transform: uppercase;" placeholder="BlOK"/>
                                        </span>
                                    </td>

                                    <td style="border:none; padding-left:5px; width:7%">
                                        <h4 style="font-size: 13px;">Nomor</h4>
                                    </td>
                                    <td style="border:none;width:3%">:</td>
                                    <td style="border:none; padding-top:5px; width:40%">
                                        <span>
                                            <field name="nomor2" style="text-transform:uppercase" placeholder="NO"/>
                                        </span>
                                    </td>
                                </tr>

                                <tr width="100%" class="text_value_color">
                                    <td style="border:none; width:7%">
                                        <h4 style="font-size: 13px;">RT</h4>
                                    </td>
                                    <td style="border:none;width=3%">:</td>
                                    <td style="border:none; padding-top:5px; width:40%">
                                        <span>
                                            <field name="rt2" style="text-transform:uppercase" placeholder="RT"/>
                                        </span>
                                    </td>

                                    <td style="border:none; padding-left:5px; width:7%">
                                        <h4 style="font-size: 13px;">RW</h4>
                                    </td>
                                    <td style="border:none;width=3%">:</td>
                                    <td style="border:none; padding-top:5px; width:40%">
                                        <span>
                                            <field name="rw2" style="text-transform:uppercase" placeholder="RW"/>
                                        </span>
                                    </td>
                                </tr>
                            </table>
                        </div>

                        <!--<div class="row oe_read_only">-->
                        <p style="display: inline;" class="oe_read_only">KEL.</p>
                        <field name="kelurahan_id2_related" style="text-transform: uppercase;" class="oe_read_only o_address_state"/>
                        <p style="display: inline;" class="oe_read_only">KEC.</p>
                        <field name="kecamatan_id2_related" style="text-transform: uppercase;" class="oe_read_only o_address_state"/>
                        <br/>
                        <p style="display: inline;" class="oe_read_only">KOTA/KAB.</p>
                        <field name="city_id_related" style="text-transform: uppercase;" class="oe_read_only o_address_state"/>
                        <br/>
                        <p style="display: inline;" class="oe_read_only">PROV.</p>
                        <field name="state_id_related" style="text-transform: uppercase;" class="oe_read_only o_address_state"/>
                        <field name="zip_related" style="text-transform: uppercase;" class="oe_read_only o_address_state"/>
                        <!--</div>-->


                        <div class="row oe_edit_only">
                            <div>
                                <div class="col-xs-6">
                                    <label for="state_id" string="Propinsi" style="font-weight:600"/>
                                    <br/>
                                    <field name="state_id" style="text-transform: uppercase;" placeholder="PROVINSI" options="{&quot;no_open&quot;: True}" context="{'country_id': country_id, 'zip': zip, 'order_display': 'name' }"/>
                                </div>
                                <div class="col-xs-6">
                                    <label for="city_id" string="Kabupaten/Kota" style="font-weight:600"/>
                                    <br/>
                                    <field name="city_id" style="text-transform: uppercase;" placeholder="KOTA/KAB" domain="[('state_id','=',state_id)]" options="{&quot;no_open&quot;: True}"/>
                                </div>
                            </div>
                            <div>
                                <div class="col-xs-6">
                                    <label for="kecamatan_id2" string="Kecamatan" style="font-weight:600"/>
                                    <br/>
                                    <field name="kecamatan_id2" placeholder="KECAMATAN" style="text-transform: uppercase;" domain="[('kota_id','=',city_id)]" options="{&quot;no_open&quot;: True}"/>
                                </div>
                                <div class="col-xs-6">
                                    <label for="kelurahan_id2" string="Kelurahan" style="font-weight:600"/>
                                    <br/>
                                    <field name="kelurahan_id2" style="text-transform: uppercase;" placeholder="KELURAHAN" domain="[('kecamatan_id','=',kecamatan_id2)]" options="{&quot;no_open&quot;: True}"/>
                                </div>
                            </div>
                            <div>
                                <div class="col-xs-6">
                                    <label for="zip" string="Kode Pos" style="font-weight:600"/>
                                    <br/>
                                    <field name="zip" readonly="1" options="{&quot;no_open&quot;: True}"/>
                                </div>
                                <div class="col-xs-6">
                                    <field name="country_id" placeholder="COUNTRY" class="o_address_country" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}" invisible="1"/>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="o_address_format" attrs="{'invisible':[('vendor_localization','=','local')]}">
                                <label for="foreign_street" string="Nama Jalan" style="font-weight:600"/>
                                <field name="foreign_street" placeholder="NAMA JALAN" style="text-transform:uppercase" class="o_address_street text_value_street" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>

                                <field name="street2" placeholder="STREET 2..." style="text-transform:uppercase" class="o_address_street" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}" invisible="1"/>

                                <div>
                                    <div class="row">
                                        <div class="col-xs-4">
                                            <label for="nomor_rumah" string="Nomor Rumah" style="font-weight:600"/>
                                            <br/>
                                            <field name="nomor_rumah"/>
                                        </div>
                                        <div class="col-xs-4">
                                            <label for="level_no" string="Level No" style="font-weight:600"/>
                                            <br/>
                                            <field name="level_no"/>
                                        </div>
                                        <div class="col-xs-4">
                                            <label for="unit_no" string="Unit No" style="font-weight:600"/>
                                            <br/>
                                            <field name="unit_no"/>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
