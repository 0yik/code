                            <div>
                                <span>
                                    <field name="name"/>
                                </span>
                            </div>
                            <div>
                                <span>
                                    <field name="mobile"/>
                                </span>
                            </div>
                            <div>
                                <span>
                                    <field name="email"/>
                                </span>
                            </div>
                        </div>
                        <div attrs="{'invisible': [('type', '==', 'contact')]}">
