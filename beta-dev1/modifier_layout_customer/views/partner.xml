            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.res_partner_kanban_view"/>
            <field name="arch" type="xml">
                <xpath expr="//kanban/templates/t/div/div[@class='oe_kanban_details']" position="replace">
                    <div style="font-size: 20px;padding:5px;padding-left:70px ! important;" class="oe_partner_heading">
                        <strong>
