                            </div>
                            <div>
                                <span t-if="record.city_id.raw_value">KOTA/KAB.
                                    <field name="city_id"/>
                                </span>
                                <!--<field name="city_id"/>-->
                            </div>
                            <div>
                                <span t-if="record.state_id.raw_value">PROV.
                                    <field name="state_id"/>
                                </span>
                                <span t-if="record.zip.raw_value">
                                    <field name="zip"/>
                                </span>
                                <!-- <span t-if="record.kodepos.raw_value">
                                    <field name="kodepos"/>
                                </span> -->
                                <!--<field name="state_id"/>
                                <field name="zip"/>
                                <field name="kodepos"/>-->
                            </div>
                            <div>
                                <span>
                                    <field name="mobile"/>
                                </span>
                            </div>
                        </div>
                    </div>
                </xpath>

                <xpath expr="//notebook/page/field/form/sheet/group/group/field[@name='phone']" position="replace">
                    <field name="phone" style="text-transform:uppercase" string="Telepon 1"/>
                </xpath>

                <xpath expr="//notebook/page/field/form/sheet/group/group/field[@name='phone']" position="after">
                    <field name="phone2" style="text-transform:uppercase" string="Telepon 2" attrs="{'invisible': [('type','=', 'contact')]}"/>
                </xpath>

                <field name="title" position="attributes">
                    <attribute name="string">Gelar</attribute>
                </field>

                <field name="lang" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>

                <xpath expr="//h1" position="replace">
                    <h1 class="modifiercustomer">
                        <field name="name" default_focus="1" style="text-transform:uppercase; width: 165%;" placeholder="NAME" class="customername" attrs="{'required' : [('type', '=', 'contact')]}"/>
                    </h1>
                </xpath>

                <xpath expr="//notebook/page/field/form/sheet/group/group/field[@name='title']" position="replace">
                    <field name="title" style="text-transform:uppercase" placeholder="e.g. Mr." attrs="{'invisible': [('type','&lt;&gt;', 'contact')]}"/>
                </xpath>

                <xpath expr="//notebook/page/field/form/sheet/group/group/field[@name='function']" position="replace">
                    <field name="function" style="text-transform:uppercase" placeholder="e.g. SALES DIRECTOR" attrs="{'invisible': [('type','&lt;&gt;', 'contact')]}"/>
                </xpath>

                <xpath expr="//notebook/page/field/form/sheet/group/group/field[@name='email']" position="replace">
                    <field name="email" style="text-transform:uppercase"/>
                </xpath>

                <xpath expr="//notebook/page/field/form/sheet/group/group/field[@name='comment']" position="replace">
                    <field name="comment" style="text-transform:uppercase" placeholder="INTERNAL NOTE..."/>
                </xpath>

                <xpath expr="//notebook/page/field/form/sheet/group/group/field[@name='name']" position="replace">
                    <field name="name" style="text-transform:uppercase" class="text_value_name" string="Contact Name" attrs="{'required' : [('type', '=', 'contact')]}"/>
                </xpath>

                <xpath expr="//notebook/page/field/form/sheet/group/group/field[@name='mobile']" position="replace">
                    <field name="mobile" class="text_value_mobile" style="text-transform:uppercase" widget="phone"/>
                </xpath>

