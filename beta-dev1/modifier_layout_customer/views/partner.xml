                <xpath expr="//form/sheet/notebook/page/field[@name='child_ids']/kanban/templates/t/div/div[@class='oe_kanban_details']" position="replace">
                    <div class="oe_kanban_details" style="text-transform:uppercase;font-weight: bold;">
