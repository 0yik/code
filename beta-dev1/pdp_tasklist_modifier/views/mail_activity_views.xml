<?xml version="1.0"?>
<odoo>


    <record id="mail_activity_view_form_popup_pdp" model="ir.ui.view">
        <field name="name">mail.activity.view.form.popup.pdp</field>
        <field name="model">mail.activity</field>
        <field name="inherit_id" ref="task_list_manager.mail_activity_view_form_popup"/>
        <field name="arch" type="xml">
             <field name="user_id" position="after">
                <field name="department_id"/>
                <field name="employee_ids" widget="many2many_tags" domain="[('department_id','=',department_id)]"/>
             </field>
             <field name="user_id" position="attributes">
                <attribute name="invisible">1</attribute>
             </field>
        </field>
    </record>

</odoo>
