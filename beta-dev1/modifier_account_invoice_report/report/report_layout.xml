<template id="external_invoice_layouts">
    <!-- Multicompany -->
    <t t-if="not o and doc">
        <t t-set="o" t-value="doc"/>
    </t>
    <t t-if="o and 'company_id' in o">
        <t t-set="company" t-value="o.company_id"></t>
    </t>
    <t t-if="not o or not 'company_id' in o">
        <t t-set="company" t-value="res_company"></t>
    </t>
    <t t-call="modifier_account_invoice_report.external_invoice_custom_header" />
    <t t-raw="0" />
    <t t-call="modifier_account_invoice_report.external_layout_footer" />
</template>

<template id="external_invoice_custom_header">
      <div class="header" >
        <style type="text/css">
            /* Declare fonts */
            @font-face {
                font-family:DKJambo;
                src: url(/modifier_account_invoice_report/static/src/font/DK_Jambo.ttf) format('truetype');
                font-weight: normal;
                font-style: normal;
            }
        </style>
        <div class="row" >
            <!-- temporary fix we don't have logo right now -->
            <div class="col-xs-9">
               <img src="/modifier_account_invoice_report/static/src/img/ccm_logo.png" width="700" height="150" />
            </div>
            <!--
            <div class="col-xs-5 text-left" style="margin-top:10px;font-size:25pt;font-family:DKJambo;">
            It's not <span style="font-size:40pt;font-family:DKJambo;">Magic</span> 
            <p class="text-right" style="padding-left:20px; ">It's Just Costumes!</p></div>
            -->
            <div class="col-xs-3 text-right" style="margin-top:120px;">
                <t t-esc="company.website and company.website.split('/')[2] or ''"/>
            </div>
                <div class="col-xs-12">
                    <div style="border-bottom: 2px solid black;"></div>
                </div>
            </div>
        </div>
</template>

<template id="external_layout_footer">
    <div class="footer">
        <div class="text-center" >
            <h4 style="font-family: Arial;">Thank You!</h4>
            <ul t-if="not company.custom_footer" class="list-inline" style="padding: 0;margin:0 ">
                <t t-set="company" t-value="company.sudo()"/>
                <li t-if="company.street"><span t-field="company.street"/></li>
                <li t-if="company.street2">,<span t-field="company.street2"/></li>
                <li t-if="company.country_id"><span t-field="company.country_id"/></li>
                <li t-if="company.zip"><span t-field="company.zip"/></li>
                <li t-if="company.website">(Reg/No.201612587G)</li>
            </ul>
            <ul t-if="not company.custom_footer" class="list-inline">
                <t t-set="company" t-value="company.sudo()"/>
                <li><i class="fa fa-phone" aria-hidden="true"></i>
                    <span t-if="company.phone"><span t-field="company.phone"/></span>
                </li>
                <li>
                    <i class="fa fa-instagram" aria-hidden="true"></i>
                    <i class="fa fa-facebook-official" aria-hidden="true">CustomadeCostume</i>
                </li>
                <li>
                    <i class="fa fa-envelope" aria-hidden="true"></i>
                    <span t-if="company.email"><span t-field="company.email"/></span>
                </li>
            </ul>

            <!--ul t-if="not company.custom_footer" class="list-inline" name="financial_infos">
                <li t-if="company.vat">TIN: <span t-field="company.vat"/></li>
            </ul-->

            <t t-if="company.custom_footer">
                <span t-raw="company.rml_footer"/>
            </t>
        </div>
    </div>      
</template>

    </data>
</odoo>
