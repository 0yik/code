<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="inventory_summary_form_view" model="ir.ui.view">
            <field name="name">Inventory Summary Form View</field>
            <field name="model">inventory.summary</field>
            <field name="arch" type="xml">
                <form string="Inventory Summary">
                    <widget type="inventory"/>
                    <footer>
                         <button name="cancel" string="Cancel" special="cancel" class="btn-primary"/>
                     </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>