<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherited Student Fees Structure Line Form View -->
    <record id="view_student_fees_structure_line_form_prorate" model="ir.ui.view">
        <field name="name">student.fees.structure.line.form.prorate</field>
        <field name="model">student.fees.structure.line</field>
        <field name="inherit_id" ref="school_fees.view_student_fees_structure_line_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group/field[@name='account_id']" position="after">
                <field name="pro_rate_fees"/>
            </xpath>
        </field>
    </record>
</odoo>   
