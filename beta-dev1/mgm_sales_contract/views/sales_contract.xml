<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record model="ir.ui.view" id="view_sale_requisition_form_inherit_mgm">
            <field name="name">sale.requisition.form</field>
            <field name="model">sale.requisition</field>
            <field name="arch" type="xml">
                <form string="Sales Agreements">
                    <header>
                        <button name="action_quotation_send" string="Send by Email" states="drafts" type="object"
                                class="btn-primary"/>
                        <button name="action_in_progress" states="drafts" string="Confirm" type="object"
                                class="btn-primary"/>
                        <button name="action_drafts" states="cancel" string="Reset to Draft" type="object"/>
                        <button name="%(so_blanket_order.action_sale_requisition_list)d" type="action"
                                class="btn-primary" string="New Sale Order"
                                attrs="{'invisible': [('state', '=', 'drafts')]}"/>
                        <button name="action_cancel" states="drafts,in_progress,dailynote" string="Cancel Call"
                                type="object"/>
                        <field name="state" widget="statusbar" statusbar_visible="drafts,in_progress,open,done"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="%(so_blanket_order.action_sale_requisition_list)d" type="action"
                                    class="oe_stat_button" icon="fa-list-alt"
                                    attrs="{'invisible': [('state', '=', 'drafts')]}">
                                <field name="order_count" widget="statinfo" string="Sales Order"/>
                            </button>
                        </div>
                        <div class="pull-left">
                            <label for="name" class="oe_edit_only oe_inline"/>
                            <h1>
                                <field name="name" attrs="{'readonly': [('state','not in',('drafts'))]}"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="business_unit_text" invisible="1"/>
                                <field name="user_id"
                                       attrs="{'readonly': [('state','not in',('drafts','in_progress','open'))]}"/>
                                <field name="business_unit" required="1"
                                       attrs="{'readonly': [('state','not in',('drafts','in_progress','open'))]}"/>
                                <field name="type_id"
                                       attrs="{'readonly': [('state','not in',('drafts','in_progress','open'))]}"
                                       widget="selection"/>
                                <field name="partner_id" required="1"
                                       context="{'search_default_customer':1, 'default_customer':1, 'default_supplier':0}"
                                       domain="[('customer','=',True)]"/>
                                <field name="mother_vessel"
                                       attrs="{'readonly': [('state','not in',('drafts','in_progress','open'))]}"/>
                                <field name="asset_id"
                                       attrs="{'readonly': [('state','not in',('drafts','in_progress','open'))]}"/>
                                <field name="vessel_type_id"
                                       attrs="{'invisible':[('unit','!=','stevedoring')], 'readonly': [('state','not in',('drafts','in_progress','open'))]}"/>
                                <field name="account_analytic_id" colspan="2" groups="sale.group_analytic_accounting"
                                       attrs="{'readonly': [('state','not in',('drafts'))]}" invisible="1"/>
                            </group>
                            <group>
                                <field name="currency_id" invisible="1"/>
                                <field name="date_end"
                                       attrs="{'readonly': [('state','not in',('drafts','in_progress','open'))]}"/>
                                <!--<field name="ordering_date"
                                       attrs="{'readonly': [('state','not in',('drafts','in_progress','open'))]}"/>-->
                                <field name="ordering_date"/>
                                <field name="schedule_date" invisible="1"
                                       attrs="{'readonly': [('state','not in',('drafts','in_progress','open'))]}"/>
                                <field name="origin" placeholder="e.g. PO0025"
                                       attrs="{'readonly': [('state', '!=', 'drafts')]}"/>

                                <field name="pricelist_id" string="Pricelist" required="1"/>

                                <!--<field name="picking_type_id" widget="selection" groups="stock.group_adv_location" attrs="{'readonly': [('state', '!=', 'drafts')]}"/> -->
                                <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"
                                       attrs="{'readonly': [('state','not in',('drafts'))]}"/>
                                <button name="analytic_account" string="Analytic Account" type="object"
                                        class="btn-primary" colspan="2"/>
                                <field name="unit" invisible="1"></field>

                            </group>
                        </group>
                        <notebook>
                            <page string="Products">
                                <field name="line_ids">
                                    <tree string="Products" editable="bottom">
                                        <field name="currency_id" invisible="1"/>
                                        <field name="product_id" string="Product Name" context="{'partner_id':parent.partner_id, 'quantity':product_uom_qty,
                                        'pricelist':parent.pricelist_id, 'uom':product_uom_id, 'company_id': parent.company_id}"/>
                                        <field name="product_code"/>
                                        <field name="description"/>
                                        <field name="product_uom_qty" context="{'partner_id':parent.partner_id, 'quantity':product_uom_qty,
                                        'pricelist':parent.pricelist_id, 'uom':product_uom_id, 'company_id': parent.company_id}"/>
                                        <field name="qty_ordered"/>
                                        <field name="product_uom_id" groups="product.group_uom"/>
                                        <field name="schedule_date" groups="base.group_no_one"/>
                                        <field name="account_analytic_id" groups="sale.group_analytic_accounting"/>
                                        <field name="price_unit" sum="Total" widget="monetary" options="{'currency_field': 'currency_id'}" />
                                        <field name="sub_total" sum="Total" widget="monetary" options="{'currency_field': 'currency_id'}" />
                                    </tree>
                                    <form string="Products">
                                        <group>
                                            <field name="currency_id" invisible="1"/>
                                            <field name="product_id" context="{'partner_id':parent.partner_id, 'quantity':product_uom_qty,
                                            'pricelist':parent.pricelist_id, 'uom':product_uom_id, 'company_id': parent.company_id}"/>
                                            <field name="product_uom_qty" context="{'partner_id':parent.partner_id, 'quantity':product_uom_qty,
                                            'pricelist':parent.pricelist_id, 'uom':product_uom_id, 'company_id': parent.company_id}"/>
                                            <field name="qty_ordered"/>
                                            <field name="product_uom_id"/>
                                            <field name="schedule_date"/>
                                            <field name="account_analytic_id" groups="sale.group_analytic_accounting"/>
                                            <field name="company_id" groups="base.group_multi_company"
                                                   options="{'no_create': True}"/>
                                        </group>
                                    </form>
                                </field>
                                <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                                    <!--<field name="amount_total" widget="monetary" options="{'currency_field': 'currency_id'}"/>-->
                                </group>
                                <separator string="Terms and Conditions"/>
                                <field name="description"
                                       attrs="{'readonly': [('state','not in',('drafts','in_progress','open'))]}"/>
                            </page>
                            <page string="Other Information">
                                <field name="laycan_ids">
                                    <tree editable="top">
                                        <field name="laycan_in"/>
                                        <field name="laycan_out"/>
                                        <field name="commence_date"/>
                                        <field name="complete_date"/>
                                        <field name="subcon"/>
                                        <field name="late_fee"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

