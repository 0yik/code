                                       attrs="{'readonly': [('state','not in',('draft1','inprogress','open'))]}"/>
                                <field name="dock_id"
                                       attrs="{'readonly': [('state','not in',('draft1','inprogress','open'))]}"/>
                                <field name="rit_type_id"
                                       attrs="{'readonly': [('state','not in',('draft1','inprogress','open'))]}"/>
                                <button name="analytic_account" string="Analytic Account" type="object"
                                        class="btn-primary" colspan="2"/>
                            </group>
                            <group>
                                <field name="date_end" string="Operation Schedule Date" required="1"
                                       attrs="{'readonly': [('state','not in',('draft1','inprogress','open'))]}"/>
                                <!--<field name="ordering_date"
                                       attrs="{'readonly': [('state','not in',('draft1','inprogress','open'))]}"/>-->
                                <field name="ordering_date" readonly="1"/>

                                <field name="schedule_date"
                                       attrs="{'readonly': [('state','not in',('draft1','inprogress','open'))]}"
                                       invisible="1"/>

                                <field name="origin" placeholder="e.g. PO0025"
                                       attrs="{'readonly': [('state', '!=', 'draft1')]}"/>
                                <field name="picking_type_id" widget="selection" groups="stock.group_adv_location"
                                       attrs="{'readonly': [('state', '!=', 'draft1')]}"/>
                                <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"
                                       attrs="{'readonly': [('state','not in',('draft1'))]}"/>
                                <field name="asset_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Products">
                                <field name="line_ids">
                                    <tree string="Products" editable="bottom">
                                        <field name="product_id" string="Product Name"/>
                                        <field name="product_code"/>
                                        <field name="description"/>
                                         <field name="currency_id" invisible="1"/>
                                        <field name="product_uom_qty"/>
                                        <field name="qty_ordered"/>
                                        <field name="product_uom_id" groups="product.group_uom"/>
                                        <field name="schedule_date" groups="base.group_no_one"/>
                                        <field name="account_analytic_id" groups="sale.group_analytic_accounting"/>
                                        <field name="price_unit" sum="Total" widget="monetary" options="{'currency_field': 'currency_id'}" />
                                        <field name="sub_total" sum="Total" widget="monetary"  options="{'currency_field': 'currency_id'}" />
