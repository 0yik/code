<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="ccm_portfolios" name="portfolio">
        <t t-call="website.layout">
            <!--****************************************** breadcrumb start ******************************************  -->
            <section>
                <div class="bs_margin"></div>
            </section>
            <div class="breadcrumb_main">
                <div class="breadcrumb_container">
                    <section>
                        <div class="breadcrumb_inner">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/"><i class="fa fa-home" aria-hidden="true"></i></a></li>
                                <li class="breadcrumb-item active">Portfolio</li>
                            </ol>
                        </div>
                    </section>
                </div>
            </div>
            <!--****************************************** breadcrumb start ******************************************  -->

            

            <!--****************************************** Portfolio section start ******************************************  -->
            <div class="portfolio_main">
                <div class="portfolio_container">
                    <div class="col-md-12 portfolio_heading">
                        <h3>Our Costume</h3>
                    </div>
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <div class="filter_menu">
                                <ul>
                                    <li class="filter active" data-filter="all">All</li>
                                    <li class="filter" data-filter="Brands">Brands</li>
                                    <li class="filter" data-filter="Licensed">Licensed</li>
                                    <li class="filter" data-filter="Parade">Parade</li>
                                    <li class="filter" data-filter="Children">Children</li>
                                    <li class="filter" data-filter="Performance">Performance</li>
                                    <li class="filter" data-filter="Cosplay">Cosplay</li>
                                    <li class="filter" data-filter="Others">Others</li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-md-3 filter_img Brands">
                            <div class="costume_inner">
                                <img src="/modifier_honos_theme/static/src/img/port1.jpg" class="img-responsive"/>
                                <div class="img_hover_wrapper">
                                    <div class="search_icon" data-toggle="modal" data-target=".modal-carousel" data-slide-to="0">
                                        <a href="#carousel-example-generic"><i class="fa fa-search-plus"></i></a>
                                    </div>
                                    <div class="category_wrapper">
                                        <span class="category_text">Brands</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 filter_img Children Others">
                            <div class="costume_inner">
                                <img src="/modifier_honos_theme/static/src/img/port2.jpg" class="img-responsive"/>
                                <div class="img_hover_wrapper">
                                    <div class="search_icon" data-toggle="modal" data-target=".modal-carousel" data-slide-to="1">
                                        <a href="#carousel-example-generic"><i class="fa fa-search-plus"></i></a>
                                    </div>
                                    <div class="category_wrapper">
                                        <span class="category_text">Children</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 filter_img Licensed Performance">
                            <div class="costume_inner">
                                <img src="/modifier_honos_theme/static/src/img/port3.jpg" class="img-responsive"/>
                                <div class="img_hover_wrapper">
                                    <div class="search_icon" data-toggle="modal" data-target=".modal-carousel" data-slide-to="2">
                                        <a href="#carousel-example-generic"><i class="fa fa-search-plus"></i></a>
                                    </div>
                                    <div class="category_wrapper">
                                        <span class="category_text">Licensed</span>
                                        <span class="category_text">Performance</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 filter_img Brands">
                            <div class="costume_inner">
                                <img src="/modifier_honos_theme/static/src/img/port4.jpg" class="img-responsive"/>
                                <div class="img_hover_wrapper">
                                    <div class="search_icon" data-toggle="modal" data-target=".modal-carousel" data-slide-to="2">
                                        <a href="#carousel-example-generic"><i class="fa fa-search-plus"></i></a>
                                    </div>
                                    <div class="category_wrapper">
                                        <span class="category_text">Brands</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 filter_img Children Others">
                            <div class="costume_inner">
                                <img src="/modifier_honos_theme/static/src/img/port5.jpg" class="img-responsive"/>
                                <div class="img_hover_wrapper">
                                    <div class="search_icon" data-toggle="modal" data-target=".modal-carousel" data-slide-to="0">
                                        <a href="#carousel-example-generic"><i class="fa fa-search-plus"></i></a>
                                    </div>
                                    <div class="category_wrapper">
                                        <span class="category_text">Children</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 filter_img Parade Cosplay">
                            <div class="costume_inner">
                                <img src="/modifier_honos_theme/static/src/img/port6.jpg" class="img-responsive"/>
                                <div class="img_hover_wrapper">
                                    <div class="search_icon" data-toggle="modal" data-target=".modal-carousel" data-slide-to="1">
                                        <a href="#carousel-example-generic"><i class="fa fa-search-plus"></i></a>
                                    </div>
                                    <div class="category_wrapper">
                                        <span class="category_text">Parade</span>
                                        <span class="category_text">Cosplay</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 filter_img Children Cosplay">
                            <div class="costume_inner">
                                <img src="/modifier_honos_theme/static/src/img/port7.jpg" class="img-responsive"/>
                                <div class="img_hover_wrapper">
                                    <div class="search_icon" data-toggle="modal" data-target=".modal-carousel" data-slide-to="0">
                                        <a href="#carousel-example-generic"><i class="fa fa-search-plus"></i></a>
                                    </div>
                                    <div class="category_wrapper">
                                        <span class="category_text">Children</span>
                                        <span class="category_text">Cosplay</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 filter_img Parade">
                            <div class="costume_inner">
                                <img src="/modifier_honos_theme/static/src/img/port8.jpg" class="img-responsive"/>
                                <div class="img_hover_wrapper">
                                    <div class="search_icon" data-toggle="modal" data-target=".modal-carousel" data-slide-to="1">
                                        <a href="#carousel-example-generic"><i class="fa fa-search-plus"></i></a>
                                    </div>
                                    <div class="category_wrapper">
                                        <span class="category_text">Parade</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="modal fade modal-carousel" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" style="display:none;">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel" data-interval="false">
                                        <div class="carousel-inner">
                                            <div class="item active">
                                                <img class="img-responsive" src="/modifier_honos_theme/static/src/img/port1.jpg" alt="..."/>
                                            </div>
                                            <div class="item">
                                                <img class="img-responsive" src="/modifier_honos_theme/static/src/img/port2.jpg" alt="..."/>
                                            </div>
                                            <div class="item">
                                                <img class="img-responsive" src="/modifier_honos_theme/static/src/img/port3.jpg" alt="..."/>
                                            </div>
                                            <div class="item">
                                                <img class="img-responsive" src="/modifier_honos_theme/static/src/img/port4.jpg" alt="..."/>
                                            </div>
                                            <div class="item">
                                                <img class="img-responsive" src="/modifier_honos_theme/static/src/img/port5.jpg" alt="..."/>
                                            </div>
                                            <div class="item">
                                                <img class="img-responsive" src="/modifier_honos_theme/static/src/img/port6.jpg" alt="..."/>
                                            </div>
                                            <div class="item">
                                                <img class="img-responsive" src="/modifier_honos_theme/static/src/img/port7.jpg" alt="..."/>
                                            </div>
                                            <div class="item">
                                                <img class="img-responsive" src="/modifier_honos_theme/static/src/img/port8.jpg" alt="..."/>
                                            </div>
                                        </div>

                                        <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
                                            <i class="fa fa-chevron-left" aria-hidden="true"></i>
                                        </a>
                                        <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
                                            <i class="fa fa-chevron-right" aria-hidden="true"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <!--****************************************** Portfolio section end ******************************************  -->
        </t>
    </template>
</odoo>