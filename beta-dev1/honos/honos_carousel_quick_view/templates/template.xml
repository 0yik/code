<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<!-- For Add Quickview button into single carousel -->
	<template id="honos_carousel_quick_view_single_carousel" inherit_id="honos_product_carousel.honos_product_carousel_snippet_product">
		<xpath expr="//div[@id='quickview_icon_carousel']" position="inside">
			<a class="add2quick"  t-att-data-id="product.id"><i class="fa fa-eye" aria-hidden="true"></i></a>
		</xpath>
	</template>
	
	<!-- For Add Quickview button into Multi carousel -->
	<template id="honos_carousel_quick_view_multi_carousel" inherit_id="honos_product_carousel.honos_product_carousel_static_carousel_snippet_product">
		<xpath expr="//div[@id='quickview_icon_carousel']" position="inside">
			<a class="add2quick"  t-att-data-id="product.id"><i class="fa fa-eye" aria-hidden="true"></i></a>
		</xpath>
	</template>	
</odoo>
