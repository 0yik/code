<?xml version="1.0" encoding="UTF-8"?>

<templates id="template_slot" xml:space="preserve">
	
	    <t t-name="time_picker">
		    <button type="button" class="close fa fa-close close_custom" data-dismiss="modal" aria-hidden="true"></button>
			<t t-if="is_penalty != true and is_blanck != true">
				<ul class="after_cal">
					<li class="white_checkbox">
						<span></span>
		                                                                                          Available
		                                                                                      
					</li>
					<li class="magento_checkbox">
						<span></span>
		                                                                                          Selected
		                                                                                      
					</li>
				</ul>
			</t>
		    <div id="time_slot_point">
				<div id="time_point" class="row">
					<div class="col-xs-12">
						<t t-if="is_blanck == true">
							<span style="float: left;text-align: left;color:black;width: 100%;">Testers are not available to take up the booking for this selected date. Kindly select some other date for your booking. Thank You.</span>
						</t>
						<t t-if="is_penalty == true">
							<span style="float: left;text-align: left;color:black;width: 100%;"><t t-esc="massage"/></span>
						</t>
						<input type="hidden" id="hidden_selected_date" name="hidden_selected_date"
		t-att-value="selected_date" />
						<t t-foreach="total_slot" t-as="time">
							<t t-if="time.book_color == true">
								<t t-if="time_slot_based == 1">
									<div class="time_s time_booked col-xs-4" style="pointer-events: none;">
										<input type="hidden" t-att-value="time.time_slot_id"
		name="time_slot_id" id="time_slot_id" />
										<input type="hidden" t-att-value="time.tester_id" name="tester_id"
		id="tester_id" />
										<t t-if="time.start &lt; 12">
											<t t-esc="time.start_time" /> AM
										</t>
										<t t-if="time.start &gt; 12">
											<t t-esc="time.start_time" /> PM
										</t>
										<t t-if="time.start == 12">
											<t t-esc="time.start_time" /> PM
										</t>
									</div>
								</t>
								<t t-if="time_slot_based == 0">
									<div class="time_s time_booked col-xs-4" style="pointer-events: none;">
										<input type="hidden" t-att-value="time.time_slot_id"
		name="time_slot_id" id="time_slot_id" />
										<input type="hidden" t-att-value="time.tester_id" name="tester_id"
		id="tester_id" />
										<t t-if="time.start &lt; 12">
											<t t-esc="time.start_time" /> AM
										</t>
										<t t-if="time.start &gt; 12">
											<t t-esc="time.start_time" /> PM
										</t>
										<t t-if="time.start == 12">
											<t t-esc="time.start_time" /> PM
										</t>
										 - 
										<t t-if="time.end &lt; 12">
											<t t-esc="time.end_time" /> AM
										</t>
										<t t-if="time.end &gt; 12">
											<t t-esc="time.end_time" /> PM
										</t>
										<t t-if="time.end == 12">
											<t t-esc="time.end_time" /> PM
										</t>
									</div>
								</t>
							</t>
							<t t-if="time.book_color == false">
								<t t-if="time_slot_based == 1">
									<div class="time_s col-xs-4">
									<input type="hidden" t-att-value="time.time_slot_id"
		name="time_slot_id" id="time_slot_id" />
									<input type="hidden" t-att-value="time.tester_id" name="tester_id"
		id="tester_id" />
									<t t-if="time.start &lt; 12">
										<t t-esc="time.start_time" /> AM
									</t>
									<t t-if="time.start &gt; 12">
										<t t-esc="time.start_time" /> PM
									</t>
									<t t-if="time.start == 12">
										<t t-esc="time.start_time" /> PM
									</t>
									</div>
								</t>
								<t t-if="time_slot_based == 0">
								<div class="time_s col-xs-4">
									<input type="hidden" t-att-value="time.time_slot_id"
		name="time_slot_id" id="time_slot_id" />
									<input type="hidden" t-att-value="time.tester_id" name="tester_id"
		id="tester_id" />
									<t t-if="time.start &lt; 12">
										<t t-esc="time.start_time" /> AM
									</t>
									<t t-if="time.start &gt; 12">
										<t t-esc="time.start_time" /> PM
									</t>
									<t t-if="time.start == 12">
										<t t-esc="time.start_time" /> PM
									</t>
									 - 
									<t t-if="time.end &lt; 12">
										<t t-esc="time.end_time" /> AM
									</t>
									<t t-if="time.end &gt; 12">
										<t t-esc="time.end_time" /> PM
									</t>
									<t t-if="time.end == 12">
										<t t-esc="time.end_time" /> PM
									</t>
								</div>
								</t>
							</t>
						</t>
					</div>
				</div>
			</div>
	    </t>
	    <t t-name="booking_picker_div">
			<div id="book_point" class="#">
				<div class="col-xs-12 detail_display">
					<input type="hidden" t-att-value="pr_id" id="pr_name" name="pr_name" />
