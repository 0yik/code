<?xml version="1.0"?>
<odoo>
    <data>
        <record id="view_pos_config_form" model="ir.ui.view">
            <field name="name">pos.config.form.view</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_config_form"/>
            <field name="arch" type="xml">
                <sheet position='inside'>
                    <group name="customer_display" string="Customer Display">
                        <field name="allow_customer_display"/>
                        <field name="customer_display_ip"/>
                        <field name="customer_display_next_l1"/>
                        <field name="customer_display_next_l2"/>
                        <field name="customer_display_closed_l1"/>
                        <field name="customer_display_closed_l2"/>
                    </group>
                </sheet>
            </field>
        </record>
    </data>
</odoo>
