<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_employee_notice_period_tree" model="ir.ui.view">
            <field name="name">employee.notice.period.tree</field>
            <field name="model">employee.notice.period</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
            <tree string="Notice Period">
                <field name="duration"/>
            </tree>
            </field>
        </record>

        <record id="view_employee_notice_period_form" model="ir.ui.view">
            <field name="name">employee.notice.period.form</field>
            <field name="model">employee.notice.period</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
            <form string="Notice Period">
                <header>
                    <button string="Assign" icon="" states=""
                        type="object" name="action_assign"/>
                </header>
                <sheet>
                    <label for="duration" string="Notice Period" class="oe_inline"/>
                    <field name="duration" required="1" class="oe_inline"/>day(s)
                    <notebook colspan="4">
                        <page string="Employees">
                            <field name="employee_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
            </field>
        </record>

        <record id="view_employee_notice_period_search" model="ir.ui.view">
            <field name="name">employee.notice.period.search</field>
            <field name="model">employee.notice.period</field>
            <field name="type">search</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
            <search string="Notice Period">
                <field name="duration"/>
            </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_open_employee_notice_period_view">
            <field name="name">Notice Period</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">employee.notice.period</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_employee_notice_period_search"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <record model="ir.actions.act_window.view" id="act_open_employee_notice_period_view_form">
            <field name="act_window_id" ref="act_open_employee_notice_period_view"/>
            <field name="sequence" eval="20"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_employee_notice_period_form"/>
        </record>

        <record model="ir.actions.act_window.view" id="act_open_employee_notice_period_view_tree">
            <field name="act_window_id" ref="act_open_employee_notice_period_view"/>
            <field name="sequence" eval="10"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_employee_notice_period_tree"/>
        </record>

        <menuitem id="menu_employee_notice_period"
            parent="hr.menu_human_resources_configuration"
            sequence="20"
            action="act_open_employee_notice_period_view"/>
    </data>
</odoo>
