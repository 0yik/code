<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_change_notice_period_form" model="ir.ui.view">
            <field name="name">change.notice.period.form</field>
            <field name="model">change.notice.period</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
            <form string="Change Notice Period">
                <group>
                    <field name="current_notice_id" readonly="1" />
                    <label for="new_notice_id" string="New Notice Period"/>
                    <div>
                    <field name="new_notice_id" domain="[('id','!=', current_notice_id)]"
                        required="1" options="{'no_open': True, 'no_create': True}" class="oe_inline" />days
                    </div>
                </group>
                <footer>
                    <button string="Change" icon="" states="" type="object" name="action_change_period"/> or 
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_open_change_notice_period_view">
            <field name="name">Change Notice Period</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">change.notice.period</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>


        <!--menuitem id="menu_change_notice_period"
            parent="module.xmlid"
            sequence="20"
            action="act_open_change_notice_period_view"/-->
    </data>
</odoo>
