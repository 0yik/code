<?xml version="1.0"?>
<odoo>
    <record model="ir.ui.view" id="view_qr_code_form">
        <field name="name">qr.code.form</field>
        <field name="model">qr.code</field>
        <field name="arch" type="xml">
            <form string="qr code form" create="false" delete="false">
                <header>
                </header>
                <sheet>
                    <group>
                        <field name="image" filename="file_name" widget="image"/>
                        <field name="uen_no" class="oe_inline"/>
                        <field name="file_name" invisible="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <record model="ir.ui.view" id="view_qr_code_tree">
        <field name="name">qr.code.tree</field>
        <field name="model">qr.code</field>
        <field name="arch" type="xml">
            <tree string="qr code form" create="false" delete="false">
                <field name="file_name" />
                <field name="uen_no"/>
            </tree>
        </field>
    </record>

    <record id="action_qr_code" model="ir.actions.act_window">
        <field name="name">Payment QR Code</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">qr.code</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="qr_code_id"
              name="Payment QR Code"
              action="action_qr_code"
              parent="account.menu_finance_configuration"
              sequence="1"/>

</odoo>
