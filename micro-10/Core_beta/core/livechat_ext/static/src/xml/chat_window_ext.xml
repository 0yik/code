<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="livechat_ext.ChatWindow">
        <div class="o_chat_window">
            <div class="o_chat_header">
                <t t-call="mail.ChatWindowHeaderContent">
                    <t t-set="status" t-value="widget.status"/>
                    <t t-set="title" t-value="widget.title"/>
                    <t t-set="unread_counter" t-value="widget.unread_msgs"/>
                </t>
            </div>
            <div id="chat-content" t-if="!widget.display_start_page" class="o_chat_content">
            </div>
            <div id="chat-input-box" t-if='!widget.display_start_page and !widget.options.input_less' class="o_chat_composer">
                <input class="o_composer_text_field" t-att-placeholder="widget.options.placeholder"/>
            </div>
            <div id="chat-start-page" t-if="widget.display_start_page" class="o_chat_composer" style="position:absolute;top:20%;">
                <div style="text-align: center;">
                    <p>
                        Hello there!<br/>
                        Please provide the below details to start the chat.
                    </p>
                </div>
                <br/><br/>
                <div style="width:300px; padding:5px;">
                    <b><i>Name &amp; Email :</i></b>
                    <br/>
                    <input type="text" name="input-chat-name" placeholder="Name" style="width:288px;padding:5px;margin-bottom:5px;"/>
                    <p id="input-name-required" style="color:red; display:none;">* Name required!</p>
                    <input type="email" name="input-chat-email" placeholder="Email" style="width:288px;padding:5px;"/>
                    <p id="input-email-required" style="color:red; display:none;">* Email required!</p>
                    <br/><br/>
                    <button type="button" style="position:absolute; left:35%;" class="o_chat_start_button btn btn-info btn-sm">Start Chatting</button>
                </div>
            </div>
        </div>
    </t>

</templates>