<?xml version="1.0"?>
<odoo>
    <data>

        <record id="mail_channel_view_form_inherit" model="ir.ui.view">
            <field name="name">Mail Channel Form Inherit</field>
            <field name="model">mail.channel</field>
            <field name="inherit_id" ref="im_livechat.mail_channel_view_form"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="anonymous_name"/>
                    <field name="anonymous_email"/>
                </field>
            </field>
        </record>

        <record id="im_livechat_channel_view_form_inherit" model="ir.ui.view">
            <field name="name">Livechat Channel Form Inherit</field>
            <field name="model">im_livechat.channel</field>
            <field name="inherit_id" ref="im_livechat.im_livechat_channel_view_form"/>
            <field name="arch" type="xml">
                <field name="default_message" position="after">
                    <field name="notify_to_ids" widget="many2many_tags"/>
                    <field name="idle_minutes"/>
                </field>
            </field>
        </record>

    </data>
</odoo>