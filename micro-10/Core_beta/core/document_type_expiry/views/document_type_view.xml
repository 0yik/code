<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_document_type_inherit_form" model="ir.ui.view">
            <field name="name">document.type.form</field>
            <field name="model">document.type</field>
            <field name="inherit_id" ref="sg_hr_employee.view_document_type_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <label for="duration" string="Duration"/>
                    <div>
                        <field name="duration" class="oe_inline"/>days
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
