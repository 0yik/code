<?xml version="1.0"?>
<odoo>

    <record id="view_crm_meeting_search" model="ir.ui.view">
        <field name="name">calendar.event.form.inherit</field>
        <field name="model">calendar.event</field>
        <field name="inherit_id" ref="calendar.view_calendar_event_search"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="reseller_id"/>
            </xpath>
        </field>
    </record>
    <record id="view_crm_meeting_form_inherit_hm" model="ir.ui.view">
        <field name="name">calendar.event.form.inherit</field>
        <field name="model">calendar.event</field>
        <field name="inherit_id" ref="calendar.view_calendar_event_form"/>
        <field name="arch" type="xml">
            <field name="description" position="before">
                <separator string="Summary"/>
            </field>
            <field name="description" position="attributes">
                <attribute name="nolabel">1</attribute>
            </field>
            <field name="description" position="after">
                <separator string="Change Request"/>
                <field name="summary_text" nolabel="1"/>
            </field>
        </field>
    </record>


</odoo>
