<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <record id="view_crm_case_form_view_job_custom" model="ir.ui.view">
        <field name="name">hr.applicant.form1</field>
        <field name="model">hr.applicant</field>
        <field name="inherit_id" ref="hr_recruitment.crm_case_form_view_job" />
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                 <field name="state_the_state" invisible='1'/>
            </xpath>
            <xpath expr="//sheet/div" position="inside">
            <!-- attrs="{'invisible':[('survey_id','=',False)]}" -->
                <button name="action_print_offering_letter" attrs="{'invisible':[('state_the_state','!=','Contract Proposal')]}" class="oe_stat_button" icon="fa-print" type="object" help="Print interview report" >
                    <div class="o_form_field o_stat_info">
                        <span class="o_stat_text">Print</span>
                        <span class="o_stat_text">Offering Letter</span>
                    </div>
                </button>
                <button name="action_email_offering_letter" attrs="{'invisible':[('state_the_state','!=','Contract Proposal')]}" class="oe_stat_button fa fa-envelope-o" type="object" help="Print interview report" >
                    <div class="o_form_field o_stat_info">
                        <span class="o_stat_text">Email</span>
                        <span class="o_stat_text">Offering Letter</span>
                    </div>
                </button>
            </xpath>
            <field name="email_from" position="replace">
                <field name="email_from" required='1'/>
            </field>
            
            <field name="user_id" position="replace">
                <field name="user_id" required='1'/>
            </field>
            
        </field>
    </record>
    </data>
</odoo>