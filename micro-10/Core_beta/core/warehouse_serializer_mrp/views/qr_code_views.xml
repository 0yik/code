<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <report id="report_qrcode_label_mo_qweb"
                string="QR Code"
                model="mrp.production"
                report_type="qweb-pdf"
                file="warehouse_serializer_mrp.qrcode_label"
                name="warehouse_serializer_mrp.qrcode_label"
                menu="False"
        />

        <record id="qrcode_mo_label_paperformat" model="report.paperformat">
            <field name="name">QR CODE FROM MO</field>
            <field name="default" eval="True"/>
            <field name="format">custom</field>
            <field name="page_height">100</field>
            <field name="page_width">230</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">5</field>
            <field name="margin_bottom">5</field>
            <field name="margin_left">1</field>
            <field name="margin_right">1</field>
            <field name="header_line" eval="True"/>
            <field name="header_spacing">10</field>
            <field name="dpi">80</field>
        </record>

        <record id="report_qrcode_label_mo_qweb" model="ir.actions.report.xml">
            <field name="paperformat_id" ref="qrcode_mo_label_paperformat"/>
        </record>

        <template id="qrcode_label">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-if="o and 'company_id' in o">
                        <t t-set="company" t-value="o.company_id"/>
                    </t>
                    <t t-foreach="o.generate_qr_code()" t-as="code">
                        <div class="page">
                            <div class="row">
                                <t t-if="company.logo">
                                    <div class="col-xs-4" style="margin-top: 50px;">
                                        <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s'%('QR', code.get('code'), 240, 240)"/>
                                    </div>
                                    <div class="col-xs-4" style="padding: 5px;margin-top:120px;">
                                        <table padding-top="5px" cellpadding="2px" width="100%"
                                               class="table-borderless font8px">
                                            <tr>
                                                <td style="vertical-align: middle; font-size: 18px">
                                                    <strong>Product</strong>
                                                </td>
                                                <td style="vertical-align: middle;">: &#160;</td>
                                                <td>
                                                    <span t-esc="code.get('product')"/>
                                                </td>
                                            </tr>
                                            <tr t-if="o.product_id and o.product_id.barcode" height="20px"
                                                valign="center">
                                                <td style="vertical-align: middle; font-size: 18px">
                                                    <strong>Product SKU</strong>
                                                </td>
                                                <td>: &#160;</td>
                                                <td style="font-size: 18px">
                                                    <span t-esc="code.get('barcode')"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="font-size: 18px">
                                                    <strong>Lot Number</strong>
                                                </td>
                                                <td>: &#160;</td>
                                                <td style="font-size: 18px">
                                                    <span t-esc="code.get('lot')"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="font-size: 18px">
                                                    <strong>Expiry Date</strong>
                                                </td>
                                                <td>: &#160;</td>
                                                <td style="font-size: 18px">
                                                    <span t-esc="code.get('expiry_date')"
                                                          t-field-options="{&quot;format&quot;: &quot;dd-MM-YYYY&quot;}"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="font-size: 18px">
                                                    <strong>Date</strong>
                                                </td>
                                                <td>: &#160;</td>
                                                <td style="font-size: 18px">
                                                    <span t-esc="code.get('date')"
                                                          t-field-options="{&quot;format&quot;: &quot;dd-MM-YYYY&quot;}"/>
                                                </td>
                                            </tr>
                                        </table>
                                    </div>
                                    <div class="col-xs-4" style="margin-top: 50px;">
                                        <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo"
                                             style="height: 210px;width: 210px;"/>
                                    </div>
                                </t>
                                <t t-else="">
                                    <div class="col-xs-6" style="margin-top: 50px;">
                                        <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s'%('QR', code.get('code'), 240, 240)"/>
                                    </div>
                                    <div class="col-xs-6" style="padding: 5px;margin-top:120px;">
                                        <table padding-top="5px" cellpadding="2px" width="100%"
                                               class="table-borderless font8px">
                                            <tr>
                                                <td style="vertical-align: middle; font-size: 18px">
                                                    <strong>Product</strong>
                                                </td>
                                                <td style="vertical-align: middle;">: &#160;</td>
                                                <td>
                                                    <span t-esc="code.get('product')"/>
                                                </td>
                                            </tr>
                                            <tr t-if="o.product_id and o.product_id.barcode" height="20px"
                                                valign="center">
                                                <td style="vertical-align: middle; font-size: 18px">
                                                    <strong>Product SKU</strong>
                                                </td>
                                                <td>: &#160;</td>
                                                <td style="font-size: 18px">
                                                    <span t-esc="code.get('barcode')"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="font-size: 18px">
                                                    <strong>Lot Number</strong>
                                                </td>
                                                <td>: &#160;</td>
                                                <td style="font-size: 18px">
                                                    <span t-esc="code.get('lot')"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="font-size: 18px">
                                                    <strong>Expiry Date</strong>
                                                </td>
                                                <td>: &#160;</td>
                                                <td style="font-size: 18px">
                                                    <span t-esc="code.get('expiry_date')"
                                                          t-field-options="{&quot;format&quot;: &quot;dd-MM-YYYY&quot;}"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="font-size: 18px">
                                                    <strong>Date</strong>
                                                </td>
                                                <td>: &#160;</td>
                                                <td style="font-size: 18px">
                                                    <span t-esc="code.get('date')"
                                                          t-field-options="{&quot;format&quot;: &quot;dd-MM-YYYY&quot;}"/>
                                                </td>
                                            </tr>
                                        </table>
                                    </div>
                                </t>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>