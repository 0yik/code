<odoo>

    <record id="mrp_production_form_view_inherit" model="ir.ui.view">
        <field name="name">mrp.production.form.inherit</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//form/header/button[@name='button_unreserve']" position="after">
                <button name="action_product_to_serializer_mrp" states="confirmed,planned,progress" string="Serialize" type="object" class="oe_highlight"/>
                <button name="print_product_lot"  attrs="{'invisible': [('check_to_done', '=', False)]}" string="Print" type="object" class="oe_highlight"/>
            </xpath>
        </field>
    </record>
</odoo>