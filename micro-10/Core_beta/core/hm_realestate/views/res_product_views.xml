<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="product.product_template_action" model="ir.actions.act_window">
            <field name="name">Products</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.template</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="product.product_template_kanban_view"/>
            <field name="context">{"search_default_filter_to_sell":1}</field>
            <field name="domain">[('property_ok','=',False)]</field>
        </record>

        <record id="res_analytic_contract_form_inherit_attach" model="ir.ui.view">
            <field name="name">id.res.analytic.contract.attach.inherit</field>
            <field name="model">account.analytic.account</field>
            <field name="inherit_id" ref="stable_account_analytic_analysis.account_analytic_account_form_form"/>
            <field name="arch" type="xml">
                <xpath expr="//separator[@name='toinvoice']" position="replace">
                    <separator string="Property" name="propert"/>
                    <field name="line_analytic">
                        <tree string="Property Line" editable="bottom">
                            <field name="categ_id"/>
                            <field name="product_id"/>
                            <field name="description_prod"/>
                            <field name="remarks_prod"/>
                        </tree>
                    </field>
                </xpath>
                <div name="button_box" position="inside">
                    <button class="oe_stat_button" name="action_invoice_tree1_call" icon="fa-building-o" type="object" >
                        <field name="inv_contra" widget="statinfo" string="Invoice"/>
                    </button>
                </div>
                <xpath expr="//field[@name='pricelist_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//page[@name='contract_information']/table" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//page[@name='contract_information']/table" position="after">
                    <group>
                        <group>
                            <field name="product_id" invisible="1"></field>
                        </group>
                        <group></group>
                    </group>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="sale.product_template_form_view_invoice_policy">
            <field name="name">product.template.invoice.policy</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <page name="invoicing" position="inside">
                    <separator string="Invoicing Policy" attrs="{'invisible': [('property_ok','=', True)]}"/>
                    <group>
                        <field name="invoice_policy" widget="radio" attrs="{'invisible': [('property_ok','=', True)]}"/>
                        <field name="track_service" widget="radio" invisible="True"/>
                    </group>
                </page>
            </field>
        </record>

        <record id="product_variant_easy_edit_view_prop" model="ir.ui.view">
            <field name="name">product.product.view.forpropm.easy</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='options']" position="after">
                    <field name="property_ok"/>
                    <label for="property_ok"/>
                </xpath>
            </field>
        </record>

        <record id="res_product_form_inherit_attach" model="ir.ui.view">
            <field name="name">id.res.product.form.attach.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='options']" position="after">
                    <field name="property_ok"/>
                    <label for="property_ok"/>
                </xpath>
                <xpath expr="//field[@name='type']" position="attributes">
                    <attribute name="attrs">{'invisible': [('property_ok','=', True)]}</attribute>
                </xpath>
                <xpath expr="//field[@name='barcode']" position="attributes">
                    <attribute name="attrs">{'invisible': [('property_ok','=', True)]}</attribute>
                </xpath>
                <xpath expr="//page[@name='sales']" position="attributes">
                    <attribute name="attrs">{'invisible': [('property_ok','=', True)]}</attribute>
                </xpath>


                <xpath expr="//notebook" position="before">
                    <group attrs="{'invisible': [('property_ok','!=', True)]}">
                        <group>
                            <field name="floor_num"/>
                            <label for="street" string="Address"/>
                            <div class="o_address_format">
                                <field name="street" placeholder="Street..." class="o_address_street"/>
                                <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                <field name="city" placeholder="City" class="o_address_city"/>
                                <field name="state_id" class="o_address_state" placeholder="State" options='{"no_open": True}'/>
                                <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                <field name="country_id" placeholder="Country" class="o_address_country" options='{"no_open": True, "no_create": True}'/>
                            </div>    
                        </group>
                        <group>
                            <field name="unit_num"/>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>

        <record id="product_template_property_action" model="ir.actions.act_window">
            <field name="name">Property</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.template</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="product.product_template_kanban_view"/>
            <field name="context">{"search_default_filter_to_sell":1,"default_property_ok":1}</field>
            <field name="domain">[('property_ok','=',True)]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to define a new product.
                </p><p>
                    You must define a product for everything you sell, whether it's a physical product, a consumable or a service you offer to customers.
                </p><p>
                    The product form contains information to simplify the sale process: price, notes in the quotation, accounting data, procurement methods, etc.
                </p>
            </field>
        </record>

        <menuitem action="product_template_property_action" id="menu_product_template_property_action" parent="sales_team.menu_sales" sequence="14" />
    </data>
</odoo>