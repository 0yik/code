<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

         <record id="inherit_view_employee_form" model="ir.ui.view">
            <field name="name">inherit.view.employee.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">

                <xpath expr="//div[@name='button_box']" position="inside">
                   <button name="_get_emp_commission" class="oe_stat_button" icon="fa-bullseye"  >
                       <div class="o_stat_info">
                            <field name="emp_commission" class="o_stat_value"/>
                            <span class="o_stat_text"> Commission </span>
                        </div>
                    </button>

                    <button name="total_sale_order" class="oe_stat_button" icon="fa-shopping-bag" type="object">
                        <div class="o_stat_info">
                            <field name="total_sale" class="o_stat_value"/>
                            <span class="o_stat_text"> Total Sale </span>
                        </div>
                    </button>
                </xpath>

                <xpath expr="//page[@name='hr_settings']" position="inside">
                        <group name="emp_target" string="Sales Commission" groups="hr.group_hr_user">
                            <group>
                                <field name="emp_sale_target"/>
                            </group>
                        </group>
                 </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="inherit_view_hr_payslip_form">
            <field name="name">inherit.hr.payslip.form</field>
            <field name="model">hr.payslip</field>
            <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
            <field name="arch" type="xml">
                <field name="contract_id" position="after">
                    <field name="emp_commission" invisible="1"/>
                </field>
            </field>
        </record>

        <record id="target_group_form_view_inherit" model="ir.ui.view">
            <field name="name">target.group.form.view.inherit</field>
            <field name="model">target.group</field>
            <field name="inherit_id" ref="sale_commission_target_gt.target_group_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[1]" position="after">
                    <page name="sales_people_list" string="Sales Person">
                        <group>
                            <field name="sales_people" nolabel="1" editable="bottom" widget="many2many" domain="[('user_id', '!=', False)]">
                                <tree>
                                    <field name="name" />
                                </tree>
                            </field>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

	</data>
</odoo>
