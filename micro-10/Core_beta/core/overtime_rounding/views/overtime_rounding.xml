<odoo>
    <record id="view_overtime_rounding_form" model="ir.ui.view">
        <field name="name">view.overtime.rounding.form</field>
        <field name="model">overtime.rounding</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="active"/>
                </group>
                <group>
                    <field name="overtime_line_ids">
                        <tree editable="bottom">
                            <field name="minite_from"/>
                            <field name="minite_to"/>
                            <field name="rounding"/>
                        </tree>
                    </field>
                </group>
            </form>
        </field>
    </record>

    <record id="view_overtime_rounding_tree" model="ir.ui.view">
        <field name="name">view.overtime.rounding.tree</field>
        <field name="model">overtime.rounding</field>
        <field name="arch" type="xml">
            <tree>
                <field name="active"/>
                <field name="overtime_line_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>

    <record id="action_overtime_rounding" model="ir.actions.act_window">
        <field name="name">Overtime Rounding</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">overtime.rounding</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="configuration_menu" name="Configuration" parent="hr_timesheet.timesheet_menu_root"/>
    <menuitem id="overtime_rounding_menu" name="Overtime Rounding" parent="configuration_menu"/>
    <menuitem id="overtime_rounding_menu_action" name="Overtime Rounding" action="action_overtime_rounding" parent="overtime_rounding_menu"/>
</odoo>