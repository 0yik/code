<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_transit_immediate_transfer" model="ir.ui.view">
        <field name="name">stock.transit.immediate.transfer.view.form</field>
        <field name="model">stock.transit.immediate.transfer</field>
        <field name="arch" type="xml">
            <form string="Immediate transfer?">
                <group>
                    <p>
                        You haven't set processed (<i>transit</i>) quantities. Click <i>apply</i> and
                        Odoo will process all quantities to do.
                    </p>
                </group>
                <footer>
                    <button name="process" string="_Apply" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>