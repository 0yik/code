<odoo>
    <record model="ir.ui.view" id="calendar_event_popup_inherit">
        <field name="name">calendar.event.form.inherit</field>
        <field name="model">calendar.event</field>
        <field name="inherit_id" ref="calendar.view_calendar_event_form_popup"/>
        <field name="arch" type="xml">
        	<xpath expr="//form/group" position="before">
				<header>
					<button name="%(action_reschedule_wizard)d" string="Reschedule" type="action" class ="oe_highlight"/>
					<button name="%(action_cancel_wizard)d" string="Cancel" type="action" class ="oe_highlight"/>
				</header>
            </xpath>            
        </field>
    </record>

    <record model="ir.ui.view" id="calendar_event_form_inherit">
        <field name="name">calendar.event.form.inherit</field>
        <field name="model">calendar.event</field>
        <field name="inherit_id" ref="calendar.view_calendar_event_form"/>
        <field name="arch" type="xml">
        	<xpath expr="//form/sheet" position="before">
				<header>
					<button name="%(action_reschedule_wizard)d" string="Reschedule" type="action" class ="oe_highlight"/>
					<button name="%(action_cancel_wizard)d" string="Cancel" type="action" class ="oe_highlight"/>
				</header>
            </xpath>
			<field name = "allday" position = "after">
				<field name = "reason_id"/>
				<field name = "reason_description"/>
				<field name = "state" invisible="1"/>
			</field>
            
        </field>
    </record>

    <record id="view_calendar_search_view_inherit" model="ir.ui.view">
        <field name="name">calendar.event.form.inherit</field>
        <field name="model">calendar.event</field>
        <field name="inherit_id" ref="calendar.view_calendar_event_search"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="state"/>
            </xpath>
            <filter name="mymeetings" position="after">
                <filter name="by_state_schedule" string="Schedule Meeting" domain ="[('state','=','schedule')]"/>
                <filter name="by_state_cancel" string="Cancel Meeting" domain ="[('state','=','cancel')]"/>
            </filter>            
        </field>
    </record>
    
    <record id="calendar.action_calendar_event" model="ir.actions.act_window">
        <field name="context">{'search_default_by_state_schedule':'schedule'}</field>
    </record>
</odoo>