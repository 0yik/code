<odoo>
	<record id="calendar_reasons_form_view" model="ir.ui.view">
		<field name="name">calendar.reasons.form</field>
		<field name="model">calendar.reasons</field>
		<field name="arch" type="xml">
			<form>
				<header>
				</header>
				<sheet>
					<group colspan="4" col="4">
						<field name="name"/>
						<field name="active"/>
						<field name="reason_type"/>
					</group>
				</sheet>
			</form>
		</field>
	</record>

    <record model="ir.ui.view" id="calendar.reasons_tree_view">
        <field name="name">calendar.reasons.tree</field>
        <field name="model">calendar.reasons</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="active"/>
				<field name="reason_type"/>
            </tree>
        </field>
    </record>

	<record model="ir.actions.act_window"
		id="calendar_reasons_action">
		<field name="name">Reasons</field>
		<field name="res_model">calendar.reasons</field>
		<field name="view_type">form</field>
		<field name="view_mode">tree,form</field>
		<field name="help" type="html">
			<p class="oe_view_nocontent_create">
			</p>
		</field>
	</record>

	<menuitem id="main_menu_calendar_reasons"
		parent="base.menu_administration" sequence="5"
		name="Configuration Calendar" />

	<menuitem id="menu_calendar_reasons"
		parent="main_menu_calendar_reasons" name="Reasons" sequence="1"
		action="calendar_reasons_action" />
</odoo>