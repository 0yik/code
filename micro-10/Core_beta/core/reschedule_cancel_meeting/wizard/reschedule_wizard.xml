<odoo>
    <data>
        <record model="ir.ui.view" id="reschedule_wizard_form_view">
            <field name="name">reschedule.wizard.form</field>
            <field name="model">reschedule.wizard</field>
                <field name="arch" type="xml">
                    <form string="Cancel">
                        <group>
                        	<field name = "reason_id" required="1"/>
                        	<field name = "start_datetime" required="1"/>
                        	<label for="duration"/>
	                            <div>
	                                <field name="duration" widget="float_time" string="Duration" class="oe_inline"/>
	                                <span> hours</span>
	                            </div>
                            <field name="allday"/>
                        </group>
                        <footer>
                            <button name="reschedule_meeting" string="Save" type="object" class="btn-primary"/>
                            <button string="Cancel" class="btn-default" special="cancel"/> 
                        </footer>
                    </form>
                </field>
        </record>
        
        <record id="action_reschedule_wizard" model="ir.actions.act_window">
            <field name="name">Reschedule Meeting</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">reschedule.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="reschedule_wizard_form_view"/>
            <field name="target">new</field>
        </record>
   </data>
</odoo>