<odoo>
    <data>
        <record model="ir.ui.view" id="cancel_wizard_form_view">
            <field name="name">cancel.wizard.form</field>
            <field name="model">cancel.wizard</field>
                <field name="arch" type="xml">
                    <form string="Cancel">
                        <group>
                        	<group>
                        		<field name = "reason_id" required="1"/>
                        		<field name = "remarks"/>                         		                   		
                        	</group>
                        </group>
                        <footer>
                            <button name="cancel_meeting" string="Save" type="object" class="btn-primary"/>
                            <button string="Cancel" class="btn-default" special="cancel"/> 
                        </footer>
                    </form>
                </field>
        </record>
        
        <record id="action_cancel_wizard" model="ir.actions.act_window">
            <field name="name">Cancel Meeting</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cancel.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="cancel_wizard_form_view"/>
            <field name="target">new</field>
        </record>
   </data>
</odoo>