<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_account_form_inherit" model="ir.ui.view">
            <field name="name">View Account Form Inherit</field>
            <field name="model">account.account</field>
            <field name="inherit_id" ref="account.view_account_form"/>
            <field name="arch" type="xml">
                <field name="deprecated" position="after">
                    <field name="company_type" required="1"/>
                    <notebook  attrs="{'invisible': [('company_type','!=','group_company')]}">
                        <page>
                            <field name="company_lines_ids">
                                <tree string="Company Lines" editable="bottom">
                                    <field name="company_lines_id" invisible="1"/>
                                    <field name="company_id" required="1" domain="[('id','in',allowed_company_ids[0][2])]"/>
                                    <field name="allowed_company_ids" widget="many2many_tags" invisible="1"/>
                                    <field name="account_id" required="1" domain="[('company_id','=',company_id)]"/>
                                    <field name="code" required="1" readonly="1"/>
                                    <field name="percentage" required="1" readonly="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </field>
            </field>
        </record>

    </data>
</odoo>