<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_company_form_view_inherit" model="ir.ui.view">
            <field name="name">View Company Form View Inherit</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <field name="rml_header1" position="after">
                    <field name="company_type" required="1"/>
                    <notebook  attrs="{'invisible': [('company_type','!=','group_company')]}">
                        <page>
                            <field name="company_line_ids">
                                <tree string="Company Lines" editable="bottom">
                                    <field name="company_id" required="1"/>
                                    <field name="percentage" required="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </field>
            </field>
        </record>

    </data>
</odoo>