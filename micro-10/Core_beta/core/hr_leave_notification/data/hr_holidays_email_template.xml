<?xml version="1.0" encoding="utf-8"?>
<odoo>
   <data>

    <!-- Send Mail to Leave manager of Employee Template -->


    <record id="hm_email_temp_hr_holiday_hm" model="mail.template">
        <field name="name">Leave Manager Mail</field>
        <field name="email_from">${(object.from_mail())}</field>
        <field name="subject">Notification : Leave Approval for ${(object.employee_id.name)}</field>
        <field name="email_to">${(object.get_manager_work_email())}</field>
        <field name="model_id" ref="hr_holidays.model_hr_holidays" />
        <field name="auto_delete" eval="False" />
        <field name="body_html"><![CDATA[
            <div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34);">
                <p><b>Hi ${object.employee_id.leave_manager.name} ,</b></p>
                <div style="width: 900px; margin: 0px; padding: 5px 14px; line-height: 16px; background-color: #F2F2F2;">
                    <span style="color: #222; margin-bottom: 5px; display: block;">
                        <p>
                            <b>${object.employee_id.name}</b> is applying leave from <b>${object.date_from}</b> to <b>${object.date_to}</b>.<br/><br/>
                            Duration: ${object.number_of_days_temp}<br/><br/>
                            Remarks: <b>${object.report_note or ''}</b>
                            <br/><br/>To approve go to ${(object.get_system_url())}
                        </p>
                    </span>
                </div>
            </div>]]>
        </field>
    </record>

    </data>
</odoo>