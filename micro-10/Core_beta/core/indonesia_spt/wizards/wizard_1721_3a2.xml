<odoo>
    <!-- 1721-3 A2 FormView -->
    <record id="form_wizard_report_1721_3a2_view" model="ir.ui.view">
        <field name="name">Wizard 1721-3 A2 Report</field>
        <field name="model">wizard.1721.3a2.report</field>
        <field name="arch" type="xml">
            <form>
                <group string="Employees">
                    <field name="employee_ids" nolabel="1"/>
                </group>
                <group>
                    <field name="start_date" required="1"/>
                    <field name="end_date" required="1"/>
                </group>
                <footer>
                    <button class="oe_highlight" string="Print" type="object" name="print_report"/>
                    or
                    <button class="oe_link" string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- WizardReport ActionWindow -->
    <record model="ir.actions.act_window" id="action_wizard_report_1721_3a2">
        <field name="name">Report 1721 â€“ A2</field>
        <field name="res_model">wizard.1721.3a2.report</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>