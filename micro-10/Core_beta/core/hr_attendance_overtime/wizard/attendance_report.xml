<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="attendance_report_form_view" model="ir.ui.view">
            <field name="name">Attendance Wizard</field>
            <field name="model">attendance.report</field>
            <field name="arch" type="xml">
               <form>
                   <group>
                        <group string="Select Employees/Departments">
                            <field name="select_emp_dep" widget="radio"/>
                            <field name="employees_ids" widget="many2many_tags"
                               attrs="{'required':[('select_emp_dep','=','employee')], 'invisible':[('select_emp_dep','=','department')]}"/>
                            <field name="department_ids" widget="many2many_tags"
                               attrs="{'required':[('select_emp_dep','=','department')], 'invisible':[('select_emp_dep','=','employee')]}"/>
                        </group>
                       <group string="Select Date">
                            <field name="from_date" required="0"/>
                            <field name="to_date" required="0"/>
                        </group>
                        <footer>
                            <button string="Print" name="print_attendance_report" type="object" class="btn-primary"/>
                            <button string="Discard" class="btn-default" special="cancel"/>
                        </footer>
                    </group>
               </form>
            </field>
        </record>

        <record id="action_print_attendance_report_wizard" model="ir.actions.act_window">
            <field name="name">Generate Attendance Report</field>
            <field name="res_model">attendance.report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="attendance_report_form_view"/>
            <field name="target">new</field>
        </record>

        <menuitem name="Attendance Report" id="print_attendances_report" action="action_print_attendance_report_wizard" parent="hr_timesheet.menu_timesheets_reports"/>

         <report
            id="action_report_print_epmloyee_attendance"
            model="attendance.report"
            report_type="qweb-pdf"
            string="Attendances"
            name="hr_attendance_overtime.report_epmloyee_attendance"
            file="hr_attendance_overtime.report_epmloyee_attendance"
            menu="False"
        />
    </data>
</odoo>



