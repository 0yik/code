<odoo>
	<data>

		<record id="view_hr_employee_configuration_inherit" model="ir.ui.view">
			<field name="name">view.hr.employee.configuration</field>
			<field name="model">hr.employee.config.settings</field>
			<field name="inherit_id" ref="sg_hr_config.view_hr_employee_configuration"/>
			<field name="arch" type="xml">
				<xpath expr="//form/group[1]" position="after">
					<field name="company_id" invisible="1"/>
					<group string="Overtime">
                    	<!--<label for="id" string="Settings"/>-->
                    	<label string="OT 1.0 Hours"/>
                    	<div>
							<label string="Employee works on Public Holidays that fall on:" style="font-weight: bold;"/>
							<br/>
                    		<field name="ot1_monday" class="oe_inline"/>
                    		<label for="ot1_monday"/>
							<br/>
                    		<field name="ot1_tuesday" class="oe_inline"/>
                    		<label for="ot1_tuesday"/>
                    		<br/>
							<field name="ot1_wednesday" class="oe_inline"/>
                    		<label for="ot1_wednesday"/>
                    		<br/>
							<field name="ot1_thursday" class="oe_inline"/>
                    		<label for="ot1_thursday"/>
                    		<br/>
							<field name="ot1_friday" class="oe_inline"/>
                    		<label for="ot1_friday"/>
                    		<br/>
							<field name="ot1_saturday" class="oe_inline"/>
                    		<label for="ot1_saturday"/>
                    		<br/>
							<field name="ot1_sunday" class="oe_inline"/>
                    		<label for="ot1_sunday"/>
							<br/>
							<br/>
                    	</div>
                    	<label string="OT 1.5 Hours"/>
                    	<div>
							<label string="Employee works overtime on normal working days:" style="font-weight: bold;"/>
							<br/>
                    		<field name="ot1_5_monday" class="oe_inline"/>
                    		<label for="ot1_5_monday"/>
							<br/>
                    		<field name="ot1_5_tuesday" class="oe_inline"/>
                    		<label for="ot1_5_tuesday"/>
                    		<br/>
							<field name="ot1_5_wednesday" class="oe_inline"/>
                    		<label for="ot1_5_wednesday"/>
                    		<br/>
							<field name="ot1_5_thursday" class="oe_inline"/>
                    		<label for="ot1_5_thursday"/>
                    		<br/>
							<field name="ot1_5_friday" class="oe_inline"/>
                    		<label for="ot1_5_friday"/>
                    		<br/>
							<field name="ot1_5_saturday" class="oe_inline"/>
                    		<label for="ot1_5_saturday"/>
                    		<br/>
							<field name="ot1_5_sunday" class="oe_inline"/>
                    		<label for="ot1_5_sunday"/>
							<br/>
							<br/>
                    	</div>
                    	<label string="OT 2.0 Hours"/>
                    	<div>
							<label string="Employee works on Public Holidays that fall on:" style="font-weight: bold;"/>
							<br/>
                    		<field name="ot2_saturday" class="oe_inline"/>
                    		<label for="ot2_saturday"/>
                    		<br/>
							<field name="ot2_sunday" class="oe_inline"/>
                    		<label for="ot2_sunday"/>
							<br/>
                    	</div>
                    </group>
				</xpath>
			</field>
		</record>

	</data>
</odoo>