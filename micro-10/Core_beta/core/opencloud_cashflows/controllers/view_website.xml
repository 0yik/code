				<script type="text/javascript">
$(function () {
       var categories = (document.getElementById("categorias").value);
       var datas= (document.getElementById("datas").value);
       var datas = datas.split(",");

      var entradas = (document.getElementById("entradas").value);
      var entradas = entradas.split(',').map(function(item) {
            return parseInt(item);
       });

var saidas = (document.getElementById("saidas").value);
      var saidas = saidas.split(',').map(function(item) {
            return parseInt(item);
       });

var saldo = (document.getElementById("saldo").value);
      var saldo = saldo.split(',').map(function(item) {
            return parseInt(item);
       });

    $('#container').highcharts({
        title: {
            text: ' '
        },
        subtitle: {
            text: 'Source: <a href="www.opencloud.pro">www.opencloud.pro</a>'
        },

        xAxis: {
            categories: datas,
            //categories: ['Apples', 'Oranges', 'Pears', 'Bananas', 'Plums'],
        },


        labels: {
            items: []
        },

        series: [{
            type: 'column',
            name: 'Entradas',
            //data: 7203, 0, 1230,
            data: entradas,
        }, {
            type: 'column',
            name: 'Saidas',
            data: saidas,
        }, {
            type: 'spline',
            name: 'Saldo',
            data: saldo,
            marker: {
                lineWidth: 2,
                lineColor: Highcharts.getOptions().colors[8],
                fillColor: 'white'
            }
        },

{
            type: 'pie',
            name: 'Total consumption',
            //aqui
            center: [100, 80],
            size: 100,
            showInLegend: false,
            dataLabels: {
                enabled: false
            }
        }]
    });
});

</script>


