<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Account Payment form view inherited -->
        <record model="ir.ui.view" id="inherit_account_payment_form_view">
            <field name="name">account.payment.form.view.inherit</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <field name="partner_type" position="before">
                    <field name="customer_id" string="Customer ID" readonly="1"
                        invisible = "context.get('default_payment_type') == 'outbound'"/>
                </field>
            </field>
        </record>

        <!-- Account Payment Tree view inherited -->
        <record model="ir.ui.view" id="inherit_account_payment_tree_view">
            <field name="name">account.payment.tree.view.inherit</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_tree"/>
            <field name="arch" type="xml">
                <field name="payment_date" position="before">
                    <field name="customer_id" string="Customer ID"/>
                </field>
            </field>
        </record>

        <!-- Account Payment Search view inherited -->
        <record model="ir.ui.view" id="inherit_account_payment_search_view">
            <field name="name">account.payment.search.view.inherit</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_search"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="before">
                     <field name="customer_id" string="Customer ID"
                       filter_domain="[('customer_id','ilike',self)]"
                       invisible = "context.get('default_payment_type') == 'outbound'"/>
                </field>
                <xpath expr="//search/filter[3]" position="after">
                    <filter string="Customer ID" domain="[]" context="{'group_by': 'customer_id'}"
                    invisible = "context.get('default_payment_type') == 'outbound'"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>