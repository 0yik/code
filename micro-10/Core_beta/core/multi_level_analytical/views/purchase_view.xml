<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="purchase_order_form_inherit_analytic" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.analytic</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='order_line']/tree" position="attributes">
                <attribute name="editable"/>
            </xpath>

            <xpath expr="//field[@name='order_line']//form//field[@name='product_id']" position="before">
                <field name="state" invisible="1"/>
            </xpath>

            <xpath expr="//field[@name='order_line']//form//notebook//page[2]" position="after">
                <page string="Analytic Distribution" attrs="{'invisible':[('check_distribution','=', False)]}">
                    <field name="analytic_distribution_id">
                        <tree string="Analytic Distribution" editable="bottom">
                            <field name="rate"/>
                            <field name="analytic_level_id"/>
                            <field name="analytic_account_id" domain="[('level_id', '=', analytic_level_id)]"/>
                        </tree>
                    </field>
                </page>
            </xpath>

            <xpath expr="//field[@name='order_line']//tree//field[@name='company_id']" position="after">
                <field name="check_distribution" invisible="1"/>
                <field name="check_analytic_account" invisible="1"/>
            </xpath>

            <xpath expr="//field[@name='order_line']//form//field[@name='company_id']" position="after">
                <field name="analytic_tag_ids" widget="many2many_tags" />
                <field name="check_distribution" invisible="1"/>
                <field name="check_analytic_account" invisible="1"/>
            </xpath>

            <xpath expr="//field[@name='order_line']//tree//field[@name='account_analytic_id']" position="replace">
                <field name="account_analytic_id" attrs="{'invisible':['|',('check_distribution','!=', False),('check_analytic_account','=',False)]}"/>
            </xpath>

            <xpath expr="//field[@name='order_line']//form//field[@name='account_analytic_id']" position="replace">
                <field name="account_analytic_id" attrs="{'invisible':['|',('check_distribution','!=', False),('check_analytic_account','=',False)]}"/>
            </xpath>

        </field>
    </record>

</odoo>