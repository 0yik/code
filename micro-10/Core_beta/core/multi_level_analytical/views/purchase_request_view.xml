<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="purchase_request_form_inherit_analytic" model="ir.ui.view">
        <field name="name">purchase.request.form.inherit.analytic</field>
        <field name="model">purchase.request</field>
        <field name="inherit_id" ref="purchase_request.view_purchase_request_form"/>
        <field name="arch" type="xml">


            <xpath expr="//field[@name='line_ids']//form//sheet//group[1]" position="after">
                <group attrs="{'invisible':[('check_distribution','=', False)]}">
                    <field name="analytic_distribution_id"  nolabel="1">
                        <tree string="Analytic Distribution" editable="bottom">
                            <field name="rate"/>
                            <field name="analytic_level_id"/>
                            <field name="analytic_account_id" domain="[('level_id', '=', analytic_level_id)]"/>
                        </tree>
                    </field>
                </group>
            </xpath>

            <xpath expr="//field[@name='line_ids']//tree//field[@name='date_required']" position="after">
                <field name="check_distribution" invisible="1"/>
                <field name="check_analytic_account" invisible="1"/>
            </xpath>

            <xpath expr="//field[@name='line_ids']//tree//field[@name='analytic_account_id']" position="replace">
                <field name="analytic_account_id" attrs="{'invisible':['|',('check_distribution','!=', False),('check_analytic_account','=',False)]}"/>
            </xpath>

            <xpath expr="//field[@name='line_ids']//form//field[@name='date_required']" position="after">
                <field name="check_distribution" invisible="1"/>
                <field name="check_analytic_account" invisible="1"/>
            </xpath>

            <xpath expr="//field[@name='line_ids']//form//field[@name='analytic_account_id']" position="replace">
                <field name="analytic_account_id" attrs="{'invisible':['|',('check_distribution','!=', False),('check_analytic_account','=',False)]}"/>
            </xpath>

        </field>
    </record>

    <record id="purchase_requisition_form_inherit_analytic" model="ir.ui.view">
        <field name="name">purchase.requisition.form.inherit.analytic</field>
        <field name="model">purchase.requisition</field>
        <field name="inherit_id" ref="purchase_requisition.view_purchase_requisition_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='line_ids']/tree" position="attributes">
                <attribute name="editable"/>
            </xpath>

            <xpath expr="//field[@name='line_ids']//form//group[1]" position="after">
                <group>
                    <field name="analytic_distribution_id" attrs="{'invisible':[('check_distribution','=', False)]}">
                        <tree string="Analytic Distribution" editable="bottom">
                            <field name="rate"/>
                            <field name="analytic_level_id"/>
                            <field name="analytic_account_id" domain="[('level_id', '=', analytic_level_id)]"/>
                        </tree>
                    </field>
                </group>
            </xpath>

            <xpath expr="//field[@name='line_ids']//tree//field[@name='price_unit']" position="after">
                <field name="check_distribution" invisible="1"/>
                <field name="check_analytic_account" invisible="1"/>
            </xpath>

            <xpath expr="//field[@name='line_ids']//tree//field[@name='account_analytic_id']" position="replace">
                <field name="account_analytic_id" attrs="{'invisible':['|',('check_distribution','!=', False),('check_analytic_account','=',False)]}"/>
            </xpath>

            <xpath expr="//field[@name='line_ids']//form//field[@name='schedule_date']" position="after">
                <field name="price_unit"/>
                <field name="check_distribution" invisible="1"/>
                <field name="check_analytic_account" invisible="1"/>
                <field name="has_purchase_request_lines" invisible="1"/>
            </xpath>

            <xpath expr="//field[@name='line_ids']//form//field[@name='account_analytic_id']" position="replace">
                <field name="account_analytic_id" attrs="{'invisible':['|',('check_distribution','!=', False),('check_analytic_account','=',False)]}"/>
            </xpath>

        </field>
    </record>

</odoo>