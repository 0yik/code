<odoo>
    <data>
        <record id="sale_view_order_form_hm_realestate_owners" model="ir.ui.view">
            <field name="name">sale.view.order.form.hm.realestate.owners</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_term_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='order_line']//tree/field[@name='product_id']" position="before">
                    <field name="property"/>
                </xpath>
                <xpath expr="//field[@name='order_line']//tree/field[@name='product_id']" position="attributes">
                    <attribute name="string">Unit No.</attribute>
                    <attribute name="domain">[('categ_id', '=', property)]</attribute>
                </xpath>
                <xpath expr="//field[@name='fiscal_position_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//group[@name='sale_pay']" position="attributes">
                    <attribute name="attrs">{'invisible': [('state', 'not in', ('sale','done'))]}</attribute>
                </xpath>
            </field>
        </record>
        <record id="view_order_form_inherit_sale_stock_hm_realestate_owners" model="ir.ui.view">
            <field name="name">view.order.form.inherit.sale.stock.hm.realestate.owners</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale_stock.view_order_form_inherit_sale_stock"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='sale_shipping']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>