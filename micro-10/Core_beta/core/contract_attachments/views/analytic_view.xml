<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="contract_form_view_inherit" model="ir.ui.view">
        <field name="name">Contract Form View Inherit</field>
        <field name="model">account.analytic.account</field>
        <field name="inherit_id" ref="stable_account_analytic_analysis.account_analytic_account_form_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@name='contract_information']" position="after">
                <page name="contract_attachment" string="Attachments">
                    <separator string="Contract Attachments"/>
                    <field name="attachment_ids">
                        <tree editable="bottom">
                            <field name="file" filename="file_name" required="1"/>
                            <field name="file_name" invisible="1"/>
                            <field name="user_id" readonly="1"/>
                            <field name="date" readonly="1"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
