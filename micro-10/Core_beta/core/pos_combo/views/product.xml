<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="product_product_combo_items_form">
            <field name="name">product.product.combo.items</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="groups_id" eval="[(4, ref('point_of_sale.group_pos_manager'))]"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='options']" position="inside">
                    <div>
                        <field name="is_combo"/>
                        <label for="is_combo"/>
                    </div>
                </xpath>
                <xpath expr="//page[1]" position="before">
                    <page name="pos_extend" string="Combo items" attrs="{'invisible': [('is_combo', '!=', True)]}">
                        <group>
                            <field name="combo_limit" attrs="{'required': [('is_combo', '=', True)]}"/>
                        </group>
                        <separator string="Items of combo can choice and select for change"/>
                        <group>
                            <field name="pos_combo_item_ids" nolabel="1" attrs="{'required': [('is_combo', '=', True)]}">
                                <tree string="Combo items" editable="1">
                                    <field name="product_id" options="{'no_create_edit': True}"/>
                                    <field name="quantity" options="{'no_create_edit': True}"/>
                                    <field name="default" options="{'no_create_edit': True}"/>
                                </tree>
                            </field>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>

