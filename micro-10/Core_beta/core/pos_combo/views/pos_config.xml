<?xml version="1.0"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="pos_config_auto_create_delivery_order">
            <field name="name">pos.config.auto.create.delivery.order</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_config_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='iface_display_categ_images']" position="after">
                        <field name="auto_create_delivery_order"/>
                        <field name="picking_state" attrs="{'invisible': [('auto_create_delivery_order', '=', False)], 'required': [('auto_create_delivery_order', '=', True)]}"/>
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</odoo>