<odoo>

    <record model="ir.ui.view" id="wizard_form_view">
        <field name="name">wizard.form.view</field>
        <field name="model">disciplinary.wizard</field>
        <field name="arch" type="xml">
            <form string="User Form">            
              <group>
                <group>
                    <field name="employee"/>
                    <field name="disciplined_date"/>
                    <field name="disciplinary_stages"/>
                    <field name="valid_for_months"/>
                    <field name="reason_disciplinary"/>
                    <!-- <field name="manual_action" readonly="1"/> -->
                    <field name="send_an_email" readonly="1"/>
                    <!-- <field name="send_a_letter" readonly="1"/> -->
                </group>
              </group>
             </form>
             <footer>
                <button string="Cancel" class="oe_link" special="cancel"/>
                or 
                <button name="allocate_email" string="Allocate" type="object" default_focus="1" class="oe_highlight"/>
             </footer>
        </field>
    </record> 

    <act_window id="wizard_allocate_disciplinary"
            name="Allocate Disciplinary"
            src_model="disciplinary.stage"
            res_model="disciplinary.wizard"
            view_mode="form"
            target="new"
            />

</odoo>