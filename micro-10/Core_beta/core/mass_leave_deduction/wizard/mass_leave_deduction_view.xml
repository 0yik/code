<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_mass_leave_deduction_form" model="ir.ui.view">
            <field name="name">mass.leave.deduction.form</field>
            <field name="model">mass.leave.deduction</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
            <form string="Leave Deduction">
                <group>
                    <field name="leave_type_id"/>
                    <field name="fiscal_year" widget="selection" required="1"/>
                    <label for="no_of_days" string="Duration"/>
                    <div>
                        <div>
                            <field name="date_from" required="1" class="oe_inline"/>
                            <label string="-" class="oe_inline"/>
                            <field name="date_to" required="1" class="oe_inline"/>
                        </div>
                        <div>
                            <field name="no_of_days" class="oe_inline"/> days
                        </div>
                    </div>
                    <field name="reason" required="1"/>
                    <field name="employee_ids"/>
                </group>
                <footer>
                    <button special="cancel" string="Cancel"/> or 
                    <button name="create_leave_deduction" string="Deduct" type="object"/>
                </footer>
            </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_open_mass_leave_deduction_view">
            <field name="name">Leave Deduction</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">mass.leave.deduction</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>



        <menuitem id="menu_mass_leave_deduction"
            parent="hr_holidays.menu_hr_holidays_my_leaves"
            sequence="200"
            action="act_open_mass_leave_deduction_view"/>
    </data>
</odoo>
