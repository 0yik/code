<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <menuitem id="visitor_menu_parent" name="Visitor" sequence="7" />

        <menuitem id="menu_visitor_chiled" parent="visitor_menu_parent" name="Visitor" sequence="14" />

        <record id="res_visitor_tree" model="ir.ui.view">
            <field name="name">res.visitor.tree</field>
            <field name="model">res.visitor</field>
            <field name="arch" type="xml">
                <tree string="Visitor">
                    <field name="name"/>
                    <field name="company_visitor"/>
                    <field name="looking_for"/>
                    <field name="purpose_visitor"/>
                    <field name="check_in"/>
                    <field name="check_out"/>
                    <field name="state"/>
                    <button name="action_check_out" string="Check Out" type="object" attrs="{'invisible': [('state', '!=', 'check_in')]}"></button>
                    <button name="action_check_in" type="object" string="Check In" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                </tree>
            </field>
        </record>

        <record id="res_visitor_form_view" model="ir.ui.view">
            <field name="name">res.visitor.form</field>
            <field name="model">res.visitor</field>
            <field name="arch" type="xml">
                <form class="oe_form_configuration">
                    <header>
                        <button name="action_check_in" type="object" states="draft" string="Check In" class="oe_highlight"/>
                        <button name="action_check_out" type="object" states="check_in" string="Check Out" class="oe_highlight"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,check_in,check_out" />
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" string="Name" class="oe_edit_only"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="company_visitor"/>
                                <field name="looking_for"/>
                                <field name="purpose_visitor"/>
                                <field name="contact_number"/>
                            </group>
                            <group>
                                <field name="nric"/>
                                <field name="check_in" readonly="1"/>
                                <field name="check_out" readonly="1"/>
                            </group>
                        </group>
                        <separator string="Remarks"></separator>
                        <field name="remarks_visitor"/>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="res_visitor_hm_action" model="ir.actions.act_window">
            <field name="name">Visitor</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.visitor</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to define a new Visitor.
                </p>
            </field>
        </record>

        <menuitem action="res_visitor_hm_action" id="menu_product_menu_visitor_action" parent="menu_visitor_chiled" sequence="14" />



        <record id="res_visitor_purpose_tree" model="ir.ui.view">
            <field name="name">res.visitor.purpose.tree</field>
            <field name="model">res.purpose</field>
            <field name="arch" type="xml">
                <tree string="Visitor Purpose">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="res_visitor_purpose_form_view" model="ir.ui.view">
            <field name="name">res.visitor.form</field>
            <field name="model">res.purpose</field>
            <field name="arch" type="xml">
                <form class="oe_form_configuration">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" string="Name" class="oe_edit_only"/>
                            <h1><field name="name"/></h1>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="res_visitor_hm_purpose_action" model="ir.actions.act_window">
            <field name="name">Visitor Purpose</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.purpose</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to define a new Visitor Purpose.
                </p>
            </field>
        </record>

        <menuitem id="menu_product_menu_visitor_purpose_action" parent="visitor_menu_parent" name="Configuration" sequence="16" />

        <menuitem action="res_visitor_hm_purpose_action" id="menu_product_menu_visitor_purpose_main_action" name="Visitor Purpose" parent="menu_product_menu_visitor_purpose_action" sequence="14" />



        <record id="view_account_res_visitor_report_pivot" model="ir.ui.view">
             <field name="name">account.invoice.visitor.report.pivot</field>
             <field name="model">res.visitor</field>
             <field name="arch" type="xml">
                 <pivot string="Visitor" disable_linking="True">
                     <field name="name" type="row"/>
                     <field name="company_visitor" type="col"/>
                     <field name="check_in" type="measure"/>
                     <field name="check_out" type="measure"/>
                 </pivot>
             </field>
        </record>

        <record id="action_res_visitor_report_all" model="ir.actions.act_window">
            <field name="name">Visitor Analysis</field>
            <field name="res_model">res.visitor</field>
            <field name="view_type">form</field>
            <field name="view_mode">pivot</field>
        </record>

        <menuitem id="reporting_visitor_purpose_action" parent="visitor_menu_parent" name="Reporting" sequence="15" />

        <menuitem name="Visitor Report" action="action_res_visitor_report_all" id="menu_action_res_visitor_report_all" parent="reporting_visitor_purpose_action" sequence="20"/>

    </data>
</odoo>