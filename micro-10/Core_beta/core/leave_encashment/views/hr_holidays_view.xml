<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_hr_holidays_type_inherit_form_leave_encashment" model="ir.ui.view">
            <field name="name">View Hr Holidays Type Inherit Form Leave Encashment</field>
            <field name="model">hr.holidays.status</field>
            <field name="inherit_id" ref="past_dated_leave_allowed.view_hr_holidays_type_inherit_form"/>
            <field name="arch" type="xml">
                <field name="allow_past_days" position="after">
                    <field name="leave_cashable"/>
                    <field name="max_encash_days" attrs="{'invisible': [('leave_cashable', '=', False)]}"/>
                    <field name="calculation_type" attrs="{'invisible': [('leave_cashable', '=', False)]}"/>
                </field>
            </field>
        </record>

    </data>
</odoo>