<?xml version="1.0" encoding="utf-8"?>
<odoo>
	
	<template id="assets_login" inherit_id="web.assets_frontend">
   	 	<xpath expr="." position="inside">
   	 		<link rel="stylesheet" href="/password_validation_security/static/src/css/password_validation_security.css"/>
   	 	</xpath>
    </template>
	
	
	<template id="reset_password" inherit_id="auth_signup.reset_password">
		<p t-if="error" position="after">
			<p class="alert alert-info" t-if="password_info">
                <t t-raw="password_info"/>
            </p>
		</p>
	</template>
	
</odoo>