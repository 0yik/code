<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="view_general_configuration" model="ir.ui.view">
            <field name="name">base.config.settings.form.inherit</field>
            <field name="model">base.config.settings</field>
            <field name="inherit_id" ref="base_setup.view_general_configuration"/>
            <field name="arch" type="xml">
	            <xpath expr="//group[1]" position="after">
	            	<group>
                        <label for="id" string="Password Security"/>
                        <div>
                            <div>
                                <field name="activate_password_validation" class="oe_inline"/>
                                <label for="activate_password_validation"/>
                                <p>
                                	When it is activated, below validations can be used.
                                </p>
                            </div>
                            
                            <div attrs="{'invisible': [('activate_password_validation', '=', False)]}">
		                        <field name="password_change_upon_initial_logon" class="oe_inline"/>
		                         <label for="password_change_upon_initial_logon"/>
		                    </div>
                            
                    		<div attrs="{'invisible': [('activate_password_validation', '=', False)]}">
		                        <field name="allowed_login_attempts" class="oe_inline"/>
		                         <label for="allowed_login_attempts"/>
		                    </div>
		                    
		                    <div attrs="{'invisible': [('activate_password_validation', '=', False)]}">
		                        <field name="activate_minimum_password_length" class="oe_inline"/>
		                         <label for="activate_minimum_password_length"/>
		                    </div>
		                    
		                    <div attrs="{'invisible': ['|', ('activate_minimum_password_length', '=', False), ('activate_password_validation', '=', False)]}">
		                        <field name="minimum_password_length" class="oe_inline"/>
		                         <label for="minimum_password_length"/>
		                    </div>
		                    
		                    <div attrs="{'invisible': [('activate_password_validation', '=', False)]}">
		                        <field name="password_complexity" class="oe_inline"/>
		                         <label for="password_complexity"/>
		                    </div>
		                    
		                    <div attrs="{'invisible': [('activate_password_validation', '=', False)]}">
		                        <field name="password_history" class="oe_inline"/>
		                         <label for="password_history"/>
		                    </div>
		                    
		                    <div attrs="{'invisible': [('activate_password_validation', '=', False)]}">
		                        <field name="activate_password_change_reminder" class="oe_inline"/>
		                         <label for="activate_password_change_reminder"/>
		                    </div>
		                    
		                    <div attrs="{'invisible': ['|', ('activate_password_change_reminder', '=', False), ('activate_password_validation', '=', False)]}">
		                        <field name="change_reminder_days" class="oe_inline"/>
		                         <label for="change_reminder_days"/>
		                    </div>
		                    
		                    
                        </div>
                    </group>
                </xpath>
            </field>
        </record>
</odoo>
