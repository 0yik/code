<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="modifier_job_position_view">
        <field name="name">job.possion.inherit.form.view</field>
        <field name="model">hr.job</field>
        <field name="inherit_id" ref="hr.view_hr_job_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/div[last()]" position="after">
                <group string="Goals for Promotion" colspan="4">
                    <field name="goal_promo_ids" nolabel="1" colspan="4">
                        <tree string="Goals for Promotion" editable="bottom">
                            <field name="goal_defination" options="{'no_create_edit': True}"/>
                            <field name="goal_performance"/>
                            <field name="target_value_reach"/>
                            <field name="goal_description"/>
                        </tree>
                    </field>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
