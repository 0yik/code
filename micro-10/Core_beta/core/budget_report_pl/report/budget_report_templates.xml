<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="external_layout_footer_for_budget">
        <div class="footer">
            <div class="text-center" style="border-top: 1px solid black;">
                <t t-if="company.custom_footer">
                    <span t-raw="company.rml_footer"/>
                </t>
                <ul class="list-inline">
                    <li>Page:</li>
                    <li><span class="page"/></li>
                    <li>/</li>
                    <li><span class="topage"/></li>
                </ul>
            </div>
        </div>
    </template>

    <template id="external_layout_for_budget">
        <!-- Multicompany -->
        <t t-if="not o and doc">
            <t t-set="o" t-value="doc"/>
        </t>
        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id"/>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"/>
        </t>
        <t t-raw="0" />
        <t t-call="budget_report_pl.external_layout_footer_for_budget"/>
    </template>

    <template id="report_budget_pl_document">
        <t t-call="budget_report_pl.external_layout_for_budget">
            <t t-set="doc" t-value="doc.with_context({'lang':doc.user_id.partner_id.lang})" />
            <div class="page">
                <div class="oe_structure"/>
                <h3 class="text-center">
                    <span t-field="doc.user_id.company_id.name"/>
                </h3>
                <h2 class="text-center">
                    <span>Trading and Profit &amp; Loss Account</span>
                </h2>
                <h3 class="text-center">
                    <span t-field="doc.date_from"/> - <span t-field="doc.date_to"/>
                </h3>

                <div class="row" name="total">
                    <div class="col-xs-4 pull-right">
                        <table class="table-condensed">
                            <tr>
                                <td><strong>PRINTED ON :</strong></td>
                                <td class="text-left">
                                    <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d/%m/%Y')"/>
                                </td>
                            </tr>
                            <tr>
                                <td><strong>PRINTED BY :</strong></td>
                                <td class="text-left">
                                    <span t-esc="user.name"/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>

                <br/>

                <t>
                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th>Account</th>
                                <th class="text-right">Budget</th>
                                <th class="text-right">Month-To-Date</th>
                                <th class="text-right">Variance</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set='total_planned' t-value='0.00'/>
                            <t t-set='total_practical' t-value='0.00'/>
                            <t t-set='total_variance' t-value='0.00'/>
                            <t t-foreach="doc.line_ids" t-as="line">
                                <tr>
                                    <td>
                                        <span t-field="line.account_id.name"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="line.planned_amount"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="line.practical_amount"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-esc="line.planned_amount - line.practical_amount"/>
                                    </td>
                                </tr>
                                <t t-set='total_planned' t-value='total_planned + line.planned_amount'/>
                                <t t-set='total_practical' t-value='total_practical + line.practical_amount'/>
                                <t t-set='total_variance' t-value='total_variance + line.planned_amount - line.practical_amount'/>
                            </t>
                            <tr class="border-black">
                                <td>
                                    <span/>
                                </td>
                                <td class="text-right">
                                    <strong><span t-esc="total_planned"/></strong>
                                </td>
                                <td class="text-right">
                                    <strong><span t-esc="total_practical"/></strong>
                                </td>
                                <td class="text-right">
                                    <strong><span t-esc="total_variance"/></strong>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </t>

                <div class="oe_structure"/>
            </div>
        </t>
    </template>

    <template id="report_budget_pl">
        <t t-call="report.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="budget_report_pl.report_budget_pl_document" t-lang="doc.user_id.partner_id.lang"/>
            </t>
        </t>
    </template>

