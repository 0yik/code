<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

<!-- Employee KRA -->

        <record id="view_employee_kra_form_chart" model="ir.ui.view">
            <field name="name">employee.kra.form</field>
            <field name="model">employee.kra</field>
            <field name="inherit_id" ref="employee_kra.view_employee_kra_form"/>
            <field name="arch" type="xml">
                 <xpath expr="//field[@name='subordinate_id']" position="attributes">
                    <attribute name="domain">[('parent_id', 'child_of', employee_id),('id', '!=', employee_id)]</attribute>
                 </xpath>
                 <xpath expr="//field[@name='manager_id']" position="attributes">
                    <attribute name="context">{'kra_employee_id':employee_id}</attribute>
                 </xpath>
            </field>
        </record>

    </data>
</openerp>

