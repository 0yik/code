<odoo>
    <data>

        <record id="view_sg_leave_contract_inherit_auto" model="ir.ui.view">
            <field name="name">view.sg.leave.contract.form.inherited.view</field>
            <field name="model">holiday.group.config</field>
            <field name="inherit_id" ref="sg_leave_extended.view_sg_leave_contract_form_inherited_view"/>
            <field name="arch" type="xml">
                <xpath expr="//form/group" position="after">
                    <separator name="auto_allocation" string="Leave Auto Allocation"/>
                    <div><field name="by_joined_year"/><strong>Annual Leave by Joined Year</strong></div>
                    <field name="line_ids" style="width:30%;" attrs="{'invisible':[('by_joined_year','!=',True)]}">
                        <tree editable="bottom">
                            <field name="year"/>
                            <field name="days"/>
                        </tree>
                    </field>
                    <div><field name="maternity_leave"/><strong>Maternity Leave</strong></div>
                    <field name="maternity_leave_ids" attrs="{'invisible':[('maternity_leave','!=',True)]}">
                        <tree editable="bottom">
                            <field name="year"/>
                            <field name="gender"/>
                            <field name="relationship"/>
                            <field name="birth_date"/>
                            <field name="nationality_ids" widget="many2many_tags"/>
                            <field name="days"/>
                        </tree>
                    </field>
                    <div><field name="sick_leave"/><strong>Sick Leave</strong></div>
                    <field name="sick_leave_ids" attrs="{'invisible':[('sick_leave','!=',True)]}">
                        <tree editable="bottom">
                            <field name="year"/>
                            <field name="days"/>
                        </tree>
                    </field>
                    <div><field name="hospitalisation_leave"/><strong>Hospitalisation Leave</strong></div>
                    <field name="hospitalisation_leave_ids" attrs="{'invisible':[('hospitalisation_leave','!=',True)]}">
                        <tree editable="bottom">
                            <field name="year"/>
                            <field name="days"/>
                        </tree>
                    </field>
                    <div><field name="childcare_leave"/><strong>Childcare Leave</strong></div>
                    <field name="childcare_leave_ids" attrs="{'invisible':[('childcare_leave','!=',True)]}">
                        <tree editable="bottom">
                            <field name="year"/>
                            <field name="age"/>
                            <field name="nationality_ids" widget="many2many_tags"/>
                            <field name="days"/>
                        </tree>
                    </field>
                    <div><field name="ext_childcare_leave"/><strong>Extended Childcare Leave</strong></div>
                    <field name="ext_childcare_leave_ids" attrs="{'invisible':[('ext_childcare_leave','!=',True)]}">
                        <tree editable="bottom">
                            <field name="year"/>
                            <field name="age_from"/>
                            <field name="age_to"/>
                            <field name="nationality_ids" widget="many2many_tags"/>
                            <field name="days"/>
                        </tree>
                    </field>
                    <div><field name="paternity_leave"/><strong>Paternity Leave</strong></div>
                    <field name="paternity_leave_ids" attrs="{'invisible':[('paternity_leave','!=',True)]}">
                        <tree editable="bottom">
                            <field name="year"/>
                            <field name="gender"/>
                            <field name="relationship"/>
                            <field name="nationality_ids" widget="many2many_tags"/>
                            <field name="days"/>
                        </tree>
                    </field>
                    <div><field name="shared_parental_leave"/><strong>Shared Parental Leave</strong></div>
                    <field name="shared_parental_leave_ids" attrs="{'invisible':[('shared_parental_leave','!=',True)]}">
                        <tree editable="bottom">
                            <field name="year"/>
                            <field name="gender"/>
                            <field name="marital"/>
                            <field name="relationship"/>
                            <field name="birth_date"/>
                            <field name="nationality_ids" widget="many2many_tags"/>
                            <field name="days"/>
                        </tree>
                    </field>
                    <div><field name="unpaid_infant_care_leave"/><strong>Unpaid Infant Care Leave</strong></div>
                    <field name="unpaid_infant_care_leave_ids" attrs="{'invisible':[('unpaid_infant_care_leave','!=',True)]}">
                        <tree editable="bottom">
                            <field name="year"/>
                            <field name="age"/>
                            <field name="nationality_ids" widget="many2many_tags"/>
                            <field name="days"/>
                        </tree>
                    </field>
                </xpath>
            </field>
        </record>

    </data>
</odoo>