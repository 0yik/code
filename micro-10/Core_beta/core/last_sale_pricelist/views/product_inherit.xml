<odoo>
	<record id="product_template_form_view_erp_inherit" model="ir.ui.view">
        <field name="name">product.template.common.inherit.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
        	<xpath expr="//page[@name='notes']" position="after">
        		<page string="Last Sale Price List">
        			<field name="price_list_line" readonly="1">
        				<tree>
        					<field name="partner_id"/>
        					<field name="product_variant_id"/>
        					<field name="order_id"/>
        					<field name="sale_date"/>
        					<field name="product_qty"/>
        					<field name="price_unit"/>
        					<field name="sales_person_id"/>
        				</tree>
        				<form string="Last Sale Price List">
        					<group>
        						<group>
        							<field name="partner_id"/>
        							<field name="product_variant_id"/>
		        					<field name="product_qty"/>
		        					<field name="price_unit"/>
        						</group>
        						<group>
        							<field name="order_id"/>
		        					<field name="sale_date"/>
		        					<field name="sales_person_id"/>
        						</group>
        					</group>
        				</form>
        			</field>
        		</page>
        	</xpath>
        </field>
   	</record>
</odoo>