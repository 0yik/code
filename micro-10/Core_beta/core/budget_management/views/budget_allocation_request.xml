<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="budget_allocation_sequence" model="ir.sequence">
        <field name="name">Budget Allocation Sequence</field>
        <field name="code">budget.allocation.sequence</field>
        <field name="prefix">BAR/%(year)s/</field>
        <field name="padding">4</field>
        <field name="implementation">no_gap</field>
    </record>

    <record id="view_budget_allocation_request_tree" model="ir.ui.view">
        <field name="name">Budget Allocation Request Tree</field>
        <field name="model">budget.allocation.request</field>
        <field name="arch" type="xml">
            <tree string="Budget Allocation Request">
                <field name="name"/>
                <field name="requester_id"/>
                <field name="budget_id"/>
                <field name="budget_position_id"/>
                <field name="analytic_account_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_budget_allocation_request_form" model="ir.ui.view">
        <field name="name">Budget Allocation Request Form</field>
        <field name="model">budget.allocation.request</field>
        <field name="arch" type="xml">
            <form string="Budget Allocation Request">
                <header>
                    <button name="submit_for_approval" states="draft" string="Submit for Approval" type="object" class="btn btn-primary"/>
                    <button name="button_cancel" states="draft" string="Cancel" type="object" class="btn btn-default"/>
                    <button name="button_approve" states="waiting_for_approval" string="Approve" type="object" class="btn btn-primary"/>
                    <button name="button_reject" states="waiting_for_approval" string="Reject" type="object" class="btn btn-default"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,waiting_for_approval,approved"/>
                </header>
                <sheet>
                    <label for="name" class="oe_edit_only"/>
                    <h1>
                        <field name="name" readonly="1"/>
                    </h1>
                    <group>
                        <group>
                            <field name="requester_id" attrs="{'readonly':[('state','!=','draft')]}" required="1"/>
                            <field name="date" attrs="{'readonly':[('state','!=','draft')]}" required="1"/>
                            <field name="budget_id" domain="[('state','=','validate')]" attrs="{'readonly':[('state','!=','draft')]}" required="1"/>
                        </group>
                        <group>
                            <field name="budget_position_id" attrs="{'readonly':[('state','!=','draft')]}" required="1"/>
                            <field name="analytic_account_id" attrs="{'readonly':[('state','!=','draft')]}" required="1"/>
                            <field name="reserve_budget" attrs="{'readonly':[('state','!=','draft')]}" required="1"/>
                        </group>
                    </group>
                    <separator string="Reason"/>
                    <field name="reason" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_budget_allocation_request_search" model="ir.ui.view">
        <field name="name">Budget Allocation Request Search</field>
        <field name="model">budget.allocation.request</field>
        <field name="arch" type="xml">
            <search string="Search Alias">
                <field name="name"/>
                <field name="requester_id"/>
                <field name="budget_id"/>
                <field name="budget_position_id"/>
                <field name="analytic_account_id"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Waiting for Approval" name="waiting_for_approval" domain="[('state', '=', 'waiting_for_approval')]"/>
                <filter string="Approved" name="approved" domain="[('state', '=', 'approved')]"/>
                <filter string="Rejected" name="rejected" domain="[('state', '=', 'rejected')]"/>
                <filter string="Cancelled" name="cancel" domain="[('state', '=', 'cancelled')]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="state" context="{'group_by':'state'}"/>
                    <filter string="Requester" name="requester_id" context="{'group_by':'requester_id'}"/>
                    <filter string="Budget" name="budget_id" context="{'group_by':'budget_id'}"/>
                    <filter string="Analytic Account" name="analytic_account_id" context="{'group_by':'analytic_account_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_budget_allocation_request" model="ir.actions.act_window">
        <field name="name">Budget Allocation Request</field>
        <field name="res_model">budget.allocation.request</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'readonly_by_pass': True}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click here to create a budget allocation request
            </p>
        </field>
    </record>

    <menuitem id="menu_budget_allocation_request" name="Budget Allocation Request" action="action_budget_allocation_request"
         parent="budget_management.menu_budget" sequence="75"/>

</odoo>