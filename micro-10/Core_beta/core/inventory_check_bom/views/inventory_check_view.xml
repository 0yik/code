<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_inventory_check_tree" model="ir.ui.view">
            <field name="name">inventory.check.tree</field>
            <field name="model">inventory.check</field>
            <field name="inherit_id" ref="inventory_check.view_inventory_check_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree/field[@name='stock_quant_id']" position="replace">
                    <field name="string_stock_quant"/>
                </xpath>

                <xpath expr="//tree/field[@name='mrp_production_id']" position="after">
                    <field name="mo_scheduled_date"/>
                    <field name="status"/>
                </xpath>
                <xpath expr="//tree" position="attributes">
                    <attribute name="decoration-danger">status in ('not_available','insufficient _to_produce')</attribute>
                    <attribute name="decoration-success">status in ('available','sufficient_to_produce')</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
