<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="helpdesk_team_ticket_user_access_rule" model="ir.rule">
        <field name="name">Helpdesk Team ticket User</field>
        <field name="model_id" ref="helpdesk.model_helpdesk_ticket"/>
        <field name="domain_force">[('team_id.member_ids', 'in', [user.id])]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
       	 <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
        <field name="groups" eval="[(4, ref('helpdesk.group_helpdesk_user'))]"/>
    </record>

    <record id="helpdesk_own_ticket_user_rule" model="ir.rule">
        <field name="name">Helpdesk ticket User</field>
        <field name="model_id" ref="helpdesk.model_helpdesk_ticket"/>
        <field name="domain_force">[('user_id', '=', user.id)]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
         <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
        <field name="groups" eval="[(4, ref('helpdesk.group_helpdesk_user'))]"/>
    </record>

    <record id="helpdesk_ticket_manager_rule" model="ir.rule">
        <field name="name">Helpdesk ticket Manager</field>
        <field name="model_id" ref="helpdesk.model_helpdesk_ticket"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
         <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
        <field name="groups" eval="[(4, ref('helpdesk.group_helpdesk_manager'))]"/>
    </record>
</odoo>