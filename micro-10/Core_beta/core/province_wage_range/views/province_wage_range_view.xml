<?xml version="1.0"?>
<odoo>

        <record model="ir.ui.view" id="province_wage_range_form_view">
            <field name="name">province.wage.range.form</field>
            <field name="model">province.wage.range</field>
            <field name="arch" type="xml">
                <form string="Province Wage Range">
                    <sheet>
                        <group col="4">
		                    <field name="country_id"/>
		                    <field name="min_wage"/>
		                    <field name="state_id" domain="[('country_id','=',country_id)]"/>
		                    <field name="max_wage"/>
		                    <field name="code" invisible="1"/>
		                </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="province_wage_range_tree_view">
            <field name="name">province.wage.range.tree</field>
            <field name="model">province.wage.range</field>
            <field name="arch" type="xml">
                <tree string="Province Wage Range">
                    <field name="state_id"/>
                    <field name="code"/>
                    <field name="country_id"/>
                    <field name="min_wage"/>
                    <field name="max_wage"/>
                </tree>
            </field>
        </record>

    <record model="ir.actions.act_window" id="action_province_wage_range">
        <field name="name">Province Wage Range</field>
        <field name="res_model">province.wage.range</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem 
        action="action_province_wage_range" 
        id="menu_province_wage_range" 
        parent="hr_payroll.menu_hr_payroll_configuration" 
        sequence="30"/>

</odoo>
