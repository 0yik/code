<?xml version='1.0' encoding='UTF-8' ?>
<odoo>
    <data>
        <template id="report_memohistory_document">
            <t t-call="report.external_layout">
                <div class="page">
                    <div class="oe_structure"/>
                        <center><h3><strong>Employee Memo History</strong></h3></center>
                        
                        <div style="width:100%; float:left">
                                <table>
                                    <tr>
                                        <td><t>Employee Name</t></td>                                        
                                        <td><t><![CDATA[&nbsp;]]>:<![CDATA[&nbsp;]]></t></td>
					<td><span t-field="doc.name"/></td>
                                    </tr>
                                    <tr>
                                        <td><t>Employee ID</t></td>                                        
                                        <td><t><![CDATA[&nbsp;]]>:<![CDATA[&nbsp;]]></t></td>
					<td><span t-field="doc.emp_id"/></td>
                                    </tr>
                                    <tr>
                                        <td><t>Job Title</t></td>                                        
                                        <td><t><![CDATA[&nbsp;]]>:<![CDATA[&nbsp;]]></t></td>
					<td><span t-field="doc.job_id"/></td>
                                    </tr>
                                    <tr>
                                        <td><t>Joining Date</t></td>                                        
                                        <td><t><![CDATA[&nbsp;]]>:<![CDATA[&nbsp;]]></t></td>
					<td><span t-field="doc.join_date"/></td>
                                    </tr>

                                    <tr>
                                        <td><t>Department</t></td>                                        
                                        <td><t><![CDATA[&nbsp;]]>:<![CDATA[&nbsp;]]> </t></td>
					<td><span t-field="doc.department_id"/></td>
                                    </tr>
                                    <tr>
                                        <td><t>Supervisor Name</t></td>                                        
                                        <td><t><![CDATA[&nbsp;]]>:<![CDATA[&nbsp;]]></t></td>
					<td><span t-field="doc.parent_id"/></td>
                                    </tr>
                                </table>
                            
                        </div>

                        <div style="clear: both;">

                        </div>

                    <p></p>
                    <center><h3><strong>Memo :</strong></h3></center>
                    <div class="col-xs-14">
                        <table cellspacing="0" style="border:1px solid black; width:100%" class="table table-bordered" >
                            <thead>
                                <tr>
                                    <th class="text-center" style="border:1px solid black;">Memo Id</th>
                                    <th class="text-center" style="border:1px solid black;">Memo Type</th>
                                    <th class="text-center" style="border:1px solid black;">Memo Description</th>
                                    <th class="text-center" style="border:1px solid black;">Date of Creation</th>
                                    <th class="text-center" style="border:1px solid black;">Year</th>
                                    <th class="text-center" style="border:1px solid black;">Quarter</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="doc.emp_memo_history_ids" t-as="line">
                                    <td class="text-center" style="border:1px solid black">
                                        <span t-field="line.name"/>
                                    </td>
                                    <td class="text-center" style="border:1px solid black">
                                        <span t-field="line.memo_type"/>
                                    </td>
                                    <td class="text-center" style="border:1px solid black">
                                        <span t-field="line.memo_desc"/>
                                    </td>
                                    <td class="text-center" style="border:1px solid black">
                                        <span t-field="line.date"/>
                                    </td>
                                    <td class="text-center" style="border:1px solid black">
                                        <span t-field="line.year"/>
                                    </td>
                                    <td class="text-center" style="border:1px solid black">
                                        <span t-field="line.quarter"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    
		    </div>
                </div>
            </t>
        </template>
        <template id="report_memohistory">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="employee_appraisal.report_memohistory_document"/>
                </t>
            </t>
        </template>
    </data>
</odoo>

