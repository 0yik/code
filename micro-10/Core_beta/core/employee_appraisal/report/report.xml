<?xml version='1.0' encoding='UTF-8' ?>
<odoo>
    <data>
        <report id="report_memo_history"
                string="Employee Memo History"
                model="hr.employee"
                report_type="qweb-pdf"
                file="employee_appraisal.report_memohistory"
                name="employee_appraisal.report_memohistory"
        />
        <report id="report_employee_salary"
                string="Salary"
                model="salary.report"
                report_type="qweb-pdf"
                file="employee_appraisal.report_employee_salary_id"
                name="employee_appraisal.report_employee_salary_id"
        />        
	<report id="report_salary_history"
	                string="Salary History"
	                model="hr.employee"
	                report_type="qweb-pdf"
	                file="employee_appraisal.report_salaryhistory_id"
	                name="employee_appraisal.report_salaryhistory_id"
	        />
		
        <report id="emp_eval_report"
                string="Performance &amp; Evaluation Report"
                model="employee.evaluation"
                report_type="qweb-pdf"
                file="employee_appraisal.report_employee_evaluation"
                name="employee_appraisal.report_employee_evaluation"
		
        />

	<template id="inherit_external_layout" inherit_id="report.external_layout_header">
		<xpath expr="//div[@name='company_address']" position="replace">
			<div class="col-xs-5" name="company_address">
		                <div t-field="company.partner_id" 
                		    	t-field-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}'
                    			style="border-bottom: 1px solid black;"/>
            		</div>
		</xpath>
		
	</template>

	 <record id="new_paper_format" model="report.paperformat">
            <field name="name">European A4 New</field>
            <field name="default" eval="True" />
            <field name="format">custom</field>
            <field name="page_height">297</field>
            <field name="page_width">210</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">55</field>
            <field name="margin_bottom">15</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">55</field>
            <field name="dpi">90</field>
        </record>

        <record id="emp_eval_report" model="ir.actions.report.xml">
            <field name="paperformat_id" ref="new_paper_format" />
        </record>
	<record id="report_salary_history" model="ir.actions.report.xml">
            <field name="paperformat_id" ref="new_paper_format" />
        </record>
	<record id="report_employee_salary" model="ir.actions.report.xml">
            <field name="paperformat_id" ref="new_paper_format" />
        </record>
	<record id="report_memo_history" model="ir.actions.report.xml">
            <field name="paperformat_id" ref="new_paper_format" />
        </record>


    </data>
</odoo>

