<?xml version='1.0' encoding='UTF-8' ?>
<odoo>
    <data>

        <record id="eval_report_tree_view" model="ir.ui.view">
            <field name="name">eval.report.tree.view</field>
            <field name="model">evaluation.report</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="emp_name"/>
                    <field name="emp_id"/>
                    <field name="year"/>
                    <field name="quarter"/>
                    <field name="joining_date"/>
                    <field name="department_id"/>
                </tree>
            </field>
        </record>

        <record id="eval_report_form_view" model="ir.ui.view">
            <field name="name">eval.report.form.view</field>
            <field name="model">evaluation.report</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="report_type" required="1"/>
                                <field name="emp_name" required="0" readonly="0" options="{'no_open':True,'no_create_edit':True}" attrs="{'invisible':([('report_type','=','dep_based')]),'required':([('report_type','=','emp_based')]) }"/>
                                <field name="year" required="1" readonly="0"  options="{'no_open':True,'no_create_edit':True}"/>
                                <field name="quarter" required="1" readonly="0"/>
                                <field name="emp_id" readonly="1" attrs="{'invisible':([('report_type','=','dep_based')]) }"/>
                                <field name="joining_date" readonly="1" attrs="{'invisible':([('report_type','=','dep_based')]) }"/>
                                <field name="department_id" options="{'no_open':True,'no_create_edit':True}" attrs="{'readonly':([('report_type','=','emp_based')]),'required':([('report_type','=','dep_based')]) }"/>
                            </group>
                        </group>
                        <footer>
                            <button name="eval_report" string="Print" class="oe_highlight" type="object"/>
                            or
                            <button string="Discard" class="oe_link" special="cancel"/>
                        </footer>

                        <notebook>
                            <page string="Ratings" attrs="{'invisible':([('report_type','=','dep_based')]) }">
                                <field name="eval_report_rating_ids" attrs="{'invisible':([('report_type','=','dep_based')]) }">
                                    <tree create="false" delete="false">
                                        <field name="quarter"/>
                                        <field name="rating_label_id"/>
                                        <field name="rating"/>
                                        <field name="comment"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="eval_report_action" model="ir.actions.act_window">
            <field name="name">Evaluation Report</field>
            <field name="res_model">evaluation.report</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>


