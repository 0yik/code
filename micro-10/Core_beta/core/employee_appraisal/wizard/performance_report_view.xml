<?xml version='1.0' encoding='UTF-8' ?>
<odoo>
    <data>

        <record id="performance_report_form_view" model="ir.ui.view">
            <field name="name">performance.report.form.view</field>
            <field name="model">performance.report</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="report_type" required="1"/>
                            <field name="emp_name" required="0" options="{'no_open':True,'no_create_edit':True}" attrs="{'invisible':([('report_type','=','dep_based')]),'required':([('report_type','=','emp_based')]) }"/>

                            <field name="year" required="1" options="{'no_open':True,'no_create_edit':True}"/>
                            <field name="emp_id" readonly="1" attrs="{'invisible':([('report_type','=','dep_based')]) }"/>
                            <field name="joining_date" readonly="1" attrs="{'invisible':([('report_type','=','dep_based')]) }"/>
                            <field name="department_id" options="{'no_open':True,'no_create_edit':True}" attrs="{'readonly':([('report_type','=','emp_based')]),'required':([('report_type','=','dep_based')])}"/>
                        </group>
                        <notebook>
                        <page string="Ratings" attrs="{'invisible':([('report_type','=','dep_based')]) }">
                        <field name="perf_report_rating_ids" attrs="{'invisible':([('report_type','=','dep_based')]) }">
                            <tree create="false" delete="false">
                                <field name="quarter"/>
                                <field name="rating_label_id"/>
                                <field name="rating"/>
                                <field name="comment"/>
                            </tree>
                        </field>
                        </page>
                        </notebook>
                        <footer>
                            <button string="Print" class="oe_highlight" name="emp_perf_report" type="object"/>
                            or
                            <button string="Discard" class="oe_link" special="cancel"/>
                        </footer>
                    </sheet>
              </form>
            </field>
        </record>

        <record id="performance_action" model="ir.actions.act_window">
            <field name="name">Performance Report</field>
            <field name="res_model">performance.report</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>

