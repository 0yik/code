<?xml version='1.0' encoding='UTF-8' ?>
<odoo>
	<data>

		<record id="employee_salary_report_view1" model="ir.ui.view">
			<field name="name">Salary Report Wizard</field>
			<field name="model">salary.report</field>
			<field name="arch" type="xml">
			<form>
				<group>
				<group>
					<field name="name" required="1" options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
				</group>
				<group>
					<field name="year" required="1" options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
				</group>
				</group>
				<group>
					<field name="employee_id" readonly="1"/>
                           		<field name="date" readonly="1"/>
                           		<field name="curr_salary" readonly="1"/>
                           		<field name="calculated_increment" readonly="1"/>
                           		<field name="management_round_off" readonly="1"/>
                           		<field name="final_increment" readonly="1"/>
                           		<field name="increment_per" readonly="1"/>
                           		<field name="management_comments" readonly="1"/>
				</group>
				<footer>
					<button name="print_report" string="Print" class="oe_highlight" type="object"/>
					or
					<button string="Cancel" class="oe_link" special="cancel"/>
				</footer>
			</form>
			</field>
		</record>


		<record id="salary_report_wizard_action_id1" model="ir.actions.act_window">
			<field name="name">Salary report</field>
			<field name="res_model">salary.report</field>
			<field name="view_id" ref="employee_salary_report_view1"/>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>
	
	</data>
</odoo>
