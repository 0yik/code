<?xml version='1.0' encoding='UTF-8' ?>
<odoo>
    <data>      

        <record id="employee_visibility_rule" model="ir.rule">
	        <field name="name">Employee Master - For Employee</field>
	        <field name="model_id" ref="hr.model_hr_employee"/>
	        <field eval="False" name="global"/>
   	        <field name="domain_force">['|',('user_id','=',user.id),('parent_id.user_id','=',user.id)]</field>
	        <field name="groups" eval="[(6,0,[ref('base.group_user')])]"/>
	    </record>
	    
        <record id="employee_mngrs_visibility_rule" model="ir.rule">
	        <field name="name">Employee Master - For Managers</field>
	        <field name="model_id" ref="hr.model_hr_employee"/>
	        <field eval="False" name="global"/>
   	        <field name="domain_force">[]</field>
	        <field name="groups" eval="[(6,0,[ref('hr.group_hr_manager')])]"/>
	    </record>	   
	    
        <record id="evaluation_officers_rule" model="ir.rule">
	        <field name="name">Employee Evaluation - For Officers/Supervisors/Dept Managers</field>
	        <field name="model_id" ref="model_employee_evaluation"/>
	        <field eval="False" name="global"/>
   	        <field name="domain_force">[('emp_id.parent_id.user_id','=',user.id)]</field>
	        <field name="groups" eval="[(6,0,[ref('hr.group_hr_user')])]"/>
	    </record>	 
	    
       <record id="evaluation_managers_rule" model="ir.rule">
	        <field name="name">Employee Evaluation - For Managers</field>
	        <field name="model_id" ref="model_employee_evaluation"/>
	        <field eval="False" name="global"/>
   	        <field name="domain_force">[]</field>
	        <field name="groups" eval="[(6,0,[ref('hr.group_hr_manager')])]"/>
	    </record>	
	</data>	 
</odoo> 
