<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>        
        <record id="view_employee_configuration" model="ir.ui.view">
            <field name="name">employee.res.config.view</field>
            <field name="model">employee.config.settings</field>
            <field name="arch" type="xml">
                <form string="Configure Employees" class="oe_form_configuration">
                    <header>
                        <button string="Apply" type="object" name="perform_action" class="oe_highlight"/>
                    </header>
                    <group string="Configure Employees">
	                    <label for="default_active"/>
	                    <div>
	                    	<div>
	                    		 <field name="default_active" class="oe_inline"/>
	                    		  <label string="Allow to view 'Casual' employee details/list."/>
	                    	</div>
	                    </div>
                    </group>
                </form>
            </field>
        </record>
        
        <record id="action_employee_configuration" model="ir.actions.act_window">
            <field name="name">Configure Employees</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">employee.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
        </record>

</data>
</odoo>        
