<?xml version='1.0' encoding='UTF-8' ?>
<odoo>
    <data>

        <record id="salary_band_tree_view" model="ir.ui.view">
            <field name="name">salary.band.tree.view</field>
            <field name="model">salary.band</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="department_id"/>
                </tree>
            </field>
        </record>

        <record id="salary_band_form_view" model="ir.ui.view">
            <field name="name">salary.band.form.view</field>
            <field name="model">salary.band</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <h4>
                            <field name="name" readonly="1"/>
                        </h4>
                        <group>
                            <field name="department_id" required="1"/>
                        </group>
                        <notebook>
                            <page string="Salary Range &amp; Increments">
                                <field name="salaryrange_ids" required="1">
                                    <tree editable="bottom">
                                        <field name="from_val" required="1" context="{'from_val':from_val}"/>
                                        <field name="to_val" required="1" context="{'to_val':to_val}"/>
                                        <field name="max_increment" required="1" context="{'max_increment':max_increment}"/>
                                    </tree>
				    <form>
				    <group>
                                        <field name="from_val" readonly="1"/>
                                        <field name="to_val" readonly="1"/>
                                        <field name="max_increment" readonly="1"/>
				    </group>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="salary_band_action" model="ir.actions.act_window">
            <field name="name">Salary Band</field>
            <field name="res_model">salary.band</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>


