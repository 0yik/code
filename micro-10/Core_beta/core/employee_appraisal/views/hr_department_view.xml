<?xml version='1.0' encoding='UTF-8' ?>
<odoo>
    <data>

        <record id="hr_department_form_view" model="ir.ui.view">
            <field name="name">hr.department.form.view</field>
            <field name="model">hr.department</field>
            <field name="inherit_id" ref="hr.view_department_form"/>
            <field name="arch" type="xml">
		<xpath expr="/form/sheet/group/field[@name='manager_id']" position="attributes">
                    <attribute name="required">0</attribute>
                </xpath>
                <field name="parent_id" position="after">
                    <field name="total_employees"/>
                </field>

                <xpath expr="/form/sheet/group" position="after">
                    <notebook>
                        <page string="Ratings &amp; Weightages">
                            <field name="weightage_line_ids">
                                <tree editable="bottom" create="false">
                                    <field name="rating_id" readonly="1"/>
                                    <field name="weightage" required="1"  sum="Total"/>
                                </tree>
                                <form>
                                <group>
                                    <field name="rating_id" readonly="1"/>
                                    <field name="weightage" readonly="1"/>
                                </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </xpath>
            </field>
        </record>
        
        
        <record id="hr.open_module_tree_department" model="ir.actions.act_window">
            <field name="name">Departments</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="search_view_id" ref="hr.view_department_filter"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to create a department.
              </p><p>
                Odoo's department structure is used to manage all documents
                related to employees by departments: expenses, timesheets,
                leaves and holidays, recruitments, etc.
              </p>
            </field>
        </record>
        
    </data>
</odoo>

