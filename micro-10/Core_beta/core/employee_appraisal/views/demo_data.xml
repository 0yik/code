<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
    
        <!-- Educational Qualification -->
	<record id="edu_qualification_one" model="education.qualification">
    		<field name="name">Master of Sciences</field>
	</record>
        <record id="edu_qualification_two" model="education.qualification">
                <field name="name">Master of Business Applications</field>
        </record>
        <record id="edu_qualification_three" model="education.qualification">
                <field name="name">Bachelor of Commerce</field>
        </record>


	<!-- Departments -->
        <record id="dep_marketing" model="hr.department">
          	<field name="name">Marketing</field>
        </record>      
        <record id="dep_purchase" model="hr.department">
          	<field name="name">Purchase</field>
        </record>


	<!-- Rating -->
        <record id="rating_one" model="rating.config">
                <field name="name">Attitude</field>
		<field name="rating_ids" eval="[(0, 0, {'department_id':ref('dep_marketing')}),(0, 0, {'department_id':ref('dep_purchase')})]"/>
        </record>
        <record id="rating_two" model="rating.config">
                <field name="name">Attendance</field>
                <field name="rating_ids" eval="[(0, 0, {'department_id':ref('dep_purchase')})]"/>
        </record>
        <record id="rating_three" model="rating.config">
                <field name="name">Punctuality</field>
                <field name="rating_ids" eval="[(0, 0, {'department_id':ref('dep_purchase')}),(0, 0, {'department_id':ref('dep_marketing')})]"/>
        </record>


	<!-- Year -->
        <record id="year_record_one" model="year.config">
                <field name="year">2015</field>
                <field name="quarter_line" eval="[(0, 0, {'name':'Q1', 'quarter_startdate':'01/01/2015', 'quarter_enddate':'03/31/2015'}),
						  (0, 0, {'name':'Q2', 'quarter_startdate':'04/01/2015', 'quarter_enddate':'06/30/2015'}),
						  (0, 0, {'name':'Q3', 'quarter_startdate':'07/01/2015', 'quarter_enddate':'09/30/2015'}),
						  (0, 0, {'name':'Q4', 'quarter_startdate':'10/01/2015', 'quarter_enddate':'12/31/2015'})]"/>
        </record>
        <record id="year_record_two" model="year.config">
                <field name="year">2016</field>
                <field name="quarter_line" eval="[(0, 0, {'name':'Q1', 'quarter_startdate':'01/01/2016', 'quarter_enddate':'03/31/2016'}),
                                                  (0, 0, {'name':'Q2', 'quarter_startdate':'04/01/2016', 'quarter_enddate':'06/30/2016'}),
                                                  (0, 0, {'name':'Q3', 'quarter_startdate':'07/01/2016', 'quarter_enddate':'09/30/2016'}),
                                                  (0, 0, {'name':'Q4', 'quarter_startdate':'10/01/2016', 'quarter_enddate':'12/31/2016'})]"/>
        </record>


	<!-- Salary band -->
        <record id="salary_band_one" model="salary.band">
                <field name="department_id" eval="ref('dep_purchase')"/>
                <field name="salaryrange_ids" eval="[(0, 0, {'from_val':0, 'to_val':240000, 'max_increment':30}),
						     (0, 0, {'from_val':240001, 'to_val':450000, 'max_increment':40}),
						     (0, 0, {'from_val':450001, 'to_val':850000, 'max_increment':30})]"/>
        </record>
        <record id="salary_band_two" model="salary.band">
                <field name="department_id" eval="ref('dep_marketing')"/>
                <field name="salaryrange_ids" eval="[(0, 0, {'from_val':0, 'to_val':500000, 'max_increment':40}),
                                                     (0, 0, {'from_val':500001, 'to_val':900000, 'max_increment':60})]"/>
        </record>


	<!-- Settings -->
        <record id="emp_config_settings" model="employee.config.settings">
                <field name="default_active" eval="True"/>
        </record>       


    </data>
</odoo>
