<odoo>
    <data>
        <record id="rating_config_tree_view" model="ir.ui.view">
            <field name="name">rating.config.tree.view</field>
            <field name="model">rating.config</field>
            <field name="arch" type="xml">
                <tree>
                   <field name="rating_seq"/>
                   <field name="name"/>
                </tree>
            </field>
        </record>
        <record id="rating_config_form_view" model="ir.ui.view">
            <field name="name">rating.config.form.view</field>
            <field name="model">rating.config</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <h4>
                            <field name="rating_seq" readonly="1"/>
                        </h4>
                        <group>
                            <field name="name" required="1"/>
                        </group>
                        <notebook>
                        <page string="Ratings">
                            <field name="rating_ids">
                                <tree editable="bottom">
                                    <field name="department_id" required="1"/>
                                    <field name="score" required="1"/>
                                    <field name="comment"/>
                                </tree>
                                <form>
				<group>
                                    <field name="department_id" readonly="1"/>
                                    <field name="score" readonly="1"/>
                                    <field name="comment" readonly="1"/>
				</group>
                                </form>
                            </field>
                        </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="rating_action" model="ir.actions.act_window">
            <field name="name">Rating</field>
            <field name="res_model">rating.config</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>

