<?xml version='1.0' encoding='UTF-8' ?>
<odoo>
    <data>

        <record id="employee_memo_tree_view" model="ir.ui.view">
            <field name="name">employee.memo.tree.view</field>
            <field name="model">employee.memo</field>
            <field name="arch" type="xml">
                <tree>
                   <field name="name" string="Memo ID"/>
                   <field name="emp_name"/>
                   <field name="memo_type"/>
                   <field name="memo_desc"/>
                   <field name="date"/>
                   <field name="year"/>
                   <field name="quarter"/>
                </tree>
            </field>
        </record>

        <record id="employee_memo_form_view"  model="ir.ui.view">
            <field name="name">employee.memo.form.view</field>
            <field name="model">employee.memo</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <h4>
                            <field name="name" readonly="1"/>
                        </h4>
                        <group>
                            <field name="emp_name" required="1"/>
                            <field name="emp_id" readonly="1"/>
                            <field name="date" required="1"/>
                            <field name="year"/>
                            <field name="quarter"/>
                            <field name="memo_type" required="1"/>
                            <field name="memo_desc" required="1" placeholder="Comments..."/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="employee_memo_action" model="ir.actions.act_window">
            <field name="name">Memo</field>
            <field name="res_model">employee.memo</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>

