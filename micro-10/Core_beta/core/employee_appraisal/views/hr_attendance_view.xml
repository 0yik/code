<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="inherit_view_attendance_form" model="ir.ui.view">
            <field name="name">hr.attendance.form</field>
            <field name="model">hr.attendance</field>
            <field name="inherit_id" ref="hr_attendance.hr_attendance_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="attributes">
                    <attribute name="create">0</attribute>
		    		<attribute name="edit">0</attribute>
                </xpath>
            	<xpath expr="//form/sheet/group[1]/field[@name='employee_id']" position="before">
            		<field name="employee_code" readonly="1"/>
            	</xpath>
            	<xpath expr="//form/sheet/group[1]/field[@name='employee_id']" position="attributes">
            		<attribute name="readonly">1</attribute>
            	</xpath>
            	
            	<xpath expr="//form/sheet/group[1]/field[@name='employee_id']" position="after">
            		<field name="department_id" readonly="1"/>
                    <field name="late_cnts" readonly="1"/>
                    <field name="early_cnts" readonly="1"/>
                    <field name="rest" readonly="1"/>
                    <field name="ph" readonly="1"/>
                    <field name="late_hrs" readonly="1"/>
                    <field name="early_hrs" readonly="1"/>
                    <field name="tot_brk_hrs" readonly="1"/>
                    <field name="absents" readonly="1"/>
                    <field name="dedn" readonly="1"/>
                    <field name="half_days" readonly="1"/>
                    <field name="total_abs" readonly="1"/>
                    <field name="ot" readonly="1"/>
                    <field name="month" readonly="1"/>
                    <field name="year" readonly="1"/>
            	</xpath>
            	
            </field>
        </record>

        
        <record id="inherit_view_attendance_who" model="ir.ui.view">
            <field name="name">hr.attendance.tree</field>
            <field name="model">hr.attendance</field>
            <field name="inherit_id" ref="hr_attendance.view_attendance_tree"/>
            <field name="arch" type="xml">
            
                <xpath expr="//tree" position="attributes">
                    <attribute name="create">0</attribute>
		 <attribute name="edit">0</attribute>
                </xpath>
            	<xpath expr="//tree/field[@name='employee_id']" position="after">
                    <field name="employee_code"/>
                    <field name="department_id"/>
                    <field name="month"/>
                    <field name="year"/>
               </xpath>
            </field>
        </record>
        
        <!-- Overridden to remove the default filter acting. Removed from the context {"search_default_today":1} -->
        <record id="hr_attendance.hr_attendance_action" model="ir.actions.act_window">   			
            <field name="name">Attendances</field>
            <field name="res_model">hr.attendance</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{"search_default_employee": 1}</field>
            <field name="search_view_id" ref="hr_attendance.hr_attendance_view_filter" />
        </record>
        
        
    </data>
</odoo>
