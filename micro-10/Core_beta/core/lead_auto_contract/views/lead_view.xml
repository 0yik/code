<?xml version="1.0"?>
<odoo>

    <record id="crm_case_form_view_leads_inherit" model="ir.ui.view">
        <field name="name">Lead Form Inherit for Contract</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_form_view_leads"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="contract_id"/>
            </field>
            <xpath expr="//form/sheet/div[@name='button_box']" position="inside">
                <button name="action_view_contract" type="object" string="Contract" class="oe_stat_button" icon="fa-file" attrs="{'invisible':[('contract_id','=',False)]}">
                    <field name='contract_id' invisible="1"/>
                </button>
            </xpath>
        </field>
    </record>

</odoo>