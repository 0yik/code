<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="hr_employee_report_view_pivot" model="ir.ui.view">
            <field name="name">hr.employee.pivot</field>
            <field name="model">hr.employee.report.view</field>
            <field name="arch" type="xml">
                <pivot string="Employee Analysis">
                    <field name="name" type="row"/>
                    <field name="date_from" interval="month" type="col"/>
                    <field name="net" type="measure"/>
                </pivot>
            </field>
        </record>

        <!--<record id="hr_employee_report_view_graph" model="ir.ui.view">-->
