<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="view_official_travel_form_view" model="ir.ui.view">
        <field name="name">view.official.travel.form.view</field>
        <field name="model">official.travel</field>
        <field name="arch" type="xml">
        	<form>
	        	<header>
	        		<button name="confirm" string="Confirm" type="object" 
	        				states="draft" class="oe_highlight"/>
	        		<field name="state" widget="statusbar"/>
	        	</header>
	        	<sheet>
	        		<div class="oe_button_box" name="button_box">
                        <button name="print_letter" type="object"
                                class="oe_stat_button" icon="fa-print" string="Print">
                        </button>
                    </div>
                    <group>
	        			<group>
	        				<field name="employee_id" required='1'/>
	        				<label for="from_date" string="Travel Period"/>
	        				<div>
		        				<div>
			        				<field name="from_date" string="Travel Period" class="oe_inline" required='1'/>
			        				<label string="--" class="oe_inline"/>
			        				<field name="to_date" class="oe_inline" required='1'/>
		        				</div>
	        				</div>
	        				<field name="company_id" required='1'/>
	        			</group>
	        			<group>
	        				<field name="department_id" readonly='1'/>
	        				<field name="job_id" readonly='1'/>
	        				<field name="name" readonly='1'/>
	        			</group>
	        		</group>
	        		<group>
	        			<field name="job_desc_ids" nolabel='1'>
	        				<tree editable="bottom">
	        					<field name="name" />
	        				</tree>
	        			</field>
	        		</group>
	        	</sheet>
	        </form>
	    </field>
	</record>
	
	<record id="view_official_travel_tree_view" model="ir.ui.view">
        <field name="name">view.official.travel.tree.view</field>
        <field name="model">official.travel</field>
        <field name="arch" type="xml">
        	<tree>
        		<field name="name" string="Name"/>
        		<field name="department_id"/>
        		<field name="job_id"/>
        		<field name="company_id"/>
        		<field name="from_date" string="Start Date"/>
        		<field name="to_date" string="End Date"/>
        	</tree>
        </field>
    </record>
    
    <record id="action_official_travel" model="ir.actions.act_window">
	      <field name="name">Official Travel</field>
	      <field name="type">ir.actions.act_window</field>
	      <field name="res_model">official.travel</field>
	      <field name="view_type">form</field>
	      <field name="view_mode">tree,form</field>
      </record>
      
      <menuitem id="menu_official_travel" action="action_official_travel" parent="hr.menu_hr_root"/>
      <menuitem id="menu_official_travel_attend" action="action_official_travel" 
      	parent="hr_attendance.menu_hr_attendance_manage_attendances" sequence='16'/>
</odoo>