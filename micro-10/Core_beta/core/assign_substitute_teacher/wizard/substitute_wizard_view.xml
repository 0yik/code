<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_substitute_wizard" model="ir.ui.view">
        <field name="name">Substitute Teacher</field>
        <field name="model">substitute.wizard</field>
        <field name="arch" type="xml">
            <form string="Substitute Teacher">
                <group>
                	<!-- <group>
                        <field name="subject_ids" class="oe_inline" widget="many2many_tags" invisible="1"/>
                    </group> -->
                    <group>
                        <field name="teacher_id" class="oe_inline" domain="[('is_school_teacher','=',True)]"/>
                    </group>
                </group>
                <footer>
                    <button name="add_substitute_teacher" string="Assign Substitute Teacher" type="object" class="oe_highlight"/>
                   	<button string="Close" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    
    <record id="action_substitute_wizard" model="ir.actions.act_window">
        <field name="name">Substitute Teacher</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">substitute.wizard</field>
        <field name="view_type">form</field>
        <field name="view_mode">form,tree</field>
        <field name="view_id" ref="view_substitute_wizard"/>
        <field name="target">new</field>
    </record>
    
        
</odoo>
