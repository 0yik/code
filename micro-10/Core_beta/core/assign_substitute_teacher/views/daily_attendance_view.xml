<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <act_window id="action_substitute_teacher_wizard"
        multi="True"
        key2="client_action_multi" name="Assign Substitute Teacher"
        res_model="substitute.wizard" src_model="daily.attendance"
        view_mode="form" target="new" view_type="form"/>
        
    <record id="view_daily_attendance_form_1_assign_teacher" model="ir.ui.view">
        <field name="name">daily.attendance.form.ttank.assign.teacher</field>
        <field name="model">daily.attendance</field>
        <field name="inherit_id" ref="school_attendance.view_daily_attendance_form_1"/>
        <field name="arch" type="xml">
			<xpath expr="//group/field[@name='date']" position="after">
                <field name="is_substitute" readonly="1"/>
                <field name="assign_sustitute_date" readonly="1" attrs="{'invisible': [('is_substitute','=',False)]}" />
                <field name="subtitute_teacher_id" attrs="{'invisible': [('is_substitute','=',False)]}" readonly="1"/>
            </xpath>
        </field>
    </record>
    
    <record id="view_ems_class_form_assign_teacher" model="ir.ui.view">
        <field name="name">ems.class.form</field>
        <field name="model">ems.class</field>
        <field name="inherit_id" ref="ems_class_classroom.view_ems_class_form"/>
        <field name="arch" type="xml">
			<xpath expr="//sheet/group/group/field[@name='teacher_id']" position="after">
                <field name="is_substitute" readonly="1"/>
                <field name="assign_sustitute_date" readonly="1" attrs="{'invisible': [('is_substitute','=',False)]}" />
                <field name="subtitute_teacher_id" attrs="{'invisible': [('is_substitute','=',False)]}" readonly="1"/>
            </xpath>
            <xpath expr="//sheet/group/group/field[@name='teacher_id']" position="attributes">
                <attribute name="attrs">{'readonly': [('is_substitute','=',True)]}</attribute>
            </xpath>
        </field>
    </record>
    
</odoo>   
