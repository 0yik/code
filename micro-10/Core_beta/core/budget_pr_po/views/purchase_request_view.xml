<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="view_purchase_request_form_budget_inherit">
            <field name="name">purchase.request.form.budget.inherit</field>
            <field name="model">purchase.request</field>
            <field name="inherit_id" ref="purchase_request.view_purchase_request_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='line_ids']/form//field[@name='procurement_id']"
                       position="after">
                    <field name="budgeted_amount"/>
                    <field name="remaining_budget"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>