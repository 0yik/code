<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="manpower_planning_form_view" model="ir.ui.view">
            <field name="name">Manpower Planning Form View</field>
            <field name="model">manpower.planning</field>
            <field name="arch" type="xml">
                <form string="Manpower Planning">
                    <header>
                        <button name="manpower_draft_confirmed" string="Confirm" states="draft" type="object" class="btn-primary"/>
                        <button name="manpower_confirmed_draft" string="Set back as Draft" type="object" states="confirmed"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirmed"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <label for="start_date" string="Manpower Planning Period"/>
                                <div>
                                    <field name="start_date" required="1" class="oe_inline" attrs="{'readonly': [('state', '!=', 'draft')]}"/> - <field name="end_date" required="1" class="oe_inline" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                </div>
                                <field name="company_id" required="1" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="address_id" invisible="1" domain="[('is_company', '=', True)]" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            </group>
                        </group>
                        <group>
                            <field name="manpower_planning_line_ids" nolabel="1" attrs="{'readonly': [('state', '!=', 'draft')]}">
                                <tree string="Manpower Planning Lines" editable="bottom">
                                    <field name="department_id" domain="[('active', '=', True), ('company_id', '=', parent.company_id)]"/>
                                    <field name="job_id" domain="[('department_id', '=', department_id)]"/>
                                    <field name="current_no_of_employees"/>
                                    <field name="expected_new_employees"/>
                                    <field name="total_forecasted_employees"/>
                                    <field name="hired_employees" readonly="1"/>
                                    <field name="employee_resigned"/>
                                    <field name="average_wage"/>
                                    <field name="total_of_basic_salary_budgeted" sum="Total"/>
                                </tree>
                                <form string="Manpower Planning">
                                    <group>
                                        <group>
                                            <field name="department_id" domain="[('active', '=', True), ('company_id', '=', parent.company_id)]"/>
                                            <field name="job_id" domain="[('department_id', '=', department_id)]"/>
                                            <field name="current_no_of_employees"/>
                                            <field name="expected_new_employees"/>
                                            <field name="total_forecasted_employees"/>
                                        </group>
                                        <group>
                                            <field name="hired_employees"/>
                                            <field name="employee_resigned"/>
                                            <field name="average_wage"/>
                                            <field name="total_of_basic_salary_budgeted"/>
                                            <field name="manpower_planning_id" invisible="1"/>
                                        </group>
                                    </group>
                                </form>
                            </field>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="manpower_planning_tree_view" model="ir.ui.view">
            <field name="name">Manpower Planning Tree View</field>
            <field name="model">manpower.planning</field>
            <field name="arch" type="xml">
                <tree string="Manpower Planning">
                    <field name="name"/>
                    <field name="manpower_planning_period"/>
                    <field name="number_of_job_position_registered"/>
                    <field name="total_employees_targeted"/>
                    <field name="total_salary_budgeted"/>
                </tree>
            </field>
        </record>

        <record id="manpower_planning_search_view" model="ir.ui.view">
            <field name="name">Manpower Planning Search View</field>
            <field name="model">manpower.planning</field>
            <field name="arch" type="xml">
                <search string="Manpower Planning">
                    <field name="name"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </search>
            </field>
        </record>

        <record id="manpower_planning_graph_view" model="ir.ui.view">
            <field name="name">Manpower Planning Graph View</field>
            <field name="model">manpower.planning.line</field>
            <field name="arch" type="xml">
                <graph string="Manpower Planning">
                    <field name="job_id"/>
                    <field name="expected_new_employees" type="measure"/>
                </graph>
            </field>
        </record>

        <record id="manpower_planning_pivot_view" model="ir.ui.view">
            <field name="name">Manpower Planning Pivot View</field>
            <field name="model">manpower.planning.line</field>
            <field name="arch" type="xml">
                <pivot string="Manpower Planning">
                    <field name="current_no_of_employees" type="measure"/>
                    <field name="expected_new_employees" type="measure"/>
                    <field name="total_forecasted_employees" type="measure"/>
                    <field name="hired_employees" type="measure"/>
                    <field name="employee_resigned" type="measure"/>
                    <field name="monthly_turnover" type="measure"/>
                    <field name="percentage_recruited" type="measure"/>
                    <field name="average_wage" type="measure"/>
                    <field name="total_basic_salary_given" type="measure"/>
                    <field name="basic_salary_budgeted" type="measure"/>
                    <field name="percentage_basic_salary" type="measure"/>
                    <field name="manpower_planning_id" type="row"/>
                    <field name="department_id" type="row"/>
                    <field name="job_id" type="row"/>
                </pivot>
            </field>
        </record>

        <record id="action_manpower_planning" model="ir.actions.act_window">
            <field name="name">Manpower Planning</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">manpower.planning</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click here to create a manpower planning.
                </p>
            </field>
        </record>

        <record id="action_manpower_analysis" model="ir.actions.act_window">
            <field name="name">Manpower Analysis</field>
            <field name="res_model">manpower.planning.line</field>
            <field name="view_type">form</field>
            <field name="view_mode">pivot,graph</field>
            <field name="domain">[('state', '=', 'confirmed')]</field>
            <field name="view_ids"
                   eval="[(5, 0, 0),
                          (0, 0, {'view_mode': 'pivot', 'view_id': ref('manpower_planning_pivot_view')}),
                          (0, 0, {'view_mode': 'graph', 'view_id': ref('manpower_planning_graph_view')})]"/>
            <field name="help">Manpower Analysis allows you to easily check and analyse your company manpower planning history and performance.</field>
        </record>

        <menuitem id="menu_manpower_planning" name="Manpower Planning"  parent="sg_hr_employee.menu_root_hr_parent" sequence="97"/>
        <menuitem id="submenu_manpower_planning" action="action_manpower_planning" parent="menu_manpower_planning" sequence="98"/>
        <menuitem id="submenu_manpower_analysis" action="action_manpower_analysis" parent="menu_manpower_planning" sequence="99"/>

    </data>
</odoo>