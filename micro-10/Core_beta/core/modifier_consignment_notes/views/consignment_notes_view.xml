<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="modifier_consignment_note_form_view">
        <field name="name">modifier.consignment.form.view</field>
        <field name="model">consignment.notes</field>
        <field name="inherit_id" ref="consignment_notes.view_consignment_notes_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header/button[1]" position="after">
                <button name="create_delivery_order" string="Create Delivery Order"
                        type="object" class="btn-primary" attrs="{'invisible': [('state', '!=', 'confirmed')]}"/>
            </xpath>
        </field>
    </record>

</odoo>
