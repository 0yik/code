<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <record id="hr.hr_dept_comp_rule" model="ir.rule">
            <field name="name">Department multi company rule</field>
            <field name="model_id" ref="hr.model_hr_department"/>
            <field eval="True" name="global"/>
            <field name="domain_force">['|',('company_id', '=', False), ('company_id', 'child_of', user.company_ids.ids)]</field>
        </record>
        
        <record id="base.res_users_rule" model="ir.rule">
            <field name="name">User Rule</field>
            <field name="model_id" ref="base.model_res_users"/>
            <field eval="True" name="global"/>
            <field name="domain_force">['|',('company_id', '=', False), ('company_id', 'child_of', user.company_ids.ids)]</field>
        </record>

    </data>
</odoo>
