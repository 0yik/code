<odoo>
    <data>
        <record id="crm_case_form_view_oppor" model="ir.ui.view">
            <field name="name">crm.lead.oppor.inherited.crm</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_form_view_oppor"/>
            <field name="arch" type="xml">
                <div name="button_box" position="inside">
                    <button class="oe_stat_button" type="action"
                            name="%(crm_phonecall.crm_case_categ_phone0)d" icon="fa-phone"
                            context="{'default_opportunity_id': active_id, 'search_default_opportunity_id': active_id}">
                        <div class="o_stat_info">
                            <field name="phonecall_number" class="o_stat_value"/>
                            <span class="o_stat_text"> Phonecall(s) </span>
                        </div>
                    </button>
                </div>
            </field>
        </record>
    </data>
</odoo>
