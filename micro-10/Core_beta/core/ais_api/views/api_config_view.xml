<odoo>

    <record id="ais_config_tree" model="ir.ui.view">
        <field name="name">AIS Integration</field>
        <field name="model">ais.api.config</field>
        <field name="arch" type="xml">
            <tree string="AIS Integration">
                <field name="name"/>
                <field name="display_client_id"/>
                <field name="display_client_secret"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>

    <record id="ais_config_form" model="ir.ui.view">
        <field name="name">AIS Integration</field>
        <field name="model">ais.api.config</field>
        <field name="arch" type="xml">
            <form string="AIS Integration">
                <header>
                    <button name="action_connect" type="object" string="Connect" class="oe_highlight"/>
                </header>
                <sheet>
                    <h1 class="mt0">
                        <label for="name" class="oe_edit_only"/>
                        <field name="name"/>
                    </h1>
                    <group>
                        <group>
                            <field name="client_id" context="{'onchange_client_id': True}" attrs="{'required': [('show_client_id', '=', True)], 'invisible': [('show_client_id', '=', False)]}"/>
                            <field name="client_id2" context="{'onchange_client_id2': True}" password="True" attrs="{'required': [('show_client_id', '=', False)], 'invisible': [('show_client_id', '=', True)]}"/>
                            <field name="client_secret" context="{'onchange_client_secret': True}" attrs="{'required': [('show_client_secret', '=', True)], 'invisible': [('show_client_secret', '=', False)]}"/>
                            <field name="client_secret2" context="{'onchange_client_secret2': True}" password="True" attrs="{'required': [('show_client_secret', '=', False)], 'invisible': [('show_client_secret', '=', True)]}"/>
                        </group>
                        <group>
                            <field name="show_client_id"/>
                            <field name="show_client_secret"/>
                            <field name="company_id" options="{'no_create': True, 'no_create_edit':True}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="History">
                            <field name="history_ids" readonly="1">
                                <tree string="History" colors="blue:state == 'pending';green:state == 'success';red:state == 'failed'">
                                    <field name="form_type"/>
                                    <field name="no_of_records"/>
                                    <field name="submission_date"/>
                                    <field name="state"/>
                                    <button name="action_redo" type="object" icon="fa-undo" string="Redo" attrs="{'invisible': [('state', '!=', 'failed')]}"/>
                                </tree>
                                <form string="History">
                                    <sheet>
                                        <group col="4">
                                            <field name="form_type"/>
                                            <field name="submission_date"/>
                                            <field name="next_schedule_date"/>
                                            <field name="no_of_records"/>
                                            <field name="start_date" />
                                            <field name="end_date" />
                                            <field name="source"/>
                                            <field name="organization_id_type"/>
                                            <field name="company_id"/>
                                            <field name="batch_indicatior"/>
                                            <field name="organization_id_no"/>
                                            <field name="payroll_user" />
                                            <field name="user_id"/>
                                            <field name="user_id_type"/>
                                            <field name="batch_date" />
                                            <field name="state"/>
                                            <field name="file" filename="filename" attrs="{'invisible': [('file', '=', False)]}"/>
                                            <field name="filename" invisible="1"/>
                                        </group>
                                        <separator string="Employees"/>
                                        <field name="employee_ids">
                                            <tree string="Employees">
                                                <field name="name"/>
                                                <field name="department_id"/>
                                                <field name="work_email"/>
                                            </tree>
                                        </field>
                                    </sheet>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_api_config" model="ir.actions.act_window">
        <field name="name">AIS Integration</field>
        <field name="res_model">ais.api.config</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a AIS Integration Configuration.
            </p>
        </field>
    </record>

    <menuitem id="ais_integration_menu" name="Auto-Inclusion Scheme" parent="hr.menu_human_resources_configuration" sequence="500"/>
    <menuitem action="action_api_config" id="ais_integration_sub_menu" parent="ais_integration_menu" sequence="2"/>

</odoo>