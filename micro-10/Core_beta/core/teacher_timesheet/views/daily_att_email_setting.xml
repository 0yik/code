<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="daily_att_email_setting_form_view" model="ir.ui.view">
        <field name="name">daily.att.email.setting.form.view</field>
        <field name="model">daily.attendance.email.setting</field>            
        <field name="arch" type="xml">
            <form create="0" delete="0">
                <group>
                <field name="send"/>
                <field name="days" class="oe_inline"/>
                <field name="subject"/>
                <field name="body"/>
                </group>
            </form>
        </field>
    </record>
    <record id="daily_att_email_setting_tree_view" model="ir.ui.view">
        <field name="name">daily.att.email.setting.tree.view</field>
        <field name="model">daily.attendance.email.setting</field>            
        <field name="arch" type="xml">
            <tree delete="0">
                <field name="send"/>
                <field name="days"/>
                <field name="subject"/>
            </tree>
        </field>
    </record>
    
    <record id="daily_att_email_setting_action" model="ir.actions.act_window">
        <field name="name">Email</field>
        <field name="res_model">daily.attendance.email.setting</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="daily_att_email_setting_action_menu"
              parent="school.menu_configuration"
              action="daily_att_email_setting_action" />
</odoo>
