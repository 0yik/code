<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_submit_attendance" model="ir.ui.view">
        <field name="name">Submit Attendance Sheet</field>
        <field name="model">submit.attendance.wizard</field>
        <field name="arch" type="xml">
            <form string="Substitute Teacher">
                <group string="Timesheet is already created, not able to duplicate."></group>
                <footer>
                    <button name="submit_attendance_sheet" string="Submit" type="object" class="oe_highlight"/>
                   	<button string="Close" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    
    <record id="action_submit_attendance" model="ir.actions.act_window">
        <field name="name">Submit Attendance Sheet</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">submit.attendance.wizard</field>
        <field name="view_type">form</field>
        <field name="view_mode">form,tree</field>
        <field name="view_id" ref="view_submit_attendance"/>
        <field name="target">new</field>
    </record>
    
        
</odoo>
