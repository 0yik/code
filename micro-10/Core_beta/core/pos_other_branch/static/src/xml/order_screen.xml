<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="BranchSelectionButton">
        <div class='control-button'>
            <i class="fa fa-bars"></i> Branch Selection
        </div>
    </t>

    <t t-name="POSPopupWidget">
        <div class="modal-dialog">
            <div class="popup popup-other-branch">
                <p class="title"><t t-esc=" widget.options.title || '' " /></p>
                <div class='selection scrollable-y touch-scrollable'>
                    <select id="branch_id" style="width: 40%;">
                        <option value='' style="color: red; font-size: 15px;">Branch...</option>
                        <t t-foreach='widget.other_branch || []' t-as='item'>
                            <option t-att-value='item.id'>
                                <t t-esc='item.name'/>
                            </option>
                        </t>
                    </select>
                </div>
                <div class="footer">
                    <div class="button confirm">
                        Ok
                    </div>
                    <div class="button cancel">
                        Cancel
                    </div>
                </div>
            </div>
        </div>
    </t>

</templates>
