<odoo>
    <data>

        <record id="journal_creation_wizard_form_view" model="ir.ui.view">
            <field name="name">Journal Creation Wizard Form View</field>
            <field name="model">journal.creation.wizard</field>
            <field name="arch" type="xml">
                <form string="Journal Creation">
                    <group>
                        <group>
                            <field name="sold_to" required="1"/>
                            <field name="sale_price" required="1"/>
                        </group>
                        <group>
                            <field name="journal_id" options='{"no_open": True, "no_create": True, "no_edit": True}' attrs="{'required': [('sale_price','&gt;',0)]}"/>
                            <field name="currency_id" options='{"no_open": True, "no_create": True, "no_edit": True}' attrs="{'required': [('sale_price','&gt;',0)]}"/>
                        </group>
                    </group>
                    <footer>
                        <button name="action_create_journal" string="Confirm" type="object" class="oe_highlight"/>
                        <button name="cancel" string="Cancel" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>