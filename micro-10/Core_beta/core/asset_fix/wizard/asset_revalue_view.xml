<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_asset_revalue_wizard_form" model="ir.ui.view">
        <field name="name">Asset Revalue Wizard Form</field>
        <field name="model">asset.revalue.wizard</field>
        <field name="arch" type="xml">
            <form string="Asset Revalue Wizard">
                <group>
                    <field name="reason" required="1"/>
                    <field name="amount" required="1"/>
                    <field name="no_of_depreciation" required="1"/>
                    <field name="no_of_month" required="1"/>
                </group>
                <footer>
                    <button name="button_confirm" type="object" string="Confirm" class="oe_highlight"/>
                    or
                    <button special="cancel" string="Cancel" class="oe_link"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>