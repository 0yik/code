<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_account_asset_location_form" model="ir.ui.view">
        <field name="name">Asset Location Form</field>
        <field name="model">account.asset.location</field>
        <field name="arch" type="xml">
            <form string="Asset Location">
                <sheet>
                    <group>
                        <field name="name" required="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_account_asset_location_tree" model="ir.ui.view">
        <field name="name">Asset Location Tree</field>
        <field name="model">account.asset.location</field>
        <field name="arch" type="xml">
            <tree string="Asset Location">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="action_account_asset_location" model="ir.actions.act_window">
        <field name="name">Asset Location</field>
        <field name="res_model">account.asset.location</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to add a new asset location.
            </p>
        </field>
    </record>

    <menuitem id="account_asset_location_menu" name="Asset Location" action="action_account_asset_location" parent="account.account_management_menu" sequence="1"/>

</odoo>