<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="seq_fob_inspection" model="ir.sequence">
            <field name="name">Facility Booking Order</field>
            <field name="code">facility.booking</field>
            <field name="prefix">FBO</field>
            <field name="padding">4</field>
        </record>



        <record model="ir.ui.view" id="facility_booking_order_tree_view">
            <field name="name">Facility Booking Order Tree</field>
            <field name="model">facility.booking</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="tenant_id"/>
                    <field name="facility_id"/>
                    <field name="booking_start_date"/>
                    <field name="booking_end_date"/>
                    <field name="remarks"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="facility_booking_order_form_view">
            <field name="name">Facility Booking Order Form</field>
            <field name="model">facility.booking</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_facility_confirm" type="object" string="Confirm" class="btn-primary" states="draft"/>
                        <button name="action_facility_cancel" type="object" string="Cancel" class="btn-primary" states="draft,confirm"/>
                        <button name="%(action_booking_reschedule_report)d" type="action" string="Reschedule" class="btn-primary" states="confirm"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <field name="name" readonly="1"/>
                        <group>
                            <group>
                                <field name="tenant_id" attrs="{'readonly' : [('state','!=','draft')]}"/>
                                <field name="street" attrs="{'readonly' : [('state','!=','draft')]}"/>
                                <field name="phone" attrs="{'readonly' : [('state','!=','draft')]}"/>
                                <field name="mobile" attrs="{'readonly' : [('state','!=','draft')]}"/>
                                <field name="email" attrs="{'readonly' : [('state','!=','draft')]}"/>
                            </group>
                            <group>
                                <field name="location_id" attrs="{'readonly' : [('state','!=','draft')]}"/>
                                <field name="facility_id" attrs="{'readonly' : [('state','!=','draft')]}"/>
                                <field name="booking_start_date" attrs="{'readonly' : [('state','!=','draft')]}"/>
                                <field name="booking_end_date" attrs="{'readonly' : [('state','!=','draft')]}"/>
                                <field name="remarks" attrs="{'readonly' : [('state','!=','draft')]}"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record model="ir.actions.act_window" id="action_facility_booking_order">
            <field name="name">Facility Booking Order</field>
            <field name="res_model">facility.booking</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="facility_booking_parent_menu" name="Facility Booking" sequence="1"/>
        <menuitem id="facility_booking_order_menu" parent="facility_booking_parent_menu" name="Facility Booking Order"
                  action="action_facility_booking_order" sequence="1"/>
    </data>
</odoo>