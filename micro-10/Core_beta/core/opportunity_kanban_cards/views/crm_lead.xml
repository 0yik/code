<?xml version="1.0"?>
<odoo>

        <record id="crm_case_kanban_view_leads_inherit_hm" model="ir.ui.view">
            <field name="name">crm.lead.kanban.lead</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_kanban_view_leads"/>
            <field name="arch" type="xml">
                    <xpath expr="//div[@class='oe_kanban_content']" position="replace">
                        <div class="oe_kanban_content">
                                    <div>
                                        <field name="tag_ids"/>
                                    </div>
                                    <div>
                                        <strong><field name="name"/></strong><br/>
                                      <t t-if="record.next_activity_id.raw_value">
                                        <p>--------------------Next Activity---------------------</p><br/>
                                        <strong><field name="date_action"/></strong><strong> : </strong><strong><field name="next_activity_id"/></strong>
	                                      <br/>
                                        <strong><field name="title_action"/></strong>
	                                      <br/>
	                                      <br/>
                                      </t>
                                      <strong>Email:</strong><strong><field name="email_from"/></strong><br/>
                                      <strong>Phone:</strong><strong><field name="phone"/></strong><br/>
                                    </div>
                                    <div class="text-muted">
                                        <t t-if="record.planned_revenue.raw_value"><field name="planned_revenue" widget="monetary" options="{'currency_field': 'company_currency'}"/><span t-if="record.partner_id.value">,</span></t> <span t-if="record.partner_id.value"> <t t-esc="record.partner_id.value"/></span>
                                    </div>

                                    <div class="o_kanban_footer">
                                        <field name="priority" widget="priority" groups="base.group_user"/>
                                        <t t-if="record.message_needaction_counter.raw_value">
                                            <span class="oe_kanban_mail_new" title="Unread Messages"><i class="fa fa-comments"/><t t-raw="record.message_needaction_counter.raw_value"/></span>
                                        </t>
                                        <div>
                                            <a name="343" type="action" t-if="record.kanban_state.raw_value!='grey'">
                                              <span t-att-title="record.date_action.value + ': '+ record.title_action.value" t-attf-class="oe_kanban_status oe_kanban_status_#{record.kanban_state.raw_value}"/>
                                            </a>
                                            <a name="344" type="action" t-if="record.kanban_state.raw_value=='grey'">
                                              <span class="oe_kanban_status oe_kanban_status_grey"/>
                                            </a>
                                            <img t-att-src="kanban_image('res.users', 'image_small', record.user_id.raw_value)" t-att-title="record.user_id.value" width="24" height="24" class="oe_kanban_avatar pull-right"/>
                                        </div>
                                    </div>
                        </div>
                   </xpath>
                </field>
           </record>
</odoo>
        