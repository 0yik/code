<odoo>
    <!-- KanBan View Of DashBoard Event -->
    <record id="purchase_dashboard_view_kanban" model="ir.ui.view">
        <field name="name">purchase.dashboard.dashboard</field>
        <field name="model">purchase.dashboard</field>
        <field name="arch" type="xml">
             <kanban class="oe_background_grey o_kanban_dashboard o_hr_kanban" js_class="purchase_dashboard_view" create="0">
                <field name="name"/>
             </kanban>
        </field>
    </record>
    <!-- ***********Action Dashboard *************-->
    <record id="purchase_dashboard_action" model="ir.actions.act_window">
        <field name="name">Purchase Dashboard</field>
        <field name="res_model">purchase.dashboard</field>
        <field name="view_type">form</field>
        <field name="view_mode">kanban</field>
        <field name="context">{'purchase_dashboard_view_view_ref': 'purchase_dashboard.purchase_dashboard_view'}</field>
        <field name="help" type="html">
           <p class="oe_view_nocontent_create">
           </p>
        </field>
    </record>
    <!-- *********** Menuitem Dashboard ***********-->
    <menuitem id="menu_purchase_dashboard" name="Dashboard" action="purchase_dashboard_action" sequence="-1" 
      parent="purchase.menu_purchase_root" icon="fa-dashboard" web_icon="purchase_dashboard,static/description/dashboard.png" />
</odoo>