<odoo>
    <record id="view_overtime_multiplier_employee_form" model="ir.ui.view">
        <field name="name">view.overtime.multiplier.employee.form</field>
        <field name="model">overtime.multiplier.employee</field>
        <field name="arch" type="xml">
            <form>
            	<sheet>
	                <group>
	    				<field name="employee_id"/>
	    				<field name="workdays_id"/>
	    				<field name="offdays_id"/>
	    				<field name="public_holidays_id"/>
	                </group>
	            </sheet>
            </form>
        </field>
    </record>

    <record id="view_overtime_multiplier_employee_tree" model="ir.ui.view">
        <field name="name">view.overtime.multiplier.employee.tree</field>
        <field name="model">overtime.multiplier.employee</field>
        <field name="arch" type="xml">
            <tree>
            	<field name="employee_id"/>
   				<field name="workdays_id"/>
   				<field name="offdays_id"/>
   				<field name="public_holidays_id"/>
            </tree>
        </field>
    </record>

    <record id="action_overtime_multiplier_employee" model="ir.actions.act_window">
        <field name="name">Overtime Multiplier Employee</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">overtime.multiplier.employee</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="overtime_multiplier_employee_menu_action" name="Overtime Multiplier Employee" action="action_overtime_multiplier_employee" parent="overtime_menu"/>
</odoo>