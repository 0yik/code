<odoo>
    <record id="view_allocate_overtime_multiplier_form" model="ir.ui.view">
        <field name="name">view.allocate.overtime.multiplier.form</field>
        <field name="model">allocate.overtime.multiplier</field>
        <field name="arch" type="xml">
            <form>
            	<group>
            		<field name="overtime_multiplier_id" readonly="1"/>
            		<field name="name" readonly="1"/>
            		<field name="apply_to" required='1'/>
            		<field name="employee_ids"/>
            	</group>
            	<footer>
                    <button name="apply" string="Apply" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
            	</footer>
            </form>
        </field>
    </record>

    <record id="action_allocate_overtime_multiplier" model="ir.actions.act_window">
        <field name="name">Allocate Overtime Multiplier</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">allocate.overtime.multiplier</field>
        <field name="view_type">form</field>
        <field name="target">new</field>
        <field name="view_mode">form</field>
    </record>
    
</odoo>