<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="stock_adjustment_tree_view" model="ir.ui.view">
        <field name="name">Stock Adjustment Tree</field>
        <field name="model">stock.adjustment</field>
        <field name="arch" type="xml">
            <tree string="Stock Adjustment">
                <field name="date"/>
                <field name="name"/>
                <field name="picking_id"/>
                <field name="location_id"/>
                <field name="origin"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="stock_adjustment_form_view" model="ir.ui.view">
        <field name="name">Stock Adjustment Form</field>
        <field name="model">stock.adjustment</field>
        <field name="arch" type="xml">
            <form class="oe_form_configuration">
                <header>
                    <button name="button_validate" type="object" states="draft" string="Validate" class="btn btn-primary"/>
                    <button name="button_cancel" type="object" states="draft" string="Cancel"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,done" />
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_inventory" string="Inventroy Adjustment" type="object" class="oe_stat_button" icon="fa-building-o" attrs="{'invisible': [('inventory_id','=',False)]}"/>
                    </div>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="location_id" domain="[('usage','=','internal')]" required="1" attrs="{'readonly': [('state','!=','draft')]}"/>
                            <field name="picking_id" domain="[('state','=','done'),('picking_type_id','=',picking_type_id)]" required="1" attrs="{'readonly': [('state','!=','draft')]}"/>
                            <field name="picking_type_id" invisible="1"/>
                            <field name="inventory_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="date" readonly="1"/>
                            <field name="account_date" attrs="{'readonly': [('state','!=','draft')]}"/>
                            <field name="origin" attrs="{'readonly': [('state','!=','draft')]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Inventory Details">
                            <br/>
                            <field name="line_ids" attrs="{'readonly': [('state','!=','draft')]}">
                                <tree string="Inventory Deatails" create="false" delete="false" editable="bottom">
                                    <field name="product_id" readonly="1"/>
                                    <field name="uom_id" readonly="1"/>
                                    <field name="location_id" readonly="1"/>
                                    <field name="quantity" readonly="1"/>
                                    <field name="new_quantity" required="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="stock_adjustment_action" model="ir.actions.act_window">
        <field name="name">GRN Adjustment</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">stock.adjustment</field>
        <field name="view_mode">tree,form</field>
        <field name="view_type">form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click here to create a GRN Adjustment.
            </p>
        </field>
    </record>

    <menuitem id="menu_stock_adjustment" action="stock_adjustment_action" parent="stock.menu_stock_warehouse_mgmt" sequence="15"/>

</odoo>