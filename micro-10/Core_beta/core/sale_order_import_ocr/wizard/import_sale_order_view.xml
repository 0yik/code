<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="read_so_wizard_form" model="ir.ui.view">
        <field name="name">read.sale.order.wizard.form</field>
        <field name="model">read.saleorder.wizard</field>
        <field name="arch" type="xml">
            <form string="Read Sale Order">
                <field name="attachment_type" widget="radio" required="1" options="{'horizontal': true}"/>
                <group>
                <field name="pdf_attachment" filename="filename" attrs="{'invisible':[('attachment_type','=', 'image')], 'required':[('attachment_type','=', 'pdf')]}"/>
                <field name="filename" invisible="1"/>
                <field name="attachment_ids" mode="kanban"
                       context="{'default_read_so_id': active_id}"
                       attrs="{'invisible':[('attachment_type','=', 'pdf')], 'required':[('attachment_type','=', 'image')]}">
                    <kanban>
                        <field name="color"/>
                        <field name="filename"/>
                        <field name="image_attachment"/>
                        <templates>
                            <t t-name="kanban-box">
                                <t t-set="color" t-value="kanban_color(record.color.raw_value)"/>
                                <div class="oe_kanban_global_click">
                                    <a t-if="!read_only_mode" type="delete" class="fa fa-times pull-right"/>
                                    <div class="o_kanban_image">
                                        <img t-if="record.image_attachment.raw_value" t-att-src="'data:image/png;base64,'+record.image_attachment.raw_value"/>
                                    </div>
                                    <div class="oe_kanban_details">
                                        <field name="filename"/>
                                    </div>
                                </div>
                            </t>
                        </templates>
                    </kanban>
                    <form string="Contact / Address">
                        <sheet>
                            <field name="image_attachment" filename="filename" widget="image" class="oe_avatar" />
                            <field name="filename" invisible="1"/>
                        </sheet>
                    </form>
                </field>
                </group>
                <group col="4" colspan="4">
<!--                     <field name="so_type" widget="radio" options="{'horizontal': true}"/> -->
                    <field name="currency_id" required="1" placeholder="Attached Sale Order Currency"/>
                    <field name="language" required="1"/>
                </group>
                <footer>
                    <button name="read_so" string="Read Sale Order" type="object" class="oe_highlight" />
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_read_so_wizard" model="ir.actions.act_window">
        <field name="name">Read Sale Order</field>
        <field name="res_model">read.saleorder.wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="read_so_wizard_form"/>
    </record>

    <menuitem id="menu_import_so" 
              name="Import Sale Order"
              parent="sales_team.menu_sales" sequence="100"/>

    <menuitem id="menu_read_sale_order"
              parent="menu_import_so"
              action="action_read_so_wizard"/>

    <record id="import_so_wizard_form" model="ir.ui.view">
        <field name="name">import.so.wizard.form</field>
        <field name="model">import.saleorder.wizard</field>
        <field name="arch" type="xml">
            <form string="Sale Order Import" >
                <header>
                    <button name="import_sale_order" string="Import Sale Order"
                            type="object" class="oe_highlight" />
                    <button string="Discard" class="oe_highlight"
                            type="object" name="discard_sale_order"/>
                </header>
                <field name="attachment_ids" context="{'default_read_so_id': active_id}" invisible="1" />
                <table width="100%">
                    <tr>
                        <td width="50%">
                            <b attrs="{'invisible':['|', ('partner_id','!=',False), ('new_partner','!=',False)]}">Merge With Existing Partner:-</b>
                            <group attrs="{'invisible':[('new_partner','!=',False)]}">
                                <field name="partner_id" />
                            </group>
                            <group >
                                <field name="new_partner" attrs="{'invisible':[('partner_id','!=',False)]}" />
                                <field name="partner" attrs="{'invisible':[('partner_id','!=',False)]}"/>
                            </group>
                            <notebook>
                                <page string="Sale Order Line">
                                    <field name="so_line_ids" >
                                        <tree editable="top">
                                            <field name="product_id" />
                                            <field name="name" />
                                            <field name="quantity" />
                                            <field name="price_unit" />
                                            <field name="so_line_tax_ids" widget="many2many_tags"/>
                                        </tree>
                                    </field>
                                </page>
                            </notebook>
                        </td>
                        <td width="50%">
                            <div class="row" >
                                <div class="col-md-6" >
                                    <button  name="next_image"
                                            string="Next"
                                            type="object" class="oe_highlight" />
                                </div>
                                <div class="col-md-6" align="right">
                                    <button string="Previous"
                                            class="oe_highlight"
                                            type="object" name="previous_image"/>
                                </div>
                            </div>
                            <field name="image_attachment" widget="image" readonly="1"/>
                        </td>
                    </tr>
                </table>
            </form>
        </field>
    </record>

    <record id="action_import_sale_order_wizard" model="ir.actions.act_window">
        <field name="name">Import Sale Order</field>
        <field name="res_model">import.saleorder.wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="import_so_wizard_form"/>
    </record>

</odoo>
