<odoo>
	<data>
		<record model="ir.ui.view" id="view_account_asset_asset_form">
		    <field name="name">account.asset.asset.form</field>
		    <field name="model">account.asset.asset</field>
			<field name="inherit_id" ref="account_asset.view_account_asset_asset_form"/>
		    <field name="arch" type="xml">
				<xpath expr="//button[@name='open_entries']" position="after">
					<button name="get_equipment" class="oe_stat_button" icon="fa-ticket" type="object" attrs="{'invisible': [('no_of_equipments', '=', 0)]}">
		                <div class="o_stat_info">
		                    <field name="no_of_equipments" class="o_stat_value"/>
		                    <span class="o_stat_text"> Equipments </span>
		                </div>
		            </button>
				</xpath>
				<field name="date" position="after">
					<field name="location_id"/>
					<field name="type_of_assets"/>
					<field name="licence_plate" attrs="{'invisible': [('type_of_assets', '=', 'other assets')], 'required': [('type_of_assets', '=', 'fleet')]}"/>
					<field name="brand_id" attrs="{'invisible': [('type_of_assets', '=', 'other assets')], 'required': [('type_of_assets', '=', 'fleet')]}"/>
					<field name="maintenance_ids" invisible="1"/>
				</field>
				<xpath expr="//button[@name='set_to_draft']" position="after">
					<button name="create_asset_tracking" string="Create Asset Tracking" attrs="{'invisible': [('state', '!=', 'open')]}" type="object"/>
				</xpath>
			</field>
		</record>
		<record id="view_account_asset_asset_form_inherit_2" model="ir.ui.view">
			<field name="name">account.asset.asset.form.inherit.2</field>
			<field name="model">account.asset.asset</field>
			<field name="inherit_id" ref="asset_fix.view_account_asset_asset_form_inherit"/>
			<field name="arch" type="xml">
				<field name="owner_id" position="attributes">
					<attribute name="attrs">{'required': [('type_of_assets', '=', 'other assets')]}</attribute>
				</field>
			</field>
		</record>
	</data>
</odoo>
