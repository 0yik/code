<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_asset_master_tree" model="ir.ui.view">
        <field name="name">Asset Master Tree</field>
        <field name="model">asset.master</field>
        <field name="arch" type="xml">
            <tree string="Asset Master Tree" decoration-muted="state=='cancel'" decoration-info="state=='confirm'" decoration-success="state=='dispose'">
                <field name="name"/>
                <field name="asset_categ_id"/>
                <field name="type"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_asset_master_form" model="ir.ui.view">
        <field name="name">Asset Master Form</field>
        <field name="model">asset.master</field>
        <field name="arch" type="xml">
            <form string="Asset Master Form">
                <header>
                    <button name="button_confirm" states="draft" string="Confirm" type="object" class="btn btn-primary"/>
                    <button name="button_cancel" states="draft" string="Cancel" type="object" class="btn btn-default"/>
                    <button name="button_dispose" states="confirm" string="Sell / Dispose" type="object" class="btn btn-primary"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm,dispose"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_open_asset" string="Asset" class="oe_stat_button" type="object" icon="fa-cogs" attrs="{'invisible': [('asset_id','=',False)]}"/>
                        <button name="action_open_fleet" string="Fleet" class="oe_stat_button" type="object" icon="fa-taxi" attrs="{'invisible': [('fleet_id','=',False)]}"/>
                        <button name="action_open_equipment" string="Equipment" class="oe_stat_button" type="object" icon="fa-wrench" attrs="{'invisible': [('equipment_id','=',False)]}"/>
                        <button name="return_action_to_open" class="oe_stat_button" type="object" icon="fa-book" context="{'xml_id':'fleet_vehicle_log_contract_action'}" attrs="{'invisible': [('fleet_id','=',False)]}" help="show the contract for this vehicle">
                            <field name="contract_count" widget="statinfo" string="Contracts"/>
                        </button>
                        <button name="get_maintenances" class="oe_stat_button" type="object" icon="fa-ticket" context="{'default_vehicle_id': active_id}" attrs="{'invisible': [('asset_id','=',False)]}">
                            <field name="maintenance_count" widget="statinfo" string="Maintenance"/>
                        </button>
                        <button name="act_show_log_cost" class="oe_stat_button" type="object" icon="fa-usd" attrs="{'invisible': [('fleet_id','=',False)]}" help="show all the costs for this vehicle" groups="fleet.fleet_group_manager">
                            <field name="cost_count" widget="statinfo" string="Costs"/>
                        </button>
                        <button name="return_action_to_open" class="oe_stat_button" type="object" icon="fa-wrench" context="{'xml_id':'fleet_vehicle_log_services_action'}" attrs="{'invisible': [('fleet_id','=',False)]}" help="show the services logs for this vehicle" >
                            <field name="service_count" widget="statinfo" string="Services"/>
                        </button>
                        <button name="return_action_to_open" class="oe_stat_button" type="object" icon="fa-flask" context="{'xml_id':'fleet_vehicle_log_fuel_action'}" attrs="{'invisible': [('fleet_id','=',False)]}" help="show the fuel logs for this vehicle" >
                            <field name="fuel_logs_count" widget="statinfo" string="Fuel"/>
                        </button>
                        <button name="return_action_to_open" class="oe_stat_button" type="object" icon="fa-tachometer" context="{'xml_id':'fleet_vehicle_odometer_action'}" attrs="{'invisible': [('fleet_id','=',False)]}" help="show the odometer logs for this vehicle" >
                            <field name="odometer_count" widget="statinfo" string="Odometer"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Asset Name" attrs="{'readonly': [('state','!=','draft')]}"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="asset_categ_id" domain="[('type','=','purchase')]" context="{'default_type': 'purchase'}" required="1" attrs="{'readonly': [('state','!=','draft')]}"/>
                            <field name="type" required="1" attrs="{'readonly': [('state','!=','draft')]}"/>
                            <field name="owner_id" required="1" attrs="{'readonly': [('state','!=','draft')]}"/>
                            <field name="value" attrs="{'readonly': [('state','!=','draft')]}"/>
                            <field name="asset_id" invisible="1"/>
                            <field name="fleet_id" invisible="1"/>
                            <field name="equipment_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="location_id" required="1" attrs="{'readonly': [('state','!=','draft')]}"/>
                            <field name="model_id" attrs="{'invisible': [('type','!=','fleet')], 'readonly': [('state','!=','draft')], 'required': [('type','=','fleet')]}"/>
                            <field name="license_plate" attrs="{'required': [('type','=','fleet')], 'invisible': [('type','!=','fleet')], 'readonly': [('state','!=','draft')]}"/>
                        </group>
                    </group>
                    <notebook > <!-- attrs="{'invisible': [('asset_id','=',False)]}" -->
                        <page string="Fleet Details" attrs="{'invisible': [('type','!=','fleet')]}">
                            <group col="2" string="General Properties">
                                <group>
                                    <field name="driver_id" attrs="{'invisible': [('type','=','fleet')],'readonly': [('state','!=','draft')]}"/>
                                    <field name="location" attrs="{'invisible': [('type','=','fleet')],'readonly': [('state','!=','draft')]}"/>
                                    <field name="vin_sn" attrs="{'readonly': [('state','!=','draft')]}"/>
                                    <field name="company_id" groups="base.group_multi_company" attrs="{'readonly': [('state','!=','draft')]}"/>
                                </group>
                                <group>
                                    <label for="odometer"/>
                                    <div class="o_row">
                                        <field name="odometer" attrs="{'readonly': [('state','!=','draft')]}"/>
                                        <field name="odometer_unit" required="1" attrs="{'readonly': [('state','!=','draft')]}"/>
                                    </div>
                                    <field name="acquisition_date" attrs="{'readonly': [('state','!=','draft')]}"/>
                                    <field name="car_value" attrs="{'invisible': [('type','=','fleet')],'readonly': [('state','!=','draft')]}"/>
                                </group>
                            </group>
                            <group col="2">
                                <group string="Additional Properties">
                                    <field name="seats" attrs="{'readonly': [('state','!=','draft')]}"/>
                                    <field name="doors" attrs="{'readonly': [('state','!=','draft')]}"/>
                                    <field name="color" attrs="{'readonly': [('state','!=','draft')]}"/>
                                </group>
                                <group string="Engine Options">
                                    <field name="transmission" attrs="{'readonly': [('state','!=','draft')]}"/>
                                    <field name="fuel_type" attrs="{'readonly': [('state','!=','draft')]}"/>
                                    <label for="co2"/>
                                    <div class="o_row">
                                        <field name="co2" attrs="{'readonly': [('state','!=','draft')]}"/><span>g/km</span>
                                    </div>
                                    <field name="horsepower" attrs="{'readonly': [('state','!=','draft')]}"/>
                                    <field name="horsepower_tax" attrs="{'readonly': [('state','!=','draft')]}"/>
                                    <label for="power"/>
                                    <div class="o_row">
                                        <field name="power" attrs="{'readonly': [('state','!=','draft')]}"/><span>kW</span>
                                    </div>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_asset_master_filter" model="ir.ui.view">
        <field name="name">Asset Master Filter</field>
        <field name="model">asset.master</field>
        <field name="arch" type="xml">
            <search string="Search Asset Master">
                <field name="name" string="Asset Name"/>
                <filter name="draft" string="Draft" domain="[('state','=','draft')]"/>
                <filter name="confirm" string="Confirmed" domain="[('state','=','confirm')]"/>
                <filter name="dispose" string="Disposed / Sold" domain="[('state','=','dispose')]"/>
                <filter name="cancel" string="Cancelled" domain="[('state','=','cancel')]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" domain="[]" context="{'group_by': 'state'}"/>
                    <filter string="Asset Category" domain="[]" context="{'group_by': 'asset_categ_id'}"/>
                    <filter string="Asset Type" domain="[]" context="{'group_by': 'type'}"/>
                    <filter string="Owner" domain="[]" context="{'group_by': 'owner_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_asset_master" model="ir.actions.act_window">
        <field name="name">Asset Master</field>
        <field name="res_model">asset.master</field>
        <field name="view_mode">tree,form</field>
        <field name="view_type">form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click here to create a Asset Master.
            </p>
        </field>
    </record>

    <menuitem id="menu_asset_master_root" name="Asset Master" parent="account.menu_finance" sequence="3"/>
    <menuitem id="menu_asset_master" name="Asset Master" action="action_asset_master" parent="menu_asset_master_root" sequence="5"/>

</odoo>
