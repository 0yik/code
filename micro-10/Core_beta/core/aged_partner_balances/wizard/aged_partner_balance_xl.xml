<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="account_aged_balance_view_inherit" model="ir.ui.view">
        <field name="name">Account Aged Balance View Inherit</field>
        <field name="model">account.aged.trial.balance</field>
        <field name="inherit_id" ref="account.account_aged_balance_view"/>
        <field name="arch" type="xml">
            <field name="target_move" position="after">
                <field name="is_excel"/>
                <field name="export_format" widget="radio"/>
                <field name="foreign_currency" groups="base.group_multi_currency" attrs="{'invisible': [('export_format','!=','detail')]}"/>
            </field>
            <field name="target_move" position="attributes">
                <attribute name="attrs">{'invisible': [('is_excel','!=',False)]}</attribute>
            </field>
            <field name="date_from" position="attributes">
                <attribute name="string">Generate records up to</attribute>
            </field>
            <button name="check_report" position="after">
                <button name="action_export" string="Export XLSX" type="object" icon="fa-cogs" class="oe_highlight"/>
            </button>
        </field>
    </record>

</odoo>