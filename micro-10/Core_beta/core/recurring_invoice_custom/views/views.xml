<odoo>
  <data>
    <record id="recurring_invoice_custom_form_view" model="ir.ui.view">
      <field name="name">recurring.invoice.form</field>
      <field name="model">recurring.invoice</field>
      <field name="inherit_id" ref="recurring_invoice.recurring_customer_invoice_form"/>
      <field name="view_mode">form</field>
      <field name="arch" type="xml">
        <xpath expr="//sheet/field[@name='type']" position="before">
          <div class="oe_button_box" name="button_box">
              <button name="action_view_customer_invoice"
                  type="object"
                  class="oe_stat_button"
                  icon="fa-pencil-square-o" string="Invoices">
              </button>
          </div>
        </xpath>
      </field>
    </record>
    <record id="recurring_vendor_bill_form_view" model="ir.ui.view">
      <field name="name">recurring.vendor.bill.form</field>
      <field name="model">recurring.invoice</field>
      <field name="inherit_id" ref="recurring_invoice.recurring_vendor_invoice_form"/>
      <field name="view_mode">form</field>
      <field name="arch" type="xml">
        <xpath expr="//sheet/field[@name='type']" position="before">
          <div class="oe_button_box" name="button_box">
              <button name="action_view_customer_invoice"
                  type="object"
                  class="oe_stat_button"
                  icon="fa-pencil-square-o" string="Vendor Bills">
              </button>
          </div>
        </xpath>
      </field>
    </record>
  </data>
</odoo>