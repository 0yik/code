<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_employee_form_inherit_indonesia" model="ir.ui.view">
            <field name="name">View Employee Form Inherit Indonesia</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="priority">30</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='identification_id']" position="before">
                    <field name="province_id"/>
                </xpath>
                <xpath expr="//page[@name='personal_information']/group" position="after">
                    <group string="Tax Information">
                        <group>
                            <field name="npwp_number"/>
                            <field name="ptkp_status" required="1"/>
                        </group>
                        <group>
                            <field name="tax_calculation_method" required="1"/>
                            <field name="tax_deduction_method" required="1"/>
                        </group>
                    </group>
                    <group string="BPJS Information">
                        <group>
                            <field name="bpjs_ketenagakerjaan_number"/>
                            <field name="bpjs_kesehatan_number"/>
                            <field name="jkk_percentage"/>
                        </group>
                        <group>
                            <field name="bpjs_ketenagakerjaan_date"/>
                            <field name="bpjs_kesehatan_date"/>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>

        <record id="hr_income_tax_form_inherit_indonesia" model="ir.ui.view">
            <field name="name">Hr Income Tax Form Inherit Indonesia</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="l10n_sg_hr_payroll.hr_income_tax_form_inherit"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='personal_information']/group/group[1]" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>

        <record id="view_employee_form_parent2_indonesia" model="ir.ui.view">
            <field name="name">View Employee Form Parent2 Indonesia</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="sg_hr_employee.view_employee_form_parent2"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='foreign_worker_levy']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>

    </data>
</odoo>