<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record model="ir.ui.view" id="view_internal_transfer_form">
        <field name="name">view.internal.transfer.form</field>
        <field name="model">internal.transfer</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="button_confirm" string="Confirm" states="draft" type="object" class='btn-primary'/>
                    <field name="state" widget="statusbar" statusbar_visible="draft"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
	                    <button type="object" name="action_view_delivery" class="oe_stat_button" icon="fa-truck"  groups="base.group_user">
	                        <field name="picking_count" widget="statinfo" string="Notes"/>
	                    </button>
                    </div>
                    <h1 class="hidden-xs">
                        <field name="name" readonly="1"/>
                    </h1>
                    <group>
                    <group>
                        <field name='partner_id' attrs="{'readonly':[('state','!=','draft')]}"/>
                        <field name='schedule_date' required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                    </group>
                    <group>
                        <field name="source_loc_id" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                        <field name="dest_loc_id" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                    </group>
                    </group>
                    <field name="product_line_ids" attrs="{'readonly':[('state','!=','draft')]}">
                        <tree editable="bottom">
                            <field name="product_id" required="1"/>
                            <field name="product_uom_qty"/>
                            <field name="uom_id" groups="product.group_uom"/>
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_internal_transfer_tree">
        <field name="name">view.internal.transfer.tree</field>
        <field name="model">internal.transfer</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="source_loc_id"/>
                <field name="dest_loc_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_internal_transfer">
        <field name="name">Internal Transfer</field>
        <field name="res_model">internal.transfer</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

      <menuitem
          id="internal_transfers_menu"
          name="Internal Transfer"
          parent="stock.menu_stock_warehouse_mgmt"
          sequence="9"
          action="action_internal_transfer" />

</odoo>
