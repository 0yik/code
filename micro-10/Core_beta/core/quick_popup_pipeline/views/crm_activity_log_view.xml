<?xml version="1.0"?>
<odoo>
    
    <record id="crm_activity_log_view_form_hm" model="ir.ui.view">
        <field name="name">Log an Activity</field>
        <field name="model">crm.activity.log</field>
        <field name="inherit_id" ref="crm.crm_activity_log_view_form"/>
        <field name="arch" type="xml">
            <field name="next_activity_id" position="before">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="email_from"/>
                
            </field>
            <field name="planned_revenue" position="before">
                <field name="date_action"/>
            </field>
            <field name="date_deadline" position="after">
                <field name="phone"/>
                <field name="stage_id"/>
            </field>
        
	        <xpath expr="field[@name='note']" position="replace">
	            <notebook>
	                <page string="Internal Notes" name="notes">
	                    <field name="note" nolabel="1"/>
	                </page>
	                <page string="Meetings" name="meetings">
                        <field name="meeting_ids" context="{'search_default_opportunity_id': active_id, 'default_opportunity_id': active_id, 'default_name': name,'default_start':date_action,'default_stop':date_action}">
                            <tree string="Meetings" editable="botttom">
                                <field name="name" string="Subject"/>
                                <field name="allday" invisible="True"/>
                                <field name="start" string="Start Date"/>
                                <field name="stop" string="End Date"/>
                                <field name="partner_ids" widget="many2many_tags"/>
                                <field name="location"/>
                                <field name="state" invisible="True"/>
                                <field name="duration"/>
                                <field name="message_needaction" invisible="1"/>
                            </tree>
                         </field>
	                </page>
	            </notebook>
	        </xpath>
        </field>
    </record>

</odoo>
