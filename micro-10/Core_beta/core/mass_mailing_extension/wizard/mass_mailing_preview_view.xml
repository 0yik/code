<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Email Template Preview -->
        <record model="ir.ui.view" id="mass_mailing_preview_form">
            <field name="name">mass_mailing.preview.form</field>
            <field name="model">mass_mailing.preview</field>
            <field name="arch" type="xml">
                <form string="Mass Mailing Preview">
                    <group>
                        <field name="email_from" readonly="1"/>
                        <field name="name" readonly="1" class="oe_inline"/>
                        <field name="mailing_model" readonly="1"/>
                        <field name="contact_list_ids" widget="many2many_tags" readonly="1" attrs="{'invisible': [('contact_list_ids', '!=', 'mail.mass_mailing.contact')]}"/>
                        <field name="keep_archives" readonly="1" />
                        <field name="reply_to" readonly="1"
                                attrs="{'invisible':[('reply_to','=',False)]}"/>
                        <field name="scheduled" readonly="1"
                                attrs="{'invisible':[('scheduled','=', 0)]}"/>
                        <field name="attachment_ids" widget="many2many_binary" readonly="1"/>
                    </group>
                        <field name="body" widget="html" readonly="1"/>   
                    <footer>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
                
            </field>
        </record>

        <record id="wizard_mass_mailing_preview" model="ir.actions.act_window">
            <field name="name">Mass Mailing Preview</field>
            <field name="res_model">mass_mailing.preview</field>
            <field name="src_model">mail.mass_mailing</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="mass_mailing_preview_form"/>
            <field name="target">new</field>
            <field name="context">{'template_id':active_id, 'preview_of_mail': 1}</field>
        </record>

    </data>
</odoo>
