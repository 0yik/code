<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data> 
         <template id="snippet_inherit" inherit_id="website_mail.email_designer_snippets">
            <xpath expr="//div[@id='snippet_email_structure']" position="inside">
                <div>
			        <div class="oe_snippet_thumbnail">
			            <img class="oe_snippet_thumbnail_img" src="/mass_mailing_extension/static/src/img/us.jpg"/>
			            <span class="oe_snippet_thumbnail_title">Unsubscribe</span>
			        </div>
			        <div class="oe_snippet_body" style="padding:0px; margin:0px">
			            <table cellspacing="0" cellpadding="0" style="font-family:arial;font-size:12px;color:rgb(51,51,51)">
			                <tbody>
			                    <tr>
			                        <td valign="top" style="width:600px">
			                            <h2>
			                                Unsubscribe from this mailing list
			                            </h2>
			                        </td>
			                    </tr>
			                </tbody>
			            </table>
			        </div>
			    </div>
            </xpath> 
        </template>
    </data>
</openerp>