<?xml version="1.0" encoding="utf-8"?>
<odoo>
	
	
	   	<template id="email_designer_snippets" inherit_id="mass_mailing.email_designer_snippets">
            <xpath expr="//div[@class='o_panel_body']" position="inside">
                <t t-snippet="mass_mailing_extension.s_mail_block_title_text" t-thumbnail="/mass_mailing_extension/static/src/img/us.jpg"/>
            </xpath> 
        </template>
        
        <template id="s_mail_block_title_text" name="Unsubscribe">
		    <div class="o_mail_block_title_text">
		        <div class="o_mail_snippet_general">
		            <table align="center" cellspacing="0" cellpadding="0" border="0" class="o_mail_table_styles">
		                <tbody>
		                    <tr>
		                        <td width="100%" class="o_mail_h_padding o_mail_v_padding">
		                            <h2 class="mt0">Unsubscribe from this mailing list</h2>
		                        </td>
		                    </tr>
		                </tbody>
		            </table>
		        </div>
    		</div>
		</template>
        
</odoo>