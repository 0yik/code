<?xml version="1.0"?>
<odoo>

     <record model="ir.ui.view" id="view_account_asset_asset_form_inherit">
        <field name="name">account.asset.asset.form</field>
        <field name="model">account.asset.asset</field>
        <field name="inherit_id" ref="account_asset.view_account_asset_asset_form"/>
        <field name="arch" type="xml">

            <xpath expr="//notebook/page[2]" position="after">
                <page string="Movement History">
                    <field name="asset_history_ids" readonly="1">
                        <tree string="History">
                            <field name="previous_user_id"/>
                            <field name="current_user_id"/>
                            <field name="previous_location_id"/>
                            <field name="current_location_id"/>
                            <field name="date_transferred"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
     </record>

    <record model="ir.ui.view" id="view_account_asset_asset_form_loction">
        <field name="name">account.asset.asset.form.location</field>
        <field name="model">account.asset.asset</field>
        <field name="inherit_id" ref="asset_maintenance_fleet_link.view_account_asset_asset_form"/>
        <field name="arch" type="xml">

            <field name="location_id" position="attributes">
                <attribute name="domain">[('usage', '=', 'internal')]</attribute>
            </field>

        </field>
    </record>

</odoo>