<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_inventory_check_tree" model="ir.ui.view">
            <field name="name">inventory.check.tree</field>
            <field name="model">inventory.check</field>
            <field name="arch" type="xml">
                <tree string="Inventory Check" create="false" delete="false" select="false">
                    <field name="name"/>
                    <field name="qty_on_hand"/>
                    <field name="stock_quant_id"/>
                    <field name="purchase_order_id"/>
                    <field name="incomming_quantity"/>
                    <field name="scheduled_date"/>
                    <field name="last_sold_price"/>
                    <field name="last_purchase_price"/>
                    <field name="mrp_production_id"/>
                </tree>
            </field>
        </record>

        <record id="action_inventory_check" model="ir.actions.act_window">
            <field name="name">Inventory Check</field>
            <field name="res_model">inventory.check</field>
            <field name="view_mode">tree_inventory_quickadd</field>
            <field name="view_type">form</field>
            <field name="context">{
            'tree_inventory_quickadd_view_ref' : 'inventory_check.view_inventory_check_tree'
        }</field>
        </record>

        <menuitem
                action="action_inventory_check"
                id="menu_action_inventory_check"
                parent="stock.menu_stock_root"
        />
    </data>
</odoo>
