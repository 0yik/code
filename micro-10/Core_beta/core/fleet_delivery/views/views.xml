<odoo>
  <data>

    <record id="stock_picking_form_inherit_vehicle" model="ir.ui.view">
        <field name="name">form.inherit.vehicle</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='origin']" position="after">
                <field name="vehicle_id"/>
                <field name="vehicle_driver"/>
            </xpath>
        </field>
    </record>

      <record id="fleet_vehicle_view_form_inherit_dilivery_order" model="ir.ui.view">
        <field name="name">fleet.vehicle.form.inherit.po</field>
        <field name="model">fleet.vehicle</field>
        <field name="inherit_id" ref="fleet.fleet_vehicle_view_form"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button class="oe_stat_button" type="action"
                    name="%(fleet_delivery.action_fleet_car_trips)d"
                    icon="fa-road"
                    context="{'search_default_vehicle_id': active_id}">
                    <field string="Trips" name="trips_count" widget="statinfo"/>
                </button>
            </div>
            <xpath expr="//button[@name='return_action_to_open']" position="after">
                <button class="oe_stat_button" name="action_view_delivery_order" type="object" icon="fa-truck" string="Delivery Orders"/>
            </xpath>
        </field>
    </record>

  </data>
</odoo>