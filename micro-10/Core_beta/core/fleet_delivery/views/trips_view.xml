<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>

        <record id="car_rental_trips_form_view" model="ir.ui.view">
            <field name="name">car_rental_trips_form_view.form</field>
            <field name="model">trips.trips</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Trips">
                    <sheet>
                        <group>
                            <group>
                                <field name="vehicle_driver" required="1"/>
                                <field name="picking_id"/>
                                <field name="location_from_id"/>
                                <field name="location_dest_id"/>
                                <field name="picking_partner_id"/>
                                <field name="vehicle_id"/>
                                <field name="picking_date" required="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="car_rental_trips_tree_view" model="ir.ui.view">
            <field name="name">car_rental_trips_tree_view.tree</field>
            <field name="model">trips.trips</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Trips" editable="bottom">
                    <field name="vehicle_driver" required="1"/>
                    <field name="picking_id"/>
                    <field name="location_from_id"/>
                    <field name="location_dest_id"/>
                    <field name="picking_partner_id"/>
                    <field name="vehicle_id"/>
                    <field name="picking_date" required="1"/>
                </tree>
            </field>
        </record>

        <record id='car_rental_trips_pivot_view' model='ir.ui.view'>
            <field name="name">trips.trips.pivot</field>
            <field name="model">trips.trips</field>
            <field name="arch" type="xml">
                <pivot string="Trips">
                    <field name="vehicle_id" type="row"/>
                </pivot>
            </field>
        </record>

        <record id="trips_trips_view_search" model="ir.ui.view">
            <field name="name">trips.trips.search</field>
            <field name="model">trips.trips</field>
            <field name="arch" type="xml">
                <search string="Trips">
                    <field name="vehicle_driver"/>
                    <field name="picking_id"/>
                    <field name="location_from_id"/>
                    <field name="location_dest_id"/>
                    <field name="picking_partner_id"/>
                    <field name="vehicle_id"/>
                    <field name="picking_date"/>
                    <group expand="1" string="Group By">
                        <filter string="Partner" context="{'group_by':'picking_partner_id'}" />
                        <filter string="Vehicle" context="{'group_by':'vehicle_id'}" />
                        <filter string="Driver" context="{'group_by':'vehicle_driver'}" />
                        <filter string="Date" context="{'group_by':'picking_date'}" />
                        <filter string="Source Location" context="{'group_by':'location_from_id'}" />
                        <filter string="Destination Location" context="{'group_by':'location_dest_id'}" />
                        <separator/>
                        <filter string="This Month" context="{'group_by':'picking_date:month'}" />
                    </group>
                </search>
            </field>
        </record>

        <record id="action_fleet_car_trips" model="ir.actions.act_window">
            <field name="name">Trips</field>
            <field name="res_model">trips.trips</field>
            <field name="view_id" ref="car_rental_trips_tree_view"/>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,pivot</field>
        </record>

        <menuitem id="menu_car_trips" parent="fleet.fleet_vehicles" name="Trips"
              action="action_fleet_car_trips" sequence="30"/>

    </data>
</odoo>
