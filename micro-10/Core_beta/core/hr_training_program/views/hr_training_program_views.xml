<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Training Programs -->
        <record id="view_training_programs_form" model="ir.ui.view">
            <field name="name">training.programs.form</field>
            <field name="model">training.programs</field>
            <field name="arch" type="xml">
                <form string="Training Programs">
                    <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_training_conduct"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-university"
                            attrs="{'invisible': [('conduct_count', '=', 0)]}">
                            <field name="conduct_count" widget="statinfo" string="Training Conducts"/>
                        </button>
                    </div>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                            <field name="conducted_at"/>
                        </group>
                        <group>
                            <label for="renewable"/>
                            <div class="oe_title">
                                <field name="renewable" class="oe_inline" style="width: 50%"/>months
                            </div>
                            <label for="bond"/>
                            <div class="oe_title">
                                <field name="bond" class="oe_inline" style="width: 50%"/>months
                            </div>

                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_training_programs_tree" model="ir.ui.view">
            <field name="name">training.programs.tree</field>
            <field name="model">training.programs</field>
            <field name="arch" type="xml">
                <tree string="Training Programs">
                    <field name="name"/>
                    <field name="description"/>
                    <field name="conducted_at"/>
                    <field name="renewable"/>
                </tree>
            </field>
        </record>

        <record id="open_hr_training_programs" model="ir.actions.act_window">
            <field name="name">Training Programs</field>
            <field name="res_model">training.programs</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_training_root" name="Trainings" sequence="76"/>
        <!-- <menuitem id="menu_training_main" name="Training Programs" parent="hr_training_program.menu_training_root" sequence="76" /> -->
        <menuitem id="menu_training_programs_main" name="Training Programs" action="open_hr_training_programs"
                  parent="hr_training_program.menu_training_root" sequence="3"/>

        <!-- Training Conducts -->
        <record id="view_training_conducts_form" model="ir.ui.view">
            <field name="name">training.conducts.form</field>
            <field name="model">training.conducts</field>
            <field name="arch" type="xml">
                <form string="Training Conducts">
                    <header>
                        <field name="status" widget="statusbar" clickable="True"/>
                    </header>
                    <sheet>
                        <group col="4">
                            <field name="name" required="1"/>
                            <field name="program_id"/>
                            <!--<field name="status"/> -->
                            <field name="date_start"/>
                            <field name="date_completed"/>
                            <field name="venue"/>
                        </group>
                        <group>
                            <field name="list_conduct_ids" widget="one2many" nolabel="1">
                                <tree string="List of Training Conducts" editable="top">
                                    <field name="employee_id"/>
                                    <field name="attended"/>
                                    <field name="absent"/>
                                    <field name="remarks"/>
                                    <field name="attachment"/>
                                    <field name="status" invisible="1"/>
                                    <field name="status_list" readonly="1"/>
                                    <button name="tick" type="object" string="Success" icon="fa-check text-success"
                                            attrs="{'invisible':[('status','!=','progress')],'readonly': [('status','!=','progress')]}"/>
                                    <button name="cross" type="object" string="Failed" icon="fa-times text-danger"
                                            attrs="{'invisible':[('status','!=','progress')],'readonly': [('status','!=','progress')]}"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_training_conducts_tree" model="ir.ui.view">
            <field name="name">training.conducts.tree</field>
            <field name="model">training.conducts</field>
            <field name="arch" type="xml">
                <tree string="Training Conducts">
                    <field name="name"/>
                    <field name="program_id"/>
                    <field name="date_start"/>
                    <field name="date_completed"/>
                    <field name="status"/>
                </tree>
            </field>
        </record>

        <record id="open_hr_training_conducts" model="ir.actions.act_window">
            <field name="name">Training Conducts</field>
            <field name="res_model">training.conducts</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,pivot</field>
        </record>

        <menuitem id="menu_training_conducts_main" name="Training Conducts" action="open_hr_training_conducts"
                  parent="hr_training_program.menu_training_root" sequence="0"/>
        <record id="view_pivot_training_conducts" model="ir.ui.view">
            <field name="model">training.conducts</field>
            <field name="arch" type="xml">
                <pivot type="bar">
                    <field name="name"/>
<!--                     <field name="list_conduct_ids"/> -->
                    <field name="date_start"/>
                    <field name="date_completed"/>
                    <field name="status"/>
                </pivot>
            </field>
        </record>
        <!-- Employee -inherit -->
        <record id="view_employee_form_inherit" model="ir.ui.view">
            <field name="name">hr.employee.form.inherit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='hr_settings']" position="before">
                    <page string="Trainings">
                        <field name="employee_training_ids" widget="one2many_list" colspan="4" nolabel="1">
                            <tree string="Employee Trainings" editable="bottom">
                                <field name="name"/>
                                <field name="program_id" string="Training Program"/>
                                <field name="date_start" string="Date attempted"/>
                                <field name="date_completed" string="Date completed"/>
                                <field name="date_expire"/>
                                <field name="status_list"/>
                            </tree>
                        </field>
                    </page>
                    <page name="bonds" string="Bonds">
                        <field name="employee_bond_ids">
                            <tree create="false" edit="false">
	                            <field name="program_id"/>
	                            <field name="training_id"/>
	                            <field name="date_complete"/>
	                            <field name="attachment"/>
	                            <field name="expiry_date"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>

        <!-- Training Request -->
        <record id="view_training_requests_form" model="ir.ui.view">
            <field name="name">training.requests.form</field>
            <field name="model">training.requests</field>
            <field name="arch" type="xml">
                <form string="Training Requests">
                    <header>
                        <button name="action_request" states="pending" string="Submit Request" type="object"
                                class="oe_highlight"/>
                        <button name="action_approved" states="requested" string="Approved" type="object"
                                class="oe_highlight"/>
                        <button name="action_rejected" states="requested" string="Rejected" type="object"
                                class="oe_highlight"/>
                        <field name="state" widget="statusbar" statusbar_visible="pending,requested,approved,rejected"
                               statusbar_colors='{"pending":"blue","rejected":"red"}'/>
                    </header>
                    <sheet>
                        <group>
                            <field name="employee"/>
                            <field name="trainingprogram"/>
                            <field name="job_position"/>
                            <field name="remarks"/>
                            <!--<field name="state"/> -->
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_training_requests_tree" model="ir.ui.view">
            <field name="name">training.requests.tree</field>
            <field name="model">training.requests</field>
            <field name="arch" type="xml">
                <tree string="Training Requests">
                    <field name="employee"/>
                    <field name="trainingprogram"/>
                    <field name="job_position"/>
                    <field name="remarks"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="open_hr_training_requests" model="ir.actions.act_window">
            <field name="name">Training Requests</field>
            <field name="res_model">training.requests</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="view_hr_job_form_inherit" model="ir.ui.view">
            <field name="name">hr.job.form.inherit</field>
            <field name="model">hr.job</field>
            <field name="inherit_id" ref="hr.view_hr_job_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='no_of_recruitment']" position="after">
                    <field name="training_required_ids" widget="many2many_tags"/>
                </xpath>
                <xpath expr="//field[@name='description']" position="after">
                    <notebook>
                        <page string="Candidates">
                            <field name="candidates_training_ids" widget="one2many_list" colspan="4" nolabel="1">
                                <tree string="Candidate Trainings" editable="bottom">
                                    <field name="employee"/>
                                    <field name="trainings_completed_ids" widget="many2many_tags"
                                           domain="['&amp;','&amp;',('employee_id','=',employee),('status_list','=','success'),('date_expire','&gt;', datetime.datetime.now().strftime('%Y-%m-%d 00:00:00'))]"/>
                                    <field name="trainings_todo_ids" widget="many2many_tags"
                                           domain="['&amp;',('employee_id','=',employee),('status_list','=','pending')]"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </xpath>
            </field>
        </record>

        <!-- hr related job position menu action -->
        <record model="ir.actions.act_window" id="action_hr_job_config">
            <field name="name">Job Positions</field>
            <field name="res_model">hr.job</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_in_recruitment': 1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click here to create a new job position.
                </p>
                <p>
                    Once a job position is created, you can track the applicants
                    and manage the recruitment process related to the job
                    position.
                </p>
            </field>
        </record>

        <record id="view_employee_expiring_form_inherit" model="ir.ui.view">
            <field name="name">employee.expiring.tree</field>
            <field name="model">list.conducts</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="employee_id"/>
                    <field name="date_completed"/>
                    <field name="program_id"/>
                    <field name="date_expire"/>
                    <field name="emp_job_name"/>
                    <field name="emp_dept_name"/>

                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_employee_expiring">
            <field name="name">Expiring Certificates</field>
            <field name="res_model">list.conducts</field>
<!--             <field name="domain">[("date_expire","&lt;",((context_today() + relativedelta(days=60)).strftime('%Y-%m-%d')) )]</field> -->
            <field name="domain">[("date_expire",">=",((context_today()).strftime('%Y-%m-%d')) )]</field>
            <field name="view_type">tree</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_employee_expiring_form_inherit"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click here to create a new job position.
                </p>
                <p>
                    Once a job position is created, you can track the applicants
                    and manage the recruitment process related to the job
                    position.
                </p>
            </field>
        </record>


        <menuitem id="menu_training_requests_main" name="Training Requests" action="open_hr_training_requests"
                  parent="hr_training_program.menu_training_root" sequence="0"/>
        <menuitem parent="hr_training_program.menu_training_root" id="menu_hr_job_position_config"
                  action="action_hr_job_config" sequence="5"/>
        <menuitem parent="hr_training_program.menu_training_root" id="menu_action_employee_expiring"
                  action="action_employee_expiring" sequence="6"/>

        <!-- Job Candidates -->

        <record id="view_job_candidates_tree" model="ir.ui.view">
            <field name="name">job.candidates.tree</field>
            <field name="model">candidates.training</field>
            <field name="arch" type="xml">
                <tree string="Job Candidates" editable="bottom">
                    <field name="employee"/>
                    <field name="trainings_completed_ids" widget="many2many_tags"/>
                    <field name="trainings_todo_ids" widget="many2many_tags"/>
                    <field name="job_training" string="Job Position"/>
                </tree>
            </field>
        </record>

        <record id="open_job_candidates" model="ir.actions.act_window">
            <field name="name">Job Candidates</field>
            <field name="res_model">candidates.training</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="menu_candiates_main" name="Job Candidates" action="open_job_candidates"
                  parent="hr_training_program.menu_training_root" sequence="2"/>

        <record id="view_training_progress_form" model="ir.ui.view">
            <field name="name">training.progress.form</field>
            <field name="model">training.progress</field>
            <field name="arch" type="xml">
              <form string="Training Progress">
                <sheet>
                  <group>
                    <group>
                      <field name="name"/>
                    </group>
                      <field name="training_progress_line" nolabel="1" widget="one2many_list">
                        <tree>
                          <field name="employee_ids"/>
                          <field name="job_position"/>
                          <field name="department"/>
                        </tree>
                      </field>
                  </group>
                </sheet>
              </form>
            </field>
        </record>
        <record id="view_training_progress_tree" model="ir.ui.view">
            <field name="name">training.progress.tree</field>
            <field name="model">training.progress</field>
            <field name="arch" type="xml">
                <tree string="Training Progress">
                    <field name="name"/>
                </tree>
            </field>
        </record>
        <record id="open_training_progress_form" model="ir.actions.act_window">
            <field name="name">Training on Progress</field>
            <field name="res_model">training.progress</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record id="view_training_progress_pivot_form" model="ir.ui.view">
            <field name="name">training.progress.pivot.view</field>
            <field name="model">list.conducts</field>
            <field name="arch" type="xml">
              <pivot string="Training Progress">
                  <field name="employee_id" type="row"/>
                  <field name="emp_job_name" type="row"/>
                  <field name="emp_dept_name" type="row"/>
                  <field name="program_id" type="col"/>
              </pivot>
            </field>
        </record>
        <record id="open_training_progress" model="ir.actions.act_window">
            <field name="name">Training on Progress</field>
            <field name="res_model">list.conducts</field>
            <field name="view_mode">pivot</field>
        </record>

        <menuitem id="menu_hr_training_progress" name="Training" parent="hr_holidays.menu_hr_holidays_report" sequence="46"/>

        <menuitem
            id="menu_training_progress_menu"
            name="Training on Progress"
            parent="menu_hr_training_progress"
            action="open_training_progress"
            sequence="46"
            />
        <menuitem
            id="menu_training_progress_form_menu"
            name="Training Progress"
            parent="menu_hr_training_progress"
            action="open_training_progress_form"
            sequence="47"
            />
    </data>
</odoo>