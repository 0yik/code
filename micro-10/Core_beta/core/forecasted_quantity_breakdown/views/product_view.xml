<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        
        <record id="view_product_template_view_ne_qty_tree" model="ir.ui.view">
            <field name="name">product.template.tree</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="stock.view_stock_product_template_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='virtual_available']" position="after">
                    <field name="incoming_qty" string="Forecasted Incoming Qty"/>
                    <field name="outgoing_qty" string="Forecasted Outgoing Qty"/>
                </xpath>
            </field>
        </record>

        <record id="view_product_template_ne_qty_form" model="ir.ui.view">
            <field name="name">product.template.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <div name="button_box" position="inside">
                    <button type="object"
                        name="action_open_incoming_shipment"
                        attrs="{'invisible':[('type', '!=', 'product')]}"
                        class="oe_stat_button" icon="fa-building-o">
                        <field name="qty_incoming_dummy"
                            widget="statinfo" string="Incoming Qty"/>
                    </button>
                    <button type="object"
                        name="get_action_outgoing"
                        attrs="{'invisible':[('type', '!=', 'product')]}"
                        class="oe_stat_button" icon="fa-building-o">
                        <field name="qty_outgoing_dummy"
                            widget="statinfo" string="Outgoing Qty"/>
                    </button>
                </div>
            </field>
        </record>

        <record id="view_product_product_ne_qty_button_form" model="ir.ui.view">
            <field name="name">product.product.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <div name="button_box" position="inside">
                    <button type="object"
                        name="action_open_incoming_shipment_product"
                        attrs="{'invisible':[('type', '!=', 'product')]}"
                        class="oe_stat_button" icon="fa-building-o">
                        <field name="qty_incoming_dummy"
                            widget="statinfo" string="Incoming Qty"/>
                    </button>
                    <button type="object"
                        name="get_action_outgoing_product"
                        attrs="{'invisible':[('type', '!=', 'product')]}"
                        class="oe_stat_button" icon="fa-building-o">
                        <field name="qty_outgoing_dummy"
                            widget="statinfo" string="Outgoing Qty"/>
                    </button>
                </div>
            </field>
        </record>

        <record id="view_product_product_view_ne_qty_tree" model="ir.ui.view">
            <field name="name">product.product.tree</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="stock.view_stock_product_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='virtual_available']" position="after">
                    <field name="incoming_qty" string="Forecasted Incoming Qty"/>
                    <field name="outgoing_qty" string="Forecasted Outgoing Qty"/>
                </xpath>
            </field>
        </record>


    </data>
</odoo>
