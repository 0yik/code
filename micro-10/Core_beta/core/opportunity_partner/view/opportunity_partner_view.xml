<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

    <record id="view_res_partner_opportunity_partner" model="ir.ui.view">
        <field name="name">view.res.partner.opportunity.partner</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <field name="user_id" position="before">
                <field name="opportunity_partner"/>
            </field>
        </field>
    </record>

    <record id="crm_case_form_view_oppor_inherit_partner" model="ir.ui.view">
        <field name="name">crm.crm.case.form.view_oppor</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_form_view_oppor"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="attributes">
                <attribute name="context">{'lead_id':active_id, 'default_groups_ref': ['base.group_user', 'base.group_partner_manager', 'sales_team.group_sale_salesman_all_leads'], 'team_id': team_id}</attribute>
            </xpath>
        </field>
    </record>

    </data>
</openerp>