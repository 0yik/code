<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_pos_pos_form_discount" model="ir.ui.view">
        <field name="name">View Pos Pos Form Discount</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
        <field name="arch" type="xml">
            <field name="session_id" position="after">
                <field name="is_promotion" invisible="1"/>
            </field>
            <xpath expr="//header" position="inside">
                <button name="action_pos_order_promo_invoice" string="Promo Invoice" type="object" states="paid"
                        attrs="{'readonly': [('partner_id','=',False)], 'invisible':['|', '|', ('is_promo_invoice','=',True), ('is_promotion', '=', False)]}" />
            </xpath>
            <xpath expr="//button[@name='action_view_invoice']" position="after">
                <field name="is_promo_invoice" invisible="1"/>
                <button name="action_view_promo_invoice" string="Promo Invoice" type="object" class="oe_stat_button" icon="fa-pencil-square-o"
                        attrs="{'invisible':[('is_promo_invoice','=',False)]}"/>
            </xpath>
        </field>
    </record>

    <record id="view_promotion_order_tree" model="ir.ui.view">
        <field name="name">pos.order.tree</field>
        <field name="model">pos.order</field>
        <field name="arch" type="xml">
            <tree string="POS Orders" decoration-info="state == 'draft'" decoration-muted="state in ('done','cancel')" create="0">
                <field name="promotion_id"/>
                <field name="promotion_type"/>
                <field name="payment_id"/>
                <field name="name"/>
                <field name="session_id" />
                <field name="pos_reference"/>
                <field name="date_order"/>
                <field name="amount_total" sum="Amount total" widget="monetary"/>
                <field name="total_discounted_amount"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="action_create_promo_invoice" model="ir.actions.server">
        <field name="name">Create Promo Invoice</field>
        <field name="type">ir.actions.server</field>
        <field name="model_id" ref="model_pos_order"/>
        <field name="state">code</field>
        <field name="code">if records:
                records.action_pos_order_promo_invoice();
        </field>
    </record>

    <record model="ir.values" id="promo_invoice_create_values">
            <field name="model">pos.order</field>
            <field name="multi">True</field>
            <field name="name">Create Promo Invoice</field>
            <field name="key">action</field>
            <field name="key2">client_action_multi</field>
            <field name="value" eval="'ir.actions.server,' + str(ref('action_create_promo_invoice'))" />
        </record>


    <record id="action_pos_promotion_form" model="ir.actions.act_window">
        <field name="name">Promotion Orders</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pos.order</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" eval="view_promotion_order_tree"/>
        <field name="domain">[('is_promotion', '=', True)]</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new promotion order.
            </p><p>
                Use this menu to browse previous promotion orders. To record new promotion
                orders, you may use the menu <i>Your Session</i> for
                the touchscreen interface.
            </p>
        </field>
    </record>

    <menuitem id="menu_promotion_orders" parent="point_of_sale.menu_point_of_sale" action="action_pos_promotion_form" sequence="2" groups="point_of_sale.group_pos_manager,point_of_sale.group_pos_user"/>

</odoo>