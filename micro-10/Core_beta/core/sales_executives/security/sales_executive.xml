<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <record id="group_sale_executive" model="res.groups">
            <field name="name">Sales Executive</field>
            <field name="implied_ids" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
        </record>

        <record id="res_partner_sale_executive" model="ir.rule">
            <field name="name">Customer Rule Sale Executive</field>
            <field ref="base.model_res_partner" name="model_id"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('sales_executives.group_sale_executive'))]"/>
        </record>
    </data>
</odoo>