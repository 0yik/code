<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="giro_bulk_online_payment_form" model="ir.ui.view">
        <field name="name">UOB Bulk Online Payment</field>
        <field name="model">giro.bulk.payment</field>
        <field name="arch" type="xml">
            <form string="Bulk Online Payment">
                <group col="4" colspan="4">
                    <field name="sequence_number"/>
                    <field name="payment_type"/>
                    <field name="service_type"/>
                    <field name="company_id"/>
                    <field name="originating_bic_code"/>
                    <field name="originating_account_name"/>
                    <field name="originating_account_number"/>
                    <field name="creation_date"/>
                    <field name="value_date"/>                    
                    <field name="ultimate_originating_customer"/>
                    <field name="bulk_customer_reference"/>
                    <field name="software_label"/>
                </group>
                <group string="Period">
                    <group>
                        <field name="start_date" attrs="{'required': [('payment_type', '=', 'R')]}"/>
                    </group>
                    <group>
                        <field name="end_date" attrs="{'required': [('payment_type', '=', 'R')]}"/>
                    </group>
                </group>
                <separator string="Vendors" attrs="{'invisible': [('payment_type', '!=', 'P')]}"/>
                <field name="line_ids" attrs="{'invisible': [('payment_type', '!=', 'P')]}">
                    <tree editable="bottom">
                        <field name="partner_id" required="1" domain="[('supplier', '=', True)]" options="{'no_create': True, 'no_open': True}"/>
                        <field name="bank_id" required="1" domain="[('partner_id', '=', partner_id)]" context="{'default_partner_id': partner_id}" options="{'no_create': True, 'no_open': True}"/>
                        <field name="end_to_end_id"/>
                        <field name="purpose_code"/>
                        <field name="remittance_code"/>
                        <field name="ultimate_receiving_customer"/>
                        <field name="customer_reference"/>
                    </tree>
                </field>
                <separator string="Employees" attrs="{'invisible': [('payment_type', '!=', 'R')]}"/>
                <field name="line_ids2" attrs="{'invisible': [('payment_type', '!=', 'R')]}">
                    <tree editable="bottom">
                        <field name="employee_id" required="1" domain="[('bank_account_id', '!=', False)]" options="{'no_create': True, 'no_open': True}"/>
                        <field name="end_to_end_id"/>
                        <field name="purpose_code"/>
                        <field name="remittance_code"/>
                        <field name="ultimate_receiving_customer"/>
                        <field name="customer_reference"/>
                    </tree>
                </field>
                <footer>
                    <button name="generate_text_file" string="Generate File" type="object" class="btn-primary fa fa-download"/>
                    <button special="cancel" string="Cancel" class="oe_link"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_giro_bulk_online_payment_wizard" model="ir.actions.act_window">
        <field name="name">UOB Bulk Online Payment</field>
        <field name="res_model">giro.bulk.payment</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="download_file_wizard" model="ir.ui.view">
        <field name="name">Download UOB Bank File</field>
        <field name="model">giro.bulk.payment</field>
        <field name="priority">50</field>
        <field name="arch" type="xml">
            <form string="File">
                <group>
                    <field name="filename" invisible="1"/>
                    <field name="txt_file" filename="filename"/>
                </group>
                <footer>
                    <button special="cancel" string="Close"/>
                </footer>
            </form>
        </field>
    </record>

    <menuitem id="menu_giro_bulk_online_payment_wizard" action="action_giro_bulk_online_payment_wizard" parent="account.menu_finance_entries" sequence="111"/>

</odoo>