<?xml version="1.0" ?>
<odoo>
    <data>
    <record id="sale_quotation_form_inherit_add_product_workflow" model="ir.ui.view">
        <field name="name">sale.quotation.form.inherit.add.product.workflow</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//notebook/page/field[@name='order_line']/tree/field[@name='product_id']" position="attributes">
                <attribute name="domain">[('state','=','approve')]</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/form//field[@name='product_id']" position="attributes">
                    <attribute name="domain">[('state','=','approve')]</attribute>
            </xpath>
            
        </field>
    </record>
    </data>
</odoo>
