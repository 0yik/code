<?xml version="1.0" ?>
<odoo>
    <data>
        <record id="purchase_order_form_inherit_add_workflow" model="ir.ui.view">
            <field name="name">purchase.order.form.inherit.add.workflow</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form" />
            <field name="arch" type="xml">
                <xpath expr="//notebook/page/field[@name='order_line']/tree/field[@name='product_id']" position="attributes">
                    <attribute name="domain">[('state','=','approve')]</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
