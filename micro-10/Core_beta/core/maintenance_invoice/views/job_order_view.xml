<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="job_order_view_form_inherit" model="ir.ui.view">
            <field name="name">job.order.form</field>
            <field name="model">job.order</field>
            <field name="inherit_id" ref="maintenance_job_order.job_order_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group" position="after">
                    <notebook>
                        <page string="Invoiceable Charges">
                            <field name="invoiceable_charges_ids">
                                <tree editable="bottom">
                                    <field name="product_id" string="Product"/>
                                    <field name="name"/>
                                    <field name="qty"/>
                                    <field name="unit_price"/>
                                    <field name="total" readonly="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </xpath>
            </field>
        </record>


        <record id="maintenance_extended_formview_inherit_customer" model="ir.ui.view">
            <field name="name">maintenance.extended.location.inherited.form</field>
            <field name="model">maintenance.request</field>
            <field name="inherit_id" ref="maintenance.hr_equipment_request_view_form"/>
            <field name="arch" type="xml">
                 <xpath expr="//field[@name='description']" position="before">
                     <notebook>
                        <page string="Invoiceable Charges">
                            <field name="invoiceable_charges_ids">
                                <tree editable="bottom">
                                    <field name="product_id" string="Product"/>
                                    <field name="name"/>
                                    <field name="qty"/>
                                    <field name="unit_price"/>
                                    <field name="total" readonly="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                 </xpath>

                <xpath expr="//button[@name='archive_equipment_request']" position="before">
                    <button string="Create Invoice" name="action_create_invoice" type="object" class="oe_highlight" attrs="{'invisible':[('check_is_invoice_open','=',True)]}"/>
                    <field name="check_is_invoice_open" invisible="1"/>
                </xpath>
            </field>
        </record>

        <record id="maintenance_extended_formview_inherit_kanban_box" model="ir.ui.view">
            <field name="name">maintenance.extended.location.inherited.form</field>
            <field name="model">maintenance.request</field>
            <field name="inherit_id" ref="maintenance_job_order.maintenance_extended_formview_inherit_customer"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_view_job_order']" position="before">
                        <button name="action_view_invoice"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-money"
                            attrs="{'invisible': [('invoice_count', '=', 0)]}">
                            <field name="invoice_count" widget="statinfo" string="Invoices"/>
                            <field name="invoice_ids" invisible="1"/>
                        </button>
                 </xpath>
            </field>
        </record>

        <record id="invoice_charge_view_form" model="ir.ui.view">
            <field name="name">invoice.charge.form</field>
            <field name="model">invoice.charge</field>
            <field name="arch" type="xml">
                <form string="Invoiceable Charges">
                    <sheet>
                        <group>
                            <field name="product_id"/>
                            <field name="name"/>
                            <field name="qty"/>
                            <field name="unit_price"/>
                            <field name="total"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>