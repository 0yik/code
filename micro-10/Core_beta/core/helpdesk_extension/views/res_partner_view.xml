<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="inherited_partner_view_sixcap_modifier">
        <field name="name">partner.view.sixcap.modifier</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="priority" eval="50"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" type="action"
                    attrs="{'invisible': [('customer', '=', False)]}"
                    name="%(helpdesk.helpdesk_ticket_action_main_tree)d"
                    icon="fa-ticket" 
                    context="{'search_default_partner_id': active_id}">
                    <field string="Tickets" name="tickets_count" widget="statinfo"/>
                </button>
            </xpath>
        </field>
    </record>

</odoo>