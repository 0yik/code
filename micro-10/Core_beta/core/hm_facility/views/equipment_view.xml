<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="equipment_formview_rename_inherit" model="ir.ui.view">
            <field name="name">maintenance.equipment.inherited.facilityform</field>
            <field name="model">maintenance.equipment</field>
            <field name="inherit_id" ref="maintenance.hr_equipment_view_form"/>
            <field name="priority" eval="18" />
            <field name="arch" type="xml">
                <xpath expr="//form" position="attributes">
                    <attribute name="name">Facility</attribute>
                </xpath>
                <field name="name" position="attributes">
                    <attribute name="string">Facility Name</attribute>
                    <attribute name="placeholder">Facility Name</attribute>
                </field>
                <field name="category_id" position="attributes">
                    <attribute name="string">Facility Category</attribute>
                    <attribute name="options">{'no_open': 0}</attribute>
                </field>
                <field name="location" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <field name="location" position="after">
                    <field name="location_id"/>
                </field>
            </field>
        </record>

        <menuitem  id="maintenance.menu_equipment_form" name="Facility" parent="maintenance.menu_maintenance_title" action="maintenance.hr_equipment_action" groups="maintenance.group_equipment_manager,base.group_user" sequence="2"/>

    </data>
</odoo>
