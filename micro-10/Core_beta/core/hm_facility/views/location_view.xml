<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

    <!-- Location Form View -->

    <record id="view_create_location_form"  model="ir.ui.view">
        <field name="name">location.create.form</field>
        <field name="model">location</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
             <form string="Location">
                <header>

                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_facility"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-pencil-square-o"
                            attrs="{'invisible': [('facility_count', '=', 0)]}">
                            <field name="facility_count" widget="statinfo" string="Facility"/>
                            <field name="facility_ids" invisible="1"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label name="Name" string="Name"/>
                        <h1>
                            <field name="name" required="1"/>

                        </h1>
                   </div>
                    <group>
                        <field name="parent_id" />
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>
        <!-- Location Tree View  -->

    <record model="ir.ui.view" id="view_location_create_tree">
        <field name="name">location.create.Tree</field>
        <field name="model">location</field>
        <field name="arch" type="xml">
            <tree string="Location">
                <field name="display_name" string="Name"/>
            </tree>
        </field>
    </record>

    <!-- Location Search View  -->
    <record id="view_location_create_search" model="ir.ui.view">
        <field name="name">location.create.Search</field>
        <field name="model">location</field>
        <field name="arch" type="xml">
            <search string="Location">
                 <field name="name" string="Name" filter_domain="[('name','ilike',self)]"/>
            </search>
        </field>
    </record>


     <record id="action_location_create" model="ir.actions.act_window">
        <field name="name">Location</field>
        <field name="res_model">location</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            Click to add Location.
          </p>
        </field>
    </record>

    <menuitem
        id="maintenance.menu_maintenance_configuration"
        name="Configuration"
        parent="maintenance.menu_maintenance_title"
        sequence="100"/>

     <!-- <menuitem id="menu_maintenance_configuration_form" name="Configuration" parent="maintenance.menu_maintenance_title"
                   groups="maintenance.group_equipment_manager,base.group_user" sequence="2"/> -->
     <menuitem id="menu_location_form" name="Location" parent="maintenance.menu_maintenance_configuration" action="hm_facility.action_location_create"
                   groups="maintenance.group_equipment_manager,base.group_user" sequence="2"/>
        <menuitem id="maintenance.menu_maintenance_cat" name="Facility Category" parent="maintenance.menu_maintenance_configuration"
                  action="maintenance.hr_equipment_category_action"
                   groups="maintenance.group_equipment_manager,base.group_user" sequence="2"/>

    </data>
</odoo>



