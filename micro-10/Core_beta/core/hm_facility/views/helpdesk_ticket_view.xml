<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="helpdesk_ticket_location_form_view_inherit" model="ir.ui.view">
            <field name="name">helpdesk.ticket.location.inherited.form</field>
            <field name="model">helpdesk.ticket</field>
            <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form"/>
            <field name="arch" type="xml">
                <field name="user_id" position="after">
                    <field name="location_id"/>
                    <field name="facility_id" domain="[('location_id','=',location_id)]"/>
                </field>
            </field>
        </record>

    </data>
</odoo>
