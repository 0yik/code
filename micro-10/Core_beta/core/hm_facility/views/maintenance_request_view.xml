<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="helpdesk_ticket_formview_inherit" model="ir.ui.view">
            <field name="name">maintenance.request.location.inherited.form</field>
            <field name="model">maintenance.request</field>
            <field name="inherit_id" ref="maintenance.hr_equipment_request_view_form"/> 
            <field name="arch" type="xml">
                 <field name="equipment_id" position="before">
                    <field name="location_id"/>
                 </field>
                 <field name="equipment_id" position="attributes">
                    <attribute name="string">Facility</attribute>
                    <attribute name="domain">[('location_id','=',location_id)]</attribute>
                    <attribute name="context">{}</attribute>
                 </field>
            </field>
        </record>

         <record id="maintenance.hr_equipment_action" model="ir.actions.act_window">
            <field name="name">Facility</field>
            <field name="res_model">maintenance.equipment</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="view_id" ref="maintenance.hr_equipment_view_kanban"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add a new equipment.
                </p><p>
                    This application helps you to track equipments used by employees.
                    Create some laptop, printer or phone and link each equipment to
                    an employee or departement. You will manage allocations, issues
                    and maintenance of equipment.
                </p>
            </field>
        </record>


    </data>
</odoo>
