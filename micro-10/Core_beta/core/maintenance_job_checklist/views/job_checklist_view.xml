<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="job_checklist_view_form" model="ir.ui.view">
            <field name="name">job.checklist.form</field>
            <field name="model">job.checklist</field>
            <field name="arch" type="xml">
                <form string="Job Checklist">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="active"/>
                        </group>
                        <separator string="Checklist" />
                        <field name="check_list_description_ids">
                            <tree editable="bottom">
                                <field name="name"/>
                            </tree>
                        </field>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="job_checklist_view_tree" model="ir.ui.view">
            <field name="name">job.checklist.tree</field>
            <field name="model">job.checklist</field>
            <field name="arch" type="xml">
                <tree string="Job Checklist" >
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="action_maintenance_job_checklist" model="ir.actions.act_window">
            <field name="name">Job Checklist</field>
            <field name="res_model">job.checklist</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                </p>
            </field>
        </record>

        <menuitem
        id="menu_maintenance_job_checklist"
        name="Job Checklist"
        parent="maintenance.menu_maintenance_configuration"
        action="action_maintenance_job_checklist"
        groups="maintenance.group_equipment_manager"
        sequence="1"/>

        <record id="maintenance_extended_formview_inherit_customer" model="ir.ui.view">
            <field name="name">maintenance.extended.location.inherited.form</field>
            <field name="model">maintenance.request</field>
            <field name="inherit_id" ref="maintenance.hr_equipment_request_view_form"/>
            <field name="arch" type="xml">
                 <field name="owner_user_id" position="after">
                     <field name="job_checklist_id"/>
                 </field>
            </field>
        </record>

        <record id="job_order_view_form_inherit_inherit" model="ir.ui.view">
            <field name="name">job.order.form</field>
            <field name="model">job.order</field>
            <field name="inherit_id" ref="maintenance_invoice.job_order_view_form_inherit"/>
            <field name="arch" type="xml">
                <xpath expr="//page" position="after">
                        <page string="Checklist">
                            <field name="job_order_checklist_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="checked_by" context="{'maintenance_id': parent.maintenance_id}" options="{'no_create_edit': True,'no_create': True,'no_open': True}"/>
                                    <field name="done"/>
                                    <field name="remark"/>
                                </tree>
                            </field>
                        </page>
                </xpath>
            </field>
        </record>
        <record id="job_order_view_form_checklist_inherit" model="ir.ui.view">
                    <field name="name">job.order.form</field>
                    <field name="model">job.order</field>
                    <field name="inherit_id" ref="maintenance_job_order.job_order_view_form"/>
                    <field name="arch" type="xml">
                        <field name="responsible_id" position="after">
                            <field name="job_checklist_id"/>
                        </field>
                    </field>
                </record>

    </data>
</odoo>