<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_category_property_form_inherit_ad" model="ir.ui.view">
        <field name="name">product.category.property.form.inherit.ad</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="account.view_category_property_form"/>
        <field name="arch" type="xml">

            <field name="property_account_expense_categ_id" position="after">
                <field name="analytic_account_id" attrs="{'invisible':[('check_analytic_account', '=', False)]}"/>
                <field name="check_analytic_account" invisible="1"/>
            </field>

        </field>
    </record>

    <record id="view_move_picking_tree_ad_inherit" model="ir.ui.view">
        <field name="name">stock.move.tree.ad.inherit</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_move_picking_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="editable"/>
            </xpath>
            <field name="location_id" position="after">
                <field name="check_analytic_account" invisible="1"/>
                <field name="check_distribution" invisible="1"/>
            </field>

        </field>
    </record>

    <record id="view_move_picking_form_ad_inherit" model="ir.ui.view">
        <field name="name">stock.move.form.ad.inherit</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_move_picking_form"/>
        <field name="arch" type="xml">

            <xpath expr="//form//group[1]" position="after">
                <field name="check_analytic_account" invisible="1"/>
                <field name="check_distribution" invisible="1"/>

                <notebook>
                    <page string="Analytic Distribution" attrs="{'invisible':[('check_distribution','=', False)]}">
                    <field name="analytic_distribution_id">
                        <tree string="Analytic Distribution" editable="bottom">
                            <field name="rate"/>
                            <field name="analytic_level_id"/>
                            <field name="analytic_account_id" domain="[('level_id', '=', analytic_level_id)]"/>
                        </tree>
                    </field>
                </page>
                </notebook>
            </xpath>

        </field>
    </record>

    <record id="view_move_picking_form_inherit" model="ir.ui.view">
        <field name="name">stock.move.picking.form.inherit</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock_analytic.view_move_picking_form"/>
        <field name="arch" type="xml">
            <field name="analytic_account_id" position="replace">
                <field name="analytic_account_id" attrs="{'invisible':['|',('check_distribution','!=', False),('check_analytic_account','=',False)]}"/>
            </field>
        </field>
    </record>

    <record id="view_move_form" model="ir.ui.view">
        <field name="name">stock.move.form</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock_analytic.view_move_form"/>
        <field name="arch" type="xml">

            <xpath expr="//form//sheet//group[1]" position="after">
                <field name="check_analytic_account" invisible="1"/>
                <field name="check_distribution" invisible="1"/>

                <notebook>
                    <page string="Analytic Distribution" attrs="{'invisible':[('check_distribution','=', False)]}">
                    <field name="analytic_distribution_id">
                        <tree string="Analytic Distribution" editable="bottom">
                            <field name="rate"/>
                            <field name="analytic_level_id"/>
                            <field name="analytic_account_id" domain="[('level_id', '=', analytic_level_id)]"/>
                        </tree>
                    </field>
                </page>
                </notebook>
            </xpath>

        </field>
    </record>

</odoo>