<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_pos_order_form_aa_inherit" model="ir.ui.view">
        <field name="name">pos.order.aa.inherit</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="pos_analytic_by_config.view_pos_order_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='lines']/form/group[1]" position="after">
                <field name="check_analytic_account" invisible="1" />
                <field name="check_distribution" invisible="1" />
                <notebook>
                    <page string="Analytic Distribution" attrs="{'invisible':[('check_distribution','=', False)]}">
                        <field name="analytic_distribution_id" >
                            <tree string="Analytic Distribution" editable="bottom">
                                <field name="rate"/>
                                <field name="analytic_level_id"/>
                                <field name="analytic_account_id"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </xpath>

        </field>
    </record>

    <record id="view_pos_config_form_aa_inherit" model="ir.ui.view">
        <field name="name">pos.config.form.view.aa.inherit</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="pos_analytic_by_config.view_pos_config_form"/>
        <field name="arch" type="xml">

            <field name="account_analytic_id" position="replace">
                <field name="account_analytic_id" attrs="{'invisible':['|',('check_distribution','!=', False),('check_analytic_account','=',False)]}"/>
            </field>

            <xpath expr="//form//sheet//group[1]" position="after">
                <field name="check_analytic_account" invisible="1" />
                <field name="check_distribution" invisible="1" />
                <separator string="Analytic Distribution" colspan="4" attrs="{'invisible':[('check_distribution','=', False)]}"/>
                <field name="analytic_distribution_id" attrs="{'invisible':[('check_distribution','=', False)]}">
                    <tree string="Analytic Distribution" editable="bottom">
                        <field name="rate"/>
                        <field name="analytic_level_id"/>
                        <field name="analytic_account_id" domain="[('level_id', '=', analytic_level_id)]"/>
                    </tree>
                </field>
            </xpath>

        </field>
    </record>

</odoo>