<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="view_order_form_inherit3">
        <field name="name">sale.order.form.inherit2</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="so_analytic.view_order_form_inherit2"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='order_line']/tree" position="attributes">
                <attribute name="editable"/>
            </xpath>

            <xpath expr="//field[@name='order_line']//form//group" position="after">
                <field name="analytic_distribution_id" attrs="{'invisible':[('check_distribution','=', False)]}">
                    <tree string="Analytic Distribution" editable="bottom">
                        <field name="rate"/>
                        <field name="analytic_level_id"/>
                        <field name="analytic_account_id" domain="[('level_id', '=', analytic_level_id)]"/>
                    </tree>
                </field>
            </xpath>

            <xpath expr="//field[@name='order_line']//tree//field[@name='tax_id']" position="after">
                <field name="check_distribution" invisible="1"/>
                <field name="check_analytic_account" invisible="1"/>
            </xpath>

            <xpath expr="//field[@name='order_line']//form//field[@name='tax_id']" position="after">
                <field name="check_distribution" invisible="1"/>
                <field name="check_analytic_account" invisible="1"/>
            </xpath>

            <xpath expr="//field[@name='order_line']//tree//field[@name='account_analytic_id']" position="replace">
                <field name="account_analytic_id" attrs="{'invisible':['|',('check_distribution','!=', False),('check_analytic_account','=',False)]}"/>
            </xpath>

            <xpath expr="//field[@name='order_line']//form//field[@name='account_analytic_id']" position="replace"/>
            <xpath expr="//field[@name='order_line']/form//field[@name='tax_id']" position="before">
                <field name="account_analytic_id" attrs="{'invisible':['|',('check_distribution','!=', False),('check_analytic_account','=',False)]}"/>
            </xpath>

        </field>
    </record>


</odoo>