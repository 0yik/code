<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_account_config_analytic_inherit" model="ir.ui.view">
        <field name="name">analytic account settings</field>
        <field name="model">account.config.settings</field>
        <field name="inherit_id" ref="purchase.view_account_config"/>
        <field name="arch" type="xml">

            <xpath expr="//group[@name='analytic_account_purchase']//div[1]" position="inside">
                <label for="" style="display:block"/>
                <field name="group_analytic_distribution_for_purchases" class="oe_inline"/>
                <label for="group_analytic_distribution_for_purchases" />
            </xpath>

            <xpath expr="//group[@name='analytic_account_purchase']" position="after">
                <group name="analytic_account_inventory">
                    <label for="id" string="Inventory"/>
                    <div>
                        <field name="group_analytic_account_for_inventory" class="oe_inline"/>
                        <label for="group_analytic_account_for_inventory"/>
                        <label for="" style="display:block"/>
                        <field name="group_analytic_distribution_for_inventory" class="oe_inline"/>
                        <label for="group_analytic_distribution_for_inventory" />
                    </div>
                </group>

                <group name="analytic_account_human_resource">
                    <label for="id" string="Human Resource"/>
                    <div>
                        <field name="group_analytic_account_for_human_resource" class="oe_inline"/>
                        <label for="group_analytic_account_for_human_resource"/>
                        <label for="" style="display:block"/>
                        <field name="group_analytic_distribution_for_human_resource" class="oe_inline"/>
                        <label for="group_analytic_distribution_for_human_resource" />
                    </div>
                </group>

                <group name="analytic_account_companies">
                    <label for="id" string="Companies"/>
                    <div>
                        <field name="group_analytic_account_for_companies" class="oe_inline"/>
                        <label for="group_analytic_account_for_companies"/>
                        <label for="" style="display:block"/>
                        <field name="group_analytic_distribution_for_companies" class="oe_inline"/>
                        <label for="group_analytic_distribution_for_companies" />
                    </div>
                </group>

                <group name="analytic_account_branches">
                    <label for="id" string="Branches"/>
                    <div>
                        <field name="group_analytic_account_for_branches" class="oe_inline"/>
                        <label for="group_analytic_account_for_branches"/>
                        <label for="" style="display:block"/>
                        <field name="group_analytic_distribution_for_branches" class="oe_inline"/>
                        <label for="group_analytic_distribution_for_branches" />
                    </div>
                </group>

                <group name="analytic_account_project">
                    <label for="id" string="Project"/>
                    <div>
                        <field name="group_analytic_distribution_for_project" class="oe_inline"/>
                        <label for="group_analytic_distribution_for_project" />
                    </div>
                </group>

            </xpath>

        </field>
    </record>

    <record id="view_account_config_inherit_distribution" model="ir.ui.view">
        <field name="name">account settings</field>
        <field name="model">account.config.settings</field>
        <field name="inherit_id" ref="so_analytic.view_account_config"/>
        <field name="arch" type="xml">

            <xpath expr="//group[@name='analytic_account_sale']//div[1]" position="inside">
                <label for="" style="display:block"/>
                <field name="group_analytic_distribution_for_sale" class="oe_inline"/>
                <label for="group_analytic_distribution_for_sale"/>
            </xpath>

        </field>
    </record>

    <record id="view_account_config" model="ir.ui.view">
        <field name="name">account settings</field>
        <field name="model">account.config.settings</field>
        <field name="inherit_id" ref="pos_analytic_by_config.view_account_config"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='analytic_account_pos']//div[1]" position="inside">
                <label for="" style="display:block"/>
                <field name="group_analytic_distribution_for_pos" class="oe_inline"/>
                <label for="group_analytic_distribution_for_pos" />
            </xpath>

        </field>
    </record>


</odoo>
