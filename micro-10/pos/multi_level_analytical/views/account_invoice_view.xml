<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="invoice_supplier_form_analytical_inherit" model="ir.ui.view">
        <field name="name">account.invoice.supplier.form.analytical.inherit</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_supplier_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='invoice_line_ids']/tree" position="attributes">
                <attribute name="editable"/>
            </xpath>

            <xpath expr="//field[@name='invoice_line_ids']/tree" position="after">
                <form>
                    <group>
                        <group>
                           <field name="product_id"
                                        context="{'partner_id': parent.partner_id}"/>
                            <field name="name"/>
                            <field name="company_id" invisible="1"/>
                            <field name="account_id" groups="account.group_account_user"
                                        domain="[('company_id', '=', parent.company_id), ('internal_type', '=', 'other'), ('deprecated', '=', False)]"/>
                            <field name="account_analytic_id" groups="analytic.group_analytic_accounting"
                                        domain="[('company_id', '=', parent.company_id)]" attrs="{'invisible':['|',('check_distribution_purchase','!=', False),('check_analytic_account_purchase','=',False)]}"/>
                            <field name="check_analytic_account_purchase" invisible="1"/>
                            <field name="check_distribution_purchase" invisible="1"/>
                            <field name="check_analytic_account" invisible="1"/>
                            <field name="analytic_tag_ids" groups="analytic.group_analytic_accounting" widget="many2many_tags"/>
                            <field name="quantity"/>
                            <field name="uom_id" groups="product.group_uom"/>
                        </group>
                        <group>
                            <field name="price_unit"/>
                            <field name="discount" groups="base.group_no_one"/>
                            <field name="invoice_line_tax_ids" widget="many2many_tags" context="{'type':parent.type}"
                                domain="[('type_tax_use','=','purchase'),('company_id', '=', parent.company_id)]" options="{'no_create': True}"/>
                            <field name="price_subtotal"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Analytic Distribution" attrs="{'invisible':[('check_analytic_account','=', False)]}">
                            <field name="analytic_distribution_id" >
                                <tree string="Analytic Distribution" editable="bottom" >
                                    <field name="rate"/>
                                    <field name="analytic_level_id"/>
                                    <field name="analytic_account_id" domain="[('level_id', '=', analytic_level_id)]"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </form>
            </xpath>

        </field>
    </record>

    <record id="invoice_form_inherit_distribution" model="ir.ui.view">
        <field name="name">account.invoice.form.inherit.distribution</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">

             <xpath expr="//field[@name='invoice_line_ids']/tree" position="attributes">
                <attribute name="editable"/>
            </xpath>

            <xpath expr="//field[@name='invoice_line_ids']/tree" position="after">
                <form>
                    <group>
                        <group>
                           <field name="product_id"
                                        context="{'partner_id': parent.partner_id}"/>
                            <field name="name"/>
                            <field name="company_id" invisible="1"/>
                            <field name="account_id" groups="account.group_account_user"
                                        domain="[('company_id', '=', parent.company_id), ('internal_type', '=', 'other'), ('deprecated', '=', False)]"/>
                            <field name="account_analytic_id" groups="analytic.group_analytic_accounting"
                                        domain="[('company_id', '=', parent.company_id)]" attrs="{'invisible':['|',('check_distribution_sale','!=', False),('check_analytic_account','=',False)]}"/>
                            <field name="check_analytic_account_sale" invisible="1"/>
                            <field name="check_distribution_sale" invisible="1"/>
                            <field name="check_analytic_account" invisible="1"/>
                            <field name="analytic_tag_ids" groups="analytic.group_analytic_accounting" widget="many2many_tags"/>
                            <field name="quantity"/>
                            <field name="uom_id" groups="product.group_uom"/>
                        </group>
                        <group>
                            <field name="price_unit"/>
                            <field name="discount" groups="base.group_no_one"/>
                            <field name="invoice_line_tax_ids" widget="many2many_tags" context="{'type':parent.type}"
                                domain="[('type_tax_use','=','purchase'),('company_id', '=', parent.company_id)]" options="{'no_create': True}"/>
                            <field name="price_subtotal"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Analytic Distribution" attrs="{'invisible' : [('check_analytic_account', '=', False)]}">
                            <field name="analytic_distribution_id">
                                <tree string="Analytic Distribution" editable="bottom">
                                    <field name="rate"/>
                                    <field name="analytic_level_id"/>
                                    <field name="analytic_account_id" domain="[('level_id', '=', analytic_level_id)]"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </form>
            </xpath>


        </field>
    </record>

</odoo>






