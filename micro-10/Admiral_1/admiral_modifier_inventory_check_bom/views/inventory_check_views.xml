<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_inventory_check_tree_inherit" model="ir.ui.view">
            <field name="name">inventory.check.tree</field>
            <field name="model">inventory.check</field>
            <field name="inherit_id" ref="inventory_check.view_inventory_check_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree/field[@name='last_purchase_price']" position="replace">
                    <field name="cost_price"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
