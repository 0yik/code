<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="mrp_workcenter_form_inherit">
            <field name="name">mrp.workcenter.form.inherit</field>
            <field name="model">mrp.workcenter</field>
            <field name="inherit_id" ref="mrp.mrp_workcenter_view"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/notebook/page/group/group/label[@for='time_start']" position="before">
                    <label for="uom_id"/>
                    <div class="o_row">
                        <field name="uom_id"/>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>