<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_package">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="o">
                        <div class="page">
                        	<t t-set="pack_opration" t-value="o.pack_opration"/>
                        	<t t-foreach="pack_opration" t-as="pack_label">
		                    	<t t-foreach="pack_label.no_of_labels" t-as="n">
				                	<div>
										<img t-att-src="'data:image/png;base64,%s' % pack_label.barcode('Code128',pack_label.lot_custom_number.display_name)" style="width:300px;height:50px;margin-left:5em;"/><br/>
				            			<span style="padding-left:7em;" t-field="pack_label.custom_product_id.name"/><br/>
				            			<t t-if="pack_label.lot_custom_number"><span style="padding-left:7em;" t-field="pack_label.lot_custom_number"/><br/></t>
				            			<t t-if="pack_label.lot_date"><span style="padding-left:7em;" t-field="pack_label.lot_date" t-field-options='{"format": "dd/MM/yyyy"}'/><br/></t>
				            			<span style="padding-left:7em;" t-field="pack_label.do_quantity"/>
				        			</div>
				        			<p style="page-break-before:always;"> </p>
				        		</t>
				        	</t>
                        </div>
                 </t>
             </t>
        </template>
    </data>
</odoo>
