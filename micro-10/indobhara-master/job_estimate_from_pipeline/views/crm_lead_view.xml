<odoo>
    <record id="job_estimation_action_new" model="ir.actions.act_window">
        <field name="name">Quotation</field>
        <field name="res_model">sale.estimate.job</field>
        <field name="view_mode">form,tree,graph</field>
        <field name="domain">[('opportunity_id', '=', active_id)]</field>
        <field name="context">{'search_default_opportunity_id': active_id, 'default_opportunity_id': active_id}</field>
    </record>
	
	
	<record id="act_job_estimation_action_list" model="ir.actions.act_window">
        <field name="res_model">sale.estimate.job</field>
        <field name="name">Job Estimations</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_lead_id': [active_id], 'default_lead_id': active_id}</field>
    </record>
	
	<record id="view_sale_estimate_form_job_inherit" model="ir.ui.view">
        <field name="name">view.sale.estimate.form.job.inherit</field>
        <field name="model">sale.estimate.job</field>
        <field name="inherit_id" ref="job_cost_estimate_customer.view_sale_estimate_form_job"/>
        <field name="arch" type="xml">
        	<field name="job_type_ids" position="after">
        		<field name="lead_id" invisible='1'/>
        	</field>
        </field>
    </record>
    
    <record id="view_sale_estimate_search_job_inherit" model="ir.ui.view">
        <field name="name">view.sale.estimate.search.job.inherit</field>
        <field name="model">sale.estimate.job</field>
        <field name="inherit_id" ref="job_cost_estimate_customer.sale_estimate_search_view_job"/>
        <field name="arch" type="xml">
        	<field name="state" position="after">
        		<field name="lead_id" invisible='1'/>
        	</field>
        	<xpath expr="//group" position="inside">
        		<filter string="Lead" context="{'group_by':'lead_id'}"/>
        	</xpath>
        </field>
    </record>
    
    <record id="view_crm_lead_form_inherit" model="ir.ui.view">
        <field name="name">crm.lead.inherit</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_form_view_oppor"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_set_won']" position="before">
                <button string="New Job Estimate" name="%(job_estimation_action_new)d" type="action" class="oe_highlight"
                    context="{'search_default_partner_id': partner_id,
                                      'default_partner_id': partner_id,
                                      'default_team_id': team_id,
                                      'default_lead_id':id}"/>
            </xpath>
            <xpath expr="//div[@class='oe_button_box']" position="inside">
            	<button name="%(act_job_estimation_action_list)d"
                     class="oe_stat_button"
                     icon="fa-pencil-square-o"
                     type="action"
                     >
                    <field name="job_cost_count" widget="statinfo" string="Job Estimates"/>
                 </button>
            </xpath>
        </field>
    </record>

</odoo>