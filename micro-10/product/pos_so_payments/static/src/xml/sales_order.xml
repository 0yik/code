<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="ListSaleOrderScreenWidget">
	    <div class="salesorderlist-screen clientlist-screen screen">
            <div class="screen-content">
                <section class="top-content">
                    <span class='button back'>
                        <i class='fa fa-angle-double-left'></i>
                        Cancel
                    </span>
                    <span class='searchbox'>
                        <input placeholder='Search Sales Order' />
                        <span class='search-clear'></span>
                    </span>
                    <span class='searchbox'></span>
                    <span class='button next oe_hidden highlight'>
                        Select Customer
                        <i class='fa fa-angle-double-right'></i>
                    </span>
					<span class='button next'>
                        Payment
                        <i class='fa fa-angle-double-right'></i>
                    </span>
                </section>
                <section class="full-content">
                    <div class='window'>
                        <section class='subwindow collapsed'>
                            <div class='subwindow-container collapsed'>
                                <div class='subwindow-container-fix client-details-contents'>
                                </div>
                            </div>
                        </section>
                        <section class='subwindow'>
                            <div class='subwindow-container'>
                                <div class='subwindow-container-fix touch-scrollable scrollable-y'>
                                    <table class='salesorder-list'>
                                        <thead>
                                            <tr>
                                                <th>Order Number</th>
                                                <th>Order Date</th>
                                                <th>Customer</th>
                                                <th>SalesPerson</th>
                                                <th>Total</th>
                                                <th>Category</th>
                                            </tr>
                                        </thead>
                                        <tbody class='saleorder-list-contents'>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </section>
                    </div>
                </section>
            </div>
        </div>
    </t>

    <t t-name="SaleorderListLine">
        <tr class='saleorder-line' t-att-data-id='item.id'>
            <td><t t-esc='item.name'/></td>
            <td><t t-esc='item.confirmation_date' /></td>
            <td><t t-esc='item.partner_id[1]' /></td>
            <td><t t-esc='item.user_id[1]' /></td>
            <td><t t-esc='widget.format_currency(item.amount_total)' /></td>
            <td><t t-esc='widget.format_currency(item.amount_total)'/></td>
            <td><t t-esc='item.category'/></td>
        </tr>
    </t>

    <t t-name="ListSOButton">
        <button class="control-button so_payment_btn">
            <i class="pe-7s-back-2"></i>
            SO Payment
        </button>
    </t>

    <t t-name="DeliveryManPopupWidget">
	    <div class="modal-dialog options-dialog" style="background-color: rgba(0,0,0,0.5) !important;">
	        <div class="popup popup-options" style="background-color: #F0EEEE !important;">
	            <p class="title" style="background: rgba(255,255,255,0.5) !important;
    color: #ab460b !important;"><t t-esc=" widget.options.title || '' " /></p>
				<div class='popup-option once' style="text-align: center; margin: 100px;">
                    <select class="o_form_input form-control deliver_list" style="width: 100%">
                        <t t-foreach="widget.deliver_list" t-as="deliver">
                            <option t-att-value="deliver.id"><t t-esc="deliver.name"/></option>
                        </t>
                    </select>
				</div>
                <div class="footer centered">
                    <div class="button cancel">
                        Cancel
                    </div>
                    <div class="button confirm">
                        Ok
                    </div>
                </div>
	        </div>
	    </div>
    </t>

    <t t-name="PaymentSOScreenWidget">
        <div class='payment-screen screen'>
            <div class='screen-content'>
                <div class='top-content'>
                    <span class='button back'>
                        <i class='fa fa-angle-double-left'></i>
                        Back
                    </span>
                    <h1>Payment</h1>
                    <span class='button next'>
                        Validate
                        <i class='fa fa-angle-double-right'></i>
                    </span>
                </div>
                <div class='left-content pc40 touch-scrollable scrollable-y'>
                    <div class='payment_info'>
                        <div class="payment_journal">
                            <label for="payment_jourrnal">Payment Method</label>
                            <select class="o_form_input form-control payment_journal" style="width: 100%">
                                <t t-foreach="widget.pos.journals" t-as="journal">
                                    <option t-att-value="journal.id"><t t-esc="journal.type"/></option>
                                </t>
                            </select>
                        </div>
                        <div class='payment_date'>
                            <label for="payment_date">Payment Date</label>
                             <input type="date" name="date" style="width: 100%"/>
                         </div>
                    </div>
                </div>
                <div class='right-content pc60 touch-scrollable scrollable-y'>
                     <div class='order_amount'>
                         <span><t t-esc="widget.format_currency(0)"/></span>
                     </div>

                    <div class='payment_input' >
                        <label for="payment_amount">Payment Amount</label>
                        <input type="text" name="amount" disabled=""/>
                     </div>
                    <section class='payment-numpad' style="margin: 15px;">
                    </section>
                 </div>
             </div>
         </div>
     </t>

</templates>