<?xml version="1.0" encoding="UTF-8"?>
<template id="template" xml:space="preserve">
    <t t-extend="NumpadWidget">
        <t t-jquery=".numpad" t-operation="replace">
            <div class="numpad numpad-change">
                <button class="input-button number-char">1</button>
                <button class="input-button number-char">2</button>
                <button class="input-button number-char">3</button>
                <button class="input-button number-char">4</button>
                <button class="input-button number-char">5</button>
                <button class="input-button number-char">6</button>
                <button class="input-button number-char">7</button>
                <button class="input-button number-char">8</button>
                <button class="input-button number-char">9</button>
                <button class="input-button number-char">0</button>
                <br/>
                <button class="mode-button qty_change" data-mode='quantity'>Qty</button>
                <button class="mode-button disc_change" data-mode='discount' style="display:none">Disc</button>
                <button class="mode-button price_change" data-mode='price'>Price</button>
                <button class="input-button numpad-minus" style="display:none">+/-</button>
                <button class="input-button number-char">.</button>
                <button class="input-button numpad-backspace">
                    <img style="pointer-events: none;" src="/point_of_sale/static/src/img/backspace.png" width="24" height="21" />
                </button>
            </div>
        </t>
    </t>


    <!--remove all order button-->
    <t t-extend="ActionpadWidget">
		<t t-jquery="#all_orders" t-operation="replace">

		</t>
	</t>



    <t t-extend="ProductScreenWidget" >
        <!--<t t-jquery='.product-screen' t-operation='replace'>-->
        <t t-jquery=".centerpane" t-operation="replace">
        </t>
        <t t-jquery=".leftpane" t-operation="replace">
            <t t-if="widget.pos.config.new_interface">
                <div class="leftpane leftpanes">
                    <div class='window'>
                        <div class='subwindow collapsed'>
                            <table class="layout-table l-table" border="1">
                                <tbody>
                                    <tr class="header-row">
                                        <td>
                                            <b>Branch :   </b><t t-esc="widget.pos.config.branch_id[1]" />
                                        </td>
                                        <td colspan="2">
                                            <t t-esc="widget.pos.current_date"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <b>User :   </b><t t-esc="widget.gui.pos.cashier.name"/>
                                        </td>
                                        <td>
                                            <b>Time :</b>
                                        </td>
                                        <td>
                                            <t t-esc="widget.pos.current_time"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>?</td>
                                        <td>
                                            <b>Bill No:</b>
                                        </td>
                                        <td></td>
                                    </tr>
                                    <tr>
                                        <td><b>Online</b></td>
                                        <td>
                                            <b>Total Qty:</b>
                                        </td>
                                        <td>
                                            <div class="total-amount">
                                                <span class="value">0.00 â‚¬</span>
                                            </div>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class='subwindow'>
                            <div class='subwindow-container'>
                                <div class='subwindow-container-fix'>
                                    <div class="placeholder-OrderWidget"></div>
                                </div>
                            </div>
                        </div>

                        <div class='subwindow collapsed'>
                            <div class='subwindow-container'>
                                <div class="control-buttons oe_hidden"></div>
                                <div class="placeholder-ActionpadWidget"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
            <t t-if="!widget.pos.config.new_interface">
                <div class="leftpane">
                    <div class='window'>
                        <div class='subwindow'>
                            <div class='subwindow-container'>
                                <div class='subwindow-container-fix'>
                                    <div class="placeholder-OrderWidget"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <t t-jquery=".leftpane" t-operation="after">
                    <div class="centerpane">
                        <div class='subwindow collapsed'>
                            <div class='subwindow-container'>
                                <div class='subwindow-container-fix pads'>
                                    <div class="control-buttons oe_hidden"></div>
                                    <div class="placeholder-ActionpadWidget"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
        <t t-jquery=".rightpane" t-operation="replace">
            <t t-if="widget.pos.config.new_interface">
                <div class="rightpane rightpanes">
                    <table class="layout-table">

                        <tr class="header-row">
                            <td class="header-cell">
                                <span class="placeholder-ProductCategoriesWidget" />
                            </td>
                        </tr>

                        <tr class="content-row">
                            <td class="content-cell">
                                <div class="content-container">
                                    <span class="placeholder-ProductListWidget" />
                                </div>
                            </td>
                        </tr>

                        <tr class="content-row">
                            <td class="content-cell">
                                <!--<div class="placeholder-ActionpadWidget"></div>-->
                                <span class="control-button" id="all_orders" style="width: 384px;margin-right: 5px;margin-top: 3px;margin-bottom: -7px;">
                                    All Orders
                                </span>
                                <div class="placeholder-NumpadWidget"></div>
                            </td>
                        </tr>

                    </table>
                </div>
            </t>
            <t t-if="!widget.pos.config.new_interface">
                <div class="rightpane">
                    <table class="layout-table">
                        <tr class="header-row">
                            <td class="header-cell">
                                <span class="placeholder-ProductCategoriesWidget" />
                            </td>
                        </tr>

                        <tr class="content-row">
                            <td class="content-cell">
                                <div class="content-container">
                                    <span class="placeholder-ProductListWidget" />
                                </div>
                            </td>
                        </tr>
                    </table>
                </div>
            </t>
        </t>
    </t>

    <t t-extend="ProductCategoriesWidget">
        <t t-jquery="div" t-operation="replace">
            <div>
                <header class='rightpane-header'>
                    <div class="breadcrumbs">
                        <span class="breadcrumb">
                            <span class=" breadcrumb-button breadcrumb-home js-category-switch">
                                <i class='fa fa-home'></i>
                            </span>
                        </span>
                        <t t-foreach="widget.breadcrumb" t-as="category">
                            <span class="breadcrumb">
                                <img src="/point_of_sale/static/src/img/bc-arrow-big.png" class="breadcrumb-arrow" />
                                <span class="breadcrumb-button js-category-switch" t-att-data-category-id="category.id">
                                    <t t-esc="category.name"/>
                                </span>
                            </span>
                        </t>
                    </div>
                    <div class="searchbox">
                        <input placeholder="Search Products" />
                        <span class="search-clear"></span>
                    </div>
                </header>
                <div>
                    <div class="categories">
                        <div class="category-list-scroller touch-scrollable">
                            <div class="category-list">
                            </div>
                        </div>
                    </div>
                </div>
                <!--<t t-if="widget.subcategories.length > 0">-->
                <!--</t>-->
            </div>
        </t>
    </t>

    <t t-extend="NewWalkInCustomerButton">
        <t t-jquery=".control-button" t-operation="replace">
            <button class="control-button btn btn-default btn-fill main_button"><i class="pe-7s-note2"/> Walk In Customer</button>
        </t>
    </t>

     <t t-extend="SubmitOrderButton">
        <t t-jquery="button" t-operation="replace">
            <button class="control-button btn btn-default btn-fill control-button order-submit main_button"><i class="pe-7s-share"/> Order</button>
        </t>
    </t>

    <!--<t t-extend="NewOrderlineNoteButton">-->
        <!--<t t-jquery=".control-button" t-operation="replace">-->
            <!--<button class="control-button btn btn-default btn-fill main_button"><i class="pe-7s-note2"/> Note</button>-->
        <!--</t>-->
    <!--</t>-->

    <!--Misc button-->
    <t t-name="MiscButton">
        <button class="control-button btn btn-default btn-fill main_button" id="misc"><i class=""/>Misc</button>
    </t>

    <t t-name="Orderline">
        <t t-jquery=".orderline" t-operation="replace">
            <li t-attf-class="orderline #{ line.selected ? 'selected' : '' }">
                <div style="display: inline-block;width: 50%;">
                    <span class="product-name">
                        <t t-esc="line.get_product().display_name"/>
                         <t t-if="line.get_product().tracking!=='none'">
                             <i t-attf-class="oe_link_icon fa fa-list oe_icon line-lot-icon #{line.has_valid_product_lot() ? 'oe_green' : 'oe_red' }"/>
                         </t>
                    </span>
                </div>
                <div style="display: inline-block;">
                    <ul class="info-list">
                         <t t-if="line.get_quantity_str() !== '1' || line.selected ">
                             <li class="info">
                                 <em>
                                     <t t-esc="line.get_quantity_str()" />
                                 </em>
                                 <t t-esc="line.get_unit().name" />
                                 @
                                 <t t-esc="widget.format_currency(line.get_unit_display_price(),'Product Price')" />
                                 /
                                 <t t-esc="line.get_unit().name" />
                             </li>
                         </t>
                         <t t-if="line.get_discount_str() !== '0'">
                             <li class="info">
                                 With a
                                 <em>
                                     <t t-esc="line.get_discount_str()" />%
                                 </em>
                                 discount
                             </li>
                         </t><br/>
                    </ul>
                </div>
                <span class="price">
                    <t t-esc="widget.format_currency(line.get_display_price())"/>
                </span>
            </li>
        </t>
        <t t-jquery=".control-button priority highlight" t-operation="replace">
		</t>
        <t t-jquery="control-button cancel highlight" t-operation="replace">
		</t>
    </t>

    <t t-extend="UsernameWidget">
        <t t-jquery=".username" t-operation="replace">
            <span class="username">
                <t t-esc="widget.get_name()" />
            </span>
            <span class="session_infos">
                <t t-if="widget.pos.config.name">
                    <t t-esc="widget.pos.config.name"/>
                </t>
                <t t-if="widget.pos.config.branch_id">
                    <span>, Branch Name: <t t-esc="widget.pos.config.branch_id[1]" /></span>
                </t>
                <t t-if="widget.pos.current_date">
                    <span>, Create date: <t t-esc="widget.pos.current_date"/></span>
                </t>
            </span>
            <span class="customer_name">
            </span>
        </t>
    </t>

    <!--Hidden periority buttons-->
    <t t-extend="ButtonExitHighPriority">
        <t t-jquery=".control-button" t-operation="replace">
            <button class="btn btn-default btn-fill btn-wd control-button" style="display:none;"><i class="pe-7s-bottom-arrow"/> Exit priority</button>
        </t>
    </t>

    <t t-extend="ButtonHighPriority">
        <t t-jquery=".control-button" t-operation="replace">
            <button class="btn btn-default btn-fill btn-wd control-button" style="display:none;"><i class="pe-7s-gleam"/> High Priority</button>
        </t>
    </t>


    <!--New customer name popup on button-->
    <t t-name="NewWalkInCustomerButton">
        <button class="control-button btn btn-default btn-fill main_button"><i class="pe-7s-note2"/> Walk In Customer</button>
    </t>

    <t t-extend="OrderSelectorWidget">
        <t t-jquery="order-selector" t-operation="append">
            <t t-if="widget.pos.walk_customer">
                <t t-esc="widget.pos.walk_customer"/>
            </t>
        </t>
    </t>

</template>

