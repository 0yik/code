<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    	<record id="view_royality_fees_form_view" model="ir.ui.view">
            <field name="name">view.royality.fees.form.view</field>
            <field name="model">royalti.fees</field>
            <field name="arch" type="xml">
                <form string="Royalti Fees">
                	<sheet>
                		<group>
                			<group>
                				<field name="name" required="True"/>
                			</group>
                			<group>
								<field name="code"/>                				
                			</group>
                		</group>
                		<group string="Calculations">
                			<group>
                				<field name="type" required="True"/>
                				<field name="duration" required="True"/>
                			</group>
                			<group>
                				<field name="tax_id"/>
                				<field name="account_id"/>
                			</group>
                		</group>
                	</sheet>
                </form>
            </field>
        </record>
        
        <record id="view_royality_fees_tree_view" model="ir.ui.view">
            <field name="name">view.royality.fees.tree.view</field>
            <field name="model">royalti.fees</field>
            <field name="arch" type="xml">
                <tree string="Royalti Fees">
                	<field name="name"/>
                	<field name="code"/> 
                	<field name="type"/>
                	<field name="duration"/>
                </tree>
            </field>
        </record>
        
        <record id="action_royality_fees" model="ir.actions.act_window">
            <field name="name">Royalti Fees</field>
            <field name="res_model">royalti.fees</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
		
		<menuitem id="royality_fees_menu" action="action_royality_fees" parent="school_fees.menu_student_fees_structure_form" string="Royalty Fees"/>
    </data>
</odoo>