<odoo>
    <data>

        <record id="view_franchiseManagement_form" model="ir.ui.view">
            <field name="name">franchise.management.form</field>
            <field name="model">franchise.management</field>
            <field name="arch" type="xml">
                <form string="Franchise Configuration">
                    <sheet>
                        <separator string="Franchise Configuration" />
                        <group>
                            <group>
                                <field name="name" string="Franchise Name" placeholder="Franchise Name" />
                            </group>
                            <group>
                                <field name="code" placeholder="Code" />
                                <field name="royalty" />
                            </group>
                        </group>

                        <group>
                            <label for="street" string="Address" />
                            <div class="o_address_format">
                                <field name="street" class="o_address_street" placeholder="Street..." />
                                <field name="street2" class="o_address_street" placeholder="Street2..." />
                                <field name="city" class="o_address_city" placeholder="City" required="1" />
                                <field name="state_id" class="o_address_state" domain="[('country_id','=',country_id)]" required="1" placeholder="State" options="{&quot;no_open&quot;: true}" />
                                <field name="zip" class="o_address_zip" placeholder="ZIP" />
                                <field name="country_id" class="o_address_city,oe_no_button" placeholder="Country"  options="{&quot;no_open&quot;: true}" required="1"/>
                            </div>
                        </group>
                        <group col="4" colspan="4">
                            <field name="currency_id" placeholder="Select Or Create Currency" />
                            <field name="lang" placeholder="Language"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="view_franchiseManagement_tree" model="ir.ui.view">
            <field name="name">franchise.management.tree</field>
            <field name="model">franchise.management</field>
            <field name="arch" type="xml">
                <tree string="Franchise Information">
                    <field name="name" string="Franchise Name" />
                    <field name="code" />
                </tree>
            </field>
        </record>


        <record id="action_franchiseManagement_form" model="ir.actions.act_window">
            <field name="name">Franchise Configuration</field>
            <field name="res_model">franchise.management</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_franchiseManagement" name="Franchise" parent="school.menu_school_config_form1" action="action_franchiseManagement_form" />




        <record id="view_school_school_form_inh" model="ir.ui.view">
            <field name="name">school.school.inherit</field>
            <field name="model">school.school</field>
            <field name="inherit_id" ref="school.view_school_school_form"/>
            <field name="arch" type="xml">
                <field name="code" position="after">
                    <field name="is_franchise" />
                    <field name="franchise_id" attrs="{'invisible':[('is_franchise','=',False)]}"/>
                </field>
            </field>
        </record>


    </data>
</odoo>