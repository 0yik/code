<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
    
        <!-- Set Paper Format for the Employee's Appointment Letter -->
        <record id="emp_appoint_report_paperformat" model="report.paperformat">
            <field name="name">Employee Appointment</field>
            <field name="default" eval="True" />
            <field name="format">custom</field>
            <field name="page_height">170</field>
            <field name="page_width">210</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">40</field>
            <field name="margin_bottom">6</field>
            <field name="margin_left">4</field>
            <field name="margin_right">4</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">35</field>
            <field name="dpi">90</field>
            <field name="report_ids" eval="[(4, (ref('appointment_letter_yamaha.report_appointment_letter'),))]"/>
        </record>

     </data>
</odoo>