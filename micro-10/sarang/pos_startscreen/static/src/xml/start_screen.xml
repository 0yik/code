                    <button class="button icon delivery_btn" data-action='3'><img src="/pos_startscreen/static/src/img/delivery.png"></img><span>Delivery</span></button>
	            </div>
				<br/>
				<!--<div class='popup-option scnd'>-->
					<!--<button class="button icon staffmeal_btn" data-action='4'><img src="/pos_startscreen/static/src/img/staff_meal.png"></img><span>Staff Meal</span></button>-->
