<?xml version="1.0" encoding="utf-8"?>
<template id="template" xml:space="preserve">
	<t t-extend="Orderline">
            <t t-jquery="li:first" t-operation="replace">
            <div t-attf-class="orderline #{ line.selected ? 'selected' : '' }">
                <div style="display: flex;padding-right:0px">
                <span style="flex:3.5">
                    <span><t t-esc="line.get_product().display_name"/><t t-if="line.get_discount_str() !== '0'">(<t t-esc="line.get_discount_str()" />% disc)</t><t t-if="line.is_complimentary">(Compl)</t></span>
                    <t t-if="line.is_priority"><span style="color:#00ff00">(Priority)</span></t>
                </span>
                <span style="flex:1;text-align: center;"><div style="padding-left: 0px;"><t t-esc="line.quantity" /></div></span>
                <span style="flex:2;text-align: right;"><div style="padding-left: 0px;"><t t-esc="widget.format_currency_orderline(line.get_unit_display_price())" /></div></span>
                <span style="flex:3;text-align: right;"><div style="padding-right: 0px;"><t t-esc="widget.format_currency_orderline(line.get_display_price())"/></div></span>
                <span style="flex:1.3;text-align: center;"><div style="padding-left: 35px;"><span t-if="line.state" t-att-class="line.state"><i class="fa fa-bullhorn"/></span></div></span>
                 <!-- <span style="flex:1;overflow:hidden;margin-left:7px;"><t t-if="line.get_note()"><button class="note-col oe_hidden" style="padding:5px">View</button></t></span> -->
                </div>
                <span>
               <t t-if="line.get_displaynote()">
                        <t t-foreach="line.get_displaynote()" t-as="note">
                                <div><t t-esc="note"/></div>
                        </t>
                </t>
                </span>
            </div>
        </t>
    	</t>

    <t t-extend="NewOrderlineNoteButton">
         <t t-jquery="button" t-operation="replace">
        </t>
    </t>
    <t t-extend="OrderlineNoteButton">
        <t t-jquery=".control-button" t-operation="replace">
        </t>
    </t>
    <t t-name="NewOrderlineNoteButton1">
         <button class="control-button btn btn-default btn-fill btn-wd note-button"><i class="pe-7s-note2"/> Note11</button>
    </t>

</template>