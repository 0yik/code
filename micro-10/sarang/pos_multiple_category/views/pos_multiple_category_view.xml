<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="replace_product_template_pos_categ_field" model="ir.ui.view">
          <field name="name">product.template.line</field>
          <field name="model">product.template</field>
          <field name="inherit_id" ref="point_of_sale.product_template_form_view"/>
          <field name="arch" type="xml">
              <xpath expr="//field[@name='pos_categ_id']" position="after">
                  <field name="pos_categ_ids" widget="many2many_tags"/>
              </xpath>
              <xpath expr="//field[@name='pos_categ_id']" position="attributes">
                  <attribute name="invisible">1</attribute>
              </xpath>
          </field>
    </record>
</odoo>